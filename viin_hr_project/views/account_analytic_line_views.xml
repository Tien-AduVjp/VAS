<odoo>
		<!--Add field department in time sheet tree view-->
		<record id="hr_timesheet_department_line_tree" model="ir.ui.view">
			<field name="name">account.analytic.line.tree.hr_timesheet.department</field>
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"></field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='task_id']" position="after">
					<field name="department_id" optional="hide" />
				</xpath>
			</field>
		</record><!--End-->

		<record id="timesheet_action_report_by_department"
			model="ir.actions.act_window">
			<field name="name">Timesheets By Department</field>
			<field name="res_model">account.analytic.line</field>
			<field name="domain">[('project_id', '!=', False), ('employee_id', '!=', False)]</field>
			<field name="context">{'search_default_groupby_department':1,}</field>
			<field name="search_view_id"
				ref="hr_timesheet.hr_timesheet_line_search" />
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Record a new activity
				</p>
				<p>
					You can register and track your workings hours by project every
					day. Every time spent on a project will become a cost and can be
					re-invoiced to
					customers if required.
				</p>
			</field>
		</record>

		<record id="timesheet_action_view_report_by_department_pivot"
			model="ir.actions.act_window.view">
			<field name="sequence" eval="5" />
			<field name="view_mode">pivot</field>
			<field name="view_id"
				ref="hr_timesheet.view_hr_timesheet_line_pivot" />
			<field name="act_window_id"
				ref="timesheet_action_report_by_department" />
		</record>

		<record id="timesheet_action_view_report_by_department_graph"
			model="ir.actions.act_window.view">
			<field name="sequence" eval="6" />
			<field name="view_mode">graph</field>
			<field name="view_id"
				ref="hr_timesheet.view_hr_timesheet_line_graph" />
			<field name="act_window_id"
				ref="timesheet_action_report_by_department" />
		</record>

		<record id="timesheet_action_view_report_by_department_tree"
			model="ir.actions.act_window.view">
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_timesheet.hr_timesheet_line_tree" />
			<field name="act_window_id"
				ref="timesheet_action_report_by_department" />
		</record>

		<record id="timesheet_action_view_report_by_department_form"
			model="ir.actions.act_window.view">
			<field name="sequence" eval="15" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_timesheet.hr_timesheet_line_form" />
			<field name="act_window_id"
				ref="timesheet_action_report_by_department" />
		</record>

		<menuitem id="timesheet_menu_report_timesheet_by_department"
			parent="hr_timesheet.menu_timesheets_reports_timesheet"
			action="timesheet_action_report_by_department"
			name="By Department"
			sequence="13" />
</odoo>
