<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_af_dynamic_report_form" model="ir.ui.view">
			<field name="name">account.financial.dynamic.report.form</field>
			<field name="model">account.financial.dynamic.report</field>
			<field name="arch" type="xml">
				<form string="Account Report">
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="template_ref" />
								<field name="date_range" />
								<field name="comparison" />
								<field name="analytic" />
								<field name="show_journal_filter" />
								<field name="unfold_all_filter" />
								<field name="hierarchy_option" />
							</group>
							<group>
								<field name="debit_credit" />
								<field name="tax_report" />
								<field name="generated_menu_id" />
								<field name="company_id" groups="base.group_multi_company" />
								<field name="show_report_code" />
								<field name="show_report_note" />
								<field name="show_parent_line_first"/>
							</group>
							<field colspan="5" name="line_ids" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_af_dynamic_report_tree" model="ir.ui.view">
			<field name="name">account.financial.dynamic.report.tree</field>
			<field name="model">account.financial.dynamic.report</field>
			<field name="arch" type="xml">
				<tree string="Account Report">
					<field name="name" />
					<field name="parent_id" />
				</tree>
			</field>
		</record>
		<record id="action_af_dynamic_report_tree"
			model="ir.actions.act_window">
			<field name="name">Financial Reports</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.financial.dynamic.report</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_af_dynamic_report_tree" />
		</record>

		<record id="view_af_dynamic_report_line_form"
			model="ir.ui.view">
			<field name="name">account.financial.dynamic.report.line.form</field>
			<field name="model">account.financial.dynamic.report.line</field>
			<field name="arch" type="xml">
				<form string="Report Line">
					<group>
						<group string="Main Info">
							<field name="name" />
							<field name="code" />
							<field name="report_code" />
							<field name="show_report_code" groups="base.group_no_one" />
							<field name="report_note" />
							<field name="show_report_note" groups="base.group_no_one" />
							<field name="show_on_pdf" groups="base.group_no_one" />
							<field name="sequence" />
							<field name="parent_id" />
						</group>
						<group string="Computation">
							<field name="formulas" />
							<field name="domain" widget="domain" options="{'model': 'account.move.line', 'in_dialog': True}"/>
							<field name="groupby" />
							<field name="special_date_changer" />
							<field name="duration_term" />
							<field name="duration_term_date_field"
								attrs="{'invisible':[('duration_term','=','normal')]}" />
							<field name="duration_term_direction"
								attrs="{'invisible':[('duration_term','=','normal')], 'required':[('duration_term','!=','normal')]}" />
							<field name="duration_term_base_on"/>
						</group>
						<group string="Cosmetics">
							<field name="level" />
							<field name="green_on_positive" />
							<field name="figure_type" />
							<field name="show_domain" />
						</group>
						<group string="Children Lines">
							<field name="children_ids" nolabel="1" />
						</group>
					</group>
				</form>
			</field>
		</record>
		<record id="view_af_dynamic_report_line_tree"
			model="ir.ui.view">
			<field name="name">account.financial.dynamic.report.line.tree</field>
			<field name="model">account.financial.dynamic.report.line</field>
			<field name="arch" type="xml">
				<tree string="Report Lines">
					<field name="sequence" widget="handle" />
					<field name="name" />
					<field name="code" />
					<field name="report_code" />
					<field name="formulas" />
					<field name="level" />
					<field name="figure_type" />
				</tree>
			</field>
		</record>

		<menuitem id="menu_account_financial_reports_tree"
			name="Financial Reports" parent="account.account_management_menu"
			action="action_af_dynamic_report_tree" groups="base.group_no_one" />
	</data>
</odoo>
