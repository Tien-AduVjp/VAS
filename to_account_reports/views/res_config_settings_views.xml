<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="to_enterprise_marks_account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="dynamic_report" position="attributes">
                <attribute name="attrs">{'invisible': [('module_to_account_reports', '!=', False)]}</attribute>
            </div>
            <xpath expr="//div[./div[hasclass('o_setting_left_pane')]/field[@name='qr_code']]" position="after">
            	<div class="col-lg-6 o_setting_box" id="payment_follow_up" groups="account.group_account_user">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Payment Follow-up</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." role="img" aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Duration between two reminders
                        </div>
                        <div class="content-group mt16">
                            Minimum <field name="days_between_two_followups" class="text-center oe_inline" /> days between each reminder
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
