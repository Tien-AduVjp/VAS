<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<!-- PROFIT AND LOSS -->
		<record id="af_dynamic_report_profitandloss0"
			model="account.financial.dynamic.report">
			<field name="name">Profit and Loss</field>
			<field name="debit_credit" eval="False" />
			<field name="analytic" eval="True" />
			<field name="unfold_all_filter" eval="True" />
			<field name="show_journal_filter" eval="True" />
			<field name="show_parent_line_first" eval="True" />
			<field name="parent_id"
				ref="af_dynamic_reports_legal_statements_menu" />
		</record>

		<record id="action_af_report_pnl"
			model="ir.actions.client">
			<field name="name">Profit And Loss</field>
			<field name="tag">af_report_generic</field>
			<field name="context"
				eval="{'model': 'account.financial.dynamic.report', 'id': ref('af_dynamic_report_profitandloss0')}" />
		</record>

		<!-- BALANCE SHEET -->
		<record id="af_dynamic_report_balancesheet0"
			model="account.financial.dynamic.report">
			<field name="name">Balance Sheet</field>
			<field name="debit_credit" eval="False" />
			<field name="date_range" eval="False" />
			<field name="analytic" eval="True" />
			<field name="unfold_all_filter" eval="True" />
			<field name="show_parent_line_first" eval="True" />
			<field name="parent_id"
				ref="af_dynamic_reports_legal_statements_menu" />
		</record>

		<record id="action_af_report_bs" model="ir.actions.client">
			<field name="name">Balance Sheet</field>
			<field name="tag">af_report_generic</field>
			<field name="context"
				eval="{'model': 'account.financial.dynamic.report', 'id': ref('af_dynamic_report_balancesheet0')}" />
		</record>

		<!-- CASH SUMMARY -->
		<record id="af_dynamic_report_cashsummary0"
			model="account.financial.dynamic.report">
			<field name="name">Cash Flow Statement</field>
			<field name="unfold_all_filter" eval="True" />
			<field name="show_parent_line_first" eval="True" />
			<field name="parent_id"
				ref="af_dynamic_reports_legal_statements_menu" />
		</record>
		<record id="action_af_report_cs" model="ir.actions.client">
			<field name="name">Cash Flow Statement</field>
			<field name="tag">af_report_generic</field>
			<field name="context"
				eval="{'model': 'account.financial.dynamic.report', 'id': ref('af_dynamic_report_cashsummary0')}" />
		</record>
		
		<record id="action_af_report_analytic" model="ir.actions.client">
            <field name="name">Analytic Report</field>
            <field name="tag">af_report_generic</field>
            <field name="context" eval="{'model': 'account.analytic.report'}" />
        </record>

		<!-- EXECUTIVE SUMMARY -->
		<record id="af_dynamic_report_executivesummary0"
			model="account.financial.dynamic.report">
			<field name="name">Executive Summary</field>
			<field name="show_parent_line_first" eval="True" />
			<field name="parent_id"
				ref="af_dynamic_reports_biz_statements_menu" />
		</record>
	</data>
</odoo>
