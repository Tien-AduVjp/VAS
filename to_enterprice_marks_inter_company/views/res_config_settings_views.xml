<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.inter.company.rules
			</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@id='inter_company']" position='replace'>
					<div class="col-12 col-lg-6 o_setting_box" title="Configure company rules to automatically create SO/PO when one of your company sells/buys to another of your company." groups="base.group_multi_company" id="inter_company">
						<div class="o_setting_left_pane">
							<field name="module_to_inter_company_base"/>
						</div>
						<div class="o_setting_right_pane">
							<label string="Inter-Company Transactions" for="module_to_inter_company_base" />
							<div class="text-muted">
								Automate inter-company transactions
							</div>
							<div class="content-group"
								attrs="{'invisible': [('module_to_inter_company_base','=',False)]}"
								id="inter_companies_setting">
							</div>
						</div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
