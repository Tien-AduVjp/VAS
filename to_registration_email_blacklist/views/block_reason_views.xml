<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_block_reason_form">
			<field name="name">block.reason.form</field>
			<field name="model">block.reason</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" />
							<field name="solution" />
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids"   />
						<field name="message_ids"  />
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_block_reason_tree">
			<field name="name">block.reason.list</field>
			<field name="model">block.reason</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="solution" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_block_reason">
			<field name="name">Registration Emails Block Reasons</field>
			<field name="res_model">block.reason</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>
