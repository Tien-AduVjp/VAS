<odoo>

	<record id="hr_employee_action_meal_order_line" model="ir.actions.act_window">
		<field name="name">Employee Meals</field>
		<field name="res_model">hr.meal.order.line</field>
		<field name="binding_model_id" ref="model_hr_employee" />
		<field name="view_mode">pivot,graph,tree</field>
		<field name="view_id" ref="hr_meal_order_line_view_pivot" />
		<field name="domain">[('state', '=', 'approved')]</field>
		<field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
	</record>

	<record id="view_employee_form" model="ir.ui.view">
		<field name="name">hr.employee.form</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<div name="button_box" position="inside">
				<button name="%(hr_employee_action_meal_order_line)d" type="action"
					class="oe_stat_button" icon="fa-cutlery"
					groups="to_hr_meal.hr_meal_group_user">
					<field string="Meals" name="meals_count" widget="statinfo"
						groups="to_hr_meal.hr_meal_group_user" />
				</button>
			</div>
			<xpath expr="//notebook/page[@name='hr_settings']"
				position="inside">
				<group>
					<group string="Meals" name="meal_group">
						<field name="order_meal" groups="hr.group_hr_user" />
					</group>
				</group>
			</xpath>
		</field>
	</record>

</odoo>
