<odoo>

	<record id="hr_meal_type_alert_view_form" model="ir.ui.view">
		<field name="name">hr.meal.type.alert.form</field>
		<field name="model">hr.meal.type.alert</field>
		<field name="arch" type="xml">
			<form string="Meal Type Alert">
				<sheet>
					<h1>
						<field name="name" />
					</h1>
					<group>
						<field name="scheduled_hour" widget="float_time" />
					</group>
					<label for="message" />
					<field name="message" />
				</sheet>
			</form>
		</field>
	</record>

	<record id="hr_meal_type_alert_view_tree" model="ir.ui.view">
		<field name="name">hr.meal.type.alert.tree</field>
		<field name="model">hr.meal.type.alert</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="HR Meal Types">
				<field name="name" />
				<field name="scheduled_hour" widget="float_time" />
				<field name="message" />
			</tree>
		</field>
	</record>

	<record id="hr_meal_type_alert_action" model="ir.actions.act_window">
		<field name="name">HR Meal Type Alerts</field>
		<field name="res_model">hr.meal.type.alert</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
	</record>

	<menuitem id="hr_meal_type_alert_menu" name="Meal Type Alert"
		parent="hr_meal_config_menu" sequence="2"
		action="hr_meal_type_alert_action" />

</odoo>
