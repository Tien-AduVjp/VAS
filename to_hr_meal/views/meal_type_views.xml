<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_meal_type_form_view" model="ir.ui.view">
			<field name="name">hr.meal.type.form</field>
			<field name="model">hr.meal.type</field>
			<field name="arch" type="xml">
				<form string="HR Meal Type">
					<sheet>
						<h1>
							<field name="name" />
						</h1>
						<group>
							<group>
								<field name="alert_id" />
								<field name="scheduled_hour" />

							</group>
							<group>
								<field name="price" />
							</group>
						</group>
						<label for="description" />
						<field name="description" />
					</sheet>
				</form>
			</field>
		</record>

		<record id="hr_meal_type_tree_view" model="ir.ui.view">
			<field name="name">hr.meal.type.tree</field>
			<field name="model">hr.meal.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="HR Meal Types">
					<field name="name" />
					<field name="alert_id" />
					<field name="price" />
				</tree>
			</field>
		</record>

		<record id="hr_meal_type_action" model="ir.actions.act_window">
			<field name="name">HR Meal Types</field>
			<field name="res_model">hr.meal.type</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>
		<menuitem id="hr_meal_type_menu" name="Meal Type" parent="hr_meal_config_menu"
			sequence="1" action="hr_meal_type_action" />
	</data>
</odoo>