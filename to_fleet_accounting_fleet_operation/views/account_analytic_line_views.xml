<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="view_account_analytic_line_form">
			<field name="name">account.analytic.line.form</field>
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="to_fleet_accounting.view_account_analytic_line_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vehicle_id']" position="before">
					<field name="trip_id" />
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_account_analytic_line_filter">
			<field name="name">account.analytic.line.select</field>
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="to_fleet_accounting.view_account_analytic_line_filter" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vehicle_id']" position="before">
					<field name="trip_id" />
				</xpath>
				<xpath expr="//group[@name='groupby']/filter[@name='vehicle_id']" position="before">
					<filter string="Trip" context="{'group_by':'trip_id'}" name="trip_id"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
