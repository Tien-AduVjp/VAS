<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_point_view_tree" model="ir.ui.view">
		<field name="name">quality.point.tree.inherit</field>
		<field name="model">quality.point</field>
		<field name="inherit_id" ref="to_quality.quality_point_view_tree"/>
		<field name="arch" type="xml">
			<field name="type_id" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</field>
		</field>
	</record>

	<record id="quality_point_view_form" model="ir.ui.view">
		<field name="name">quality.point.form.inherit</field>
		<field name="model">quality.point</field>
		<field name="inherit_id" ref="to_quality.quality_point_view_form"/>
		<field name="arch" type="xml">
			<field name="type_id" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')], 'required': [('quality_type', '=', 'product')]}"/>
				<field name="product_id" groups="product.group_product_variant" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</field>
			<field name="team_id" position="before">
				<label for="quantity_to_check" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
				<div class="o_row" attrs="{'invisible': [('quality_type', '!=', 'product')]}">
					<field name="quantity_to_check"/>
					%
				</div>
			</field>
		</field>
	</record>

	<record id="quality_point_view_kanban" model="ir.ui.view">
		<field name="name">quality.point.kanban.inherit</field>
		<field name="model">quality.point</field>
		<field name="inherit_id" ref="to_quality.quality_point_view_kanban"/>
		<field name="arch" type="xml">
			<field name="name" position="after">
				<field name="product_tmpl_id"/>
			</field>
			<xpath expr="//t[@t-name='kanban-box']/div" position="inside">
				<div attrs="{'invisible': [('quality_type', '!=', 'product')]}">
					<strong>Product template:</strong>
					<t t-esc="record.product_tmpl_id.value"/>
				</div>
			</xpath>
		</field>
	</record>

	<record id="quality_point_view_search" model="ir.ui.view">
		<field name="name">quality.point.search.inherit</field>
		<field name="model">quality.point</field>
		<field name="inherit_id" ref="to_quality.quality_point_view_search"/>
		<field name="arch" type="xml">
			<field name="team_id" position="after">
				<field name="product_tmpl_id" />
				<field name="product_id" groups="product.group_product_variant" />
			</field>
		</field>
	</record>

</odoo>
