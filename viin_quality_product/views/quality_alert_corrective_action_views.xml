<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_alert_corrective_action_view_tree" model="ir.ui.view">
		<field name="name">quality.alert.corrective.action.tree.inherit</field>
		<field name="model">quality.alert.corrective.action</field>
		<field name="inherit_id" ref="to_quality.quality_alert_corrective_action_view_tree"/>
		<field name="arch" type="xml">
			<field name="type_id" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</field>
		</field>
	</record>

	<record id="quality_alert_corrective_action_view_form" model="ir.ui.view">
		<field name="name">quality.alert.corrective.action.form</field>
		<field name="model">quality.alert.corrective.action</field>
		<field name="inherit_id" ref="to_quality.quality_alert_corrective_action_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='other']" position="inside">
				<group attrs="{'invisible': [('quality_type', '!=', 'product')]}">
					<field name="product_tmpl_id" />
					<field name="product_id" />
				</group>
			</xpath>
		</field>
	</record>

</odoo>
