<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_alert_view_tree" model="ir.ui.view">
		<field name="name">quality.alert.tree.inherit</field>
		<field name="model">quality.alert</field>
		<field name="inherit_id" ref="to_quality.quality_alert_view_tree"/>
		<field name="arch" type="xml">
			<field name="type_id" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
				<field name="product_id" groups="product.group_product_variant" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</field>
		</field>
	</record>

	<record id="quality_alert_view_form" model="ir.ui.view">
		<field name="name">quality.alert.form.inherit</field>
		<field name="model">quality.alert</field>
		<field name="inherit_id" ref="to_quality.quality_alert_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[1]" position="after">
				<group>
					<group name="product" attrs="{'invisible': [('quality_type', '!=', 'product')]}">
						<field name="product_tmpl_id" attrs="{'required': [('quality_type', '=', 'product')]}"/>
						<field name="product_id"
							groups="product.group_product_variant" />
					</group>
				</group>
			</xpath>
			<xpath expr="//page[@name='corrective_actions']/field[@name='action_corrective_ids']/tree/field[@name='type_id']" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</xpath>
			<xpath expr="//page[@name='preventive_actions']/field[@name='action_preventive_ids']/tree/field[@name='type_id']" position="after">
				<field name="product_tmpl_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</xpath>
		</field>
	</record>

	<record id="quality_alert_view_search" model="ir.ui.view">
		<field name="name">quality.alert.search</field>
		<field name="model">quality.alert</field>
		<field name="inherit_id" ref="to_quality.quality_alert_view_search"/>
		<field name="arch" type="xml">
			<field name="tag_ids" position="after">
				<field name="product_id" />
			</field>
		</field>
	</record>

	<record id="quality_alert_view_kanban" model="ir.ui.view">
		<field name="name">quality.alert.kanban.inherit</field>
		<field name="model">quality.alert</field>
		<field name="inherit_id" ref="to_quality.quality_alert_view_kanban"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='team_id']/parent::div" position="before">
				<div attrs="{'invisible': [('quality_type', '!=', 'product')]}">
					<field name="product_tmpl_id" />
				</div>
			</xpath>
		</field>
	</record>

</odoo>
