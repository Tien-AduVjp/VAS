<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_equipment_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_workcenter" type="object" class="oe_stat_button"
                    icon="fa-cogs" string="WorkCenter" attrs="{'invisible': [('workcenter_id', '=', False)]}">
                </button>
            </xpath>
            <field name="location" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
			<xpath expr="//group/group" position="inside">
				<field name="location"/>
                <field name="workcenter_id"/>
            </xpath>
            <xpath expr="//group[@name='maintenance']" position="after">
                <group name="statistisc">
					<field name="latest_failure_date" string="Latest Failure" class="oe_read_only"/>
                    <label for="expected_mtbf" string="Expected Mean Time Between Failure"/>
                    <div class="o_row">
                        <field name="expected_mtbf"/> days
                    </div>
                    <label for="mtbf" string="Mean Time Between Failure"/>
                    <div class="o_row">
                        <field name="mtbf" class="oe_read_only"/> days
                    </div>
                    <label for="mttr" string="Mean Time To Repair"/>
                    <div class="o_row">
                        <field name="mttr" class="oe_read_only"/> days
                    </div>
					<label for="estimated_next_failure" string="Estimated Next Failure"/>
                    <div class="o_row">
                        <field name="estimated_next_failure" class="oe_read_only"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_equipment_dashboard" name="Machines &amp; Tools" parent="maintenance.menu_equipment_form"
        action="maintenance.hr_equipment_action"
        sequence="10"/>
</odoo>
