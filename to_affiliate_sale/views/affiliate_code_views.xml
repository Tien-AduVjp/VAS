<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="affiliate_code_form_view" model="ir.ui.view">
			<field name="name">affiliate.code.form</field>
			<field name="model">affiliate.code</field>
			<field name="inherit_id"
				ref="to_affiliate.affiliate_code_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
					<button name="action_view_client_sale_orders" type="object"
						groups="sales_team.group_sale_salesman" class="oe_stat_button"
						attrs="{'invisible':[('sale_orders_count','=',0)]}"
						icon="fa-usd"
						help="Client Sales Orders that were referred by affiliate code.">
						<field name="sale_orders_count" widget="statinfo" />
					</button>
				</xpath>

			</field>
		</record>
	</data>
</odoo>
