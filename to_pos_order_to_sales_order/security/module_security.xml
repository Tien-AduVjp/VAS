<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="point_of_sale.group_pos_user" model="res.groups">
			<field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
		</record>
	</data>
	<data noupdate="0">
		<record id="sale_order_see_all" model="ir.rule">
			<field name="name">All PoS Sales Orders</field>
			<field ref="model_sale_order" name="model_id" />
			<field name="domain_force">[('pos_session_id','!=',False)]</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]" />
		</record>

		<record id="sale_order_line_see_all" model="ir.rule">
			<field name="name">All PoS Sales Orders Lines</field>
			<field ref="sale.model_sale_order_line" name="model_id" />
			<field name="domain_force">[('order_id.pos_session_id','!=',False)]</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]" />
		</record>
	</data>
</odoo>
