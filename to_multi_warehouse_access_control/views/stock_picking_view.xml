<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<menuitem id="stock.all_picking" name="All Transfers" parent="stock.menu_stock_warehouse_mgmt" sequence="2"
		 action="stock.action_picking_tree_all" groups="stock.group_stock_manager,stock.group_stock_user,to_multi_warehouse_access_control.group_stock_own_document_user"/>

	<record id="view_picking_form" model="ir.ui.view">
		<field name="name">stock.picking.form</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='button_validate']" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_stock_own_document_user" separator=","/>
			</xpath>
			<xpath expr="//button[@name='do_print_picking']" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_stock_own_document_user" separator=","/>
			</xpath>
		</field>
	</record>
</odoo>


