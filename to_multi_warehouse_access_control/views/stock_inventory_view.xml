<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="view_inventory_form" model="ir.ui.view">
		<field name="name">stock.inventory.form</field>
		<field name="model">stock.inventory</field>
		<field name="inherit_id" ref="stock.view_inventory_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_start']" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_stock_own_document_user" separator=","/>
			</xpath>
			<xpath expr="//button[@name='action_open_inventory_lines']" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_stock_own_document_user" separator=","/>
			</xpath>
			<xpath expr="//button[@name='action_validate'][1]" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_warehouse_manager" separator=","/>
			</xpath>
			<xpath expr="//button[@name='action_validate'][2]" position="attributes">
				<attribute name="groups" add="to_multi_warehouse_access_control.group_warehouse_manager" separator=","/>
			</xpath>
		</field>
	</record>
</odoo>


