<odoo>

	<record id="view_hr_payslip_form" model="ir.ui.view">
		<field name="name">payslip.form</field>
		<field name="model">hr.payslip</field>
		<field name="inherit_id" ref="to_hr_payroll.view_hr_payslip_form" />
		<field name="arch" type="xml">
			<xpath expr="//notebook/page/group[2]" position="after">
				<group>
					<label for="meals_count" />
					<div class="o_row">
						<field name="meals_count"/>
					</div>
				</group>
			</xpath>

			<xpath expr="//field[@name='worked_days_line_ids']" position="after">
				<separator string="Meal Order"/>
				<field name="meal_order_line_ids" nolabel="1">
					<tree name="meal_order_line_ids">
						<field name="meal_date" />
						<field name="quantity" />
						<field name="price" invisible="1" />
						<field name="total_price" />
						<field name="employee_price"  invisible="1" />
						<field name="employee_amount"/>
						<field name="state"/>
					</tree>
				</field>
			</xpath>
		</field>
	</record>

</odoo>
