<odoo>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.hr.meal</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id"
			ref="to_hr_payroll.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='hr_payroll_accountant']" position="after">
				<h2>Meal</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box" id="default_meal_emp_price">
						<div class="o_setting_right_pane">
							<span class="o_form_label">Employee Meal Price</span>
							<div class="text-muted">
								Set the price of meals that employees must pay
							</div>
							<div class="mt16 row">
								<label for="meal_emp_price" string="Price" class="col-2 col-lg-2 o_light_label" />
								<field name="meal_emp_price" />
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>
