<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.module.category" id="base.module_category_operations_geographical_routes">
            <field name="name">Geographical Routes</field>
            <field name="sequence">100</field>
        </record>
		<record id="to_geo_routes.group_user" model="res.groups">
			<field name="name">Geo-Routes Users</field>
			<field name="category_id" ref="base.module_category_operations_geographical_routes" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
			<field name="comment">the user will be able to create/edit routes and submit to Geo-Routes Manager for Validation</field>
		</record>
		<record id="to_geo_routes.group_manager" model="res.groups">
			<field name="name">Geo-Routes Managers</field>
			<field name="category_id" ref="base.module_category_operations_geographical_routes" />
			<field name="implied_ids" eval="[(4, ref('to_geo_routes.group_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
			<field name="comment">the user will be able to create/edit/validate routes</field>
		</record>
	</data>
</odoo>
