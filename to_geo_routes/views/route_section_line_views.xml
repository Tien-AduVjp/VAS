<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="route_section_line_form" model="ir.ui.view">
			<field name="name">route.section.line.form</field>
			<field name="model">route.section.line</field>
			<field name="arch" type="xml">
				<form string="Section Line Form" create="false" delete="false">
					<sheet>
						<group>
							<group>
								<field name="address_from_id" />
								<field name="route_id" />
								<field name="distance" />
								<field name="ave_speed" />
								<field name="sequence" />
							</group>
							<group>
								<field name="address_to_id" />
								<field name="section_id" />
								<field name="distance_in_miles" />
								<field name="est_trip_time" />
							</group>
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="route_section_line_tree" model="ir.ui.view">
			<field name="name">route.section.line.tree</field>
			<field name="model">route.section.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Routes" edit="false" create="false" delete="false">
					<field name="route_id" />
					<field name="section_id" />
					<field name="address_from_id" />
					<field name="address_to_id" />
					<field name="distance" />
					<field name="ave_speed" />
					<field name="est_trip_time" />
				</tree>
			</field>
		</record>

		<record id="geo_route_section_line_action" model="ir.actions.act_window">
			<field name="name">Route Section Line</field>
			<field name="res_model">route.section.line</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="geo_route_section_line_menu" parent="geo_route_root_menu"
			name="Route Section Lines" action="geo_route_section_line_action"
			sequence="6" groups="base.group_no_one" />

	</data>
</odoo>