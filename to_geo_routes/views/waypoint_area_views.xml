<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="route_waypoint_area_tree" model="ir.ui.view">
			<field name="name">route.waypoint.area.tree</field>
			<field name="model">route.waypoint.area</field>
			<field name="arch" type="xml">
				<tree string="Routes">
					<field name="name" />
					<field name="restricted_by" />
					<field name="partner_ids" groups="base.group_no_one" />
				</tree>
			</field>
		</record>

		<record id="route_waypoint_area_form" model="ir.ui.view">
			<field name="name">route.waypoint.area.form</field>
			<field name="model">route.waypoint.area</field>
			<field name="arch" type="xml">
				<form string="Routes">
					<sheet>
						<group>
							<field name="name" />
							<field name="restricted_by" />
						</group>
						<notebook>
							<page name="partner_ids" string="Partners">
								<field name="partner_ids" groups="base.group_no_one">
									<tree string="Partners" create="false" edit="false" nolabel="1">
										<field name="name" />
										<field name="street" />
										<field name="street2" />
										<field name="city" />
										<field name="state_id" />
										<field name="country_id" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="waypoint_area_action" model="ir.actions.act_window">
			<field name="name">Waypoint Area</field>
			<field name="res_model">route.waypoint.area</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="waypoint_area_menu" parent="geo_route_root_menu"
			name="Waypoint Areas" action="waypoint_area_action" sequence="10" />

	</data>
</odoo>