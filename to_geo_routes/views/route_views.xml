<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="route_tree" model="ir.ui.view">
			<field name="name">route.route.tree</field>
			<field name="model">route.route</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Routes" decoration-info="state=='draft'"
					decoration-muted="state=='cancelled'">
					<field name="code" />
					<field name="name" />
					<field name="departure_id" />
					<field name="destination_id" />
					<field name="waypoint_ids_count" />
					<field name="total_distance" />
					<field name="total_distance_in_miles" />
					<field name="average_speed" />
					<field name="est_trip_time" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record id="route_search_view" model="ir.ui.view">
			<field name="name">route.route.search</field>
			<field name="model">route.route</field>
			<field name="arch" type="xml">
				<search string="Search Routes">
					<field name="name" />
					<field name="departure_id" />
					<field name="destination_id" />
					<field name="address_ids" string="Addresses" />
					<field name="total_distance" />
					<field name="average_speed" />
					<field name="est_trip_time" />
					<filter string="Draft" name="draft"
						domain="[('state','=','draft')]" />
					<filter string="Confirmed" name="confirmed"
						domain="[('state','=','confirmed')]" />
					<filter string="Cancelled" name="cancelled"
						domain="[('state','=','cancelled')]" />
					<separator />
				</search>
			</field>
		</record>

		<record id="route_form" model="ir.ui.view">
			<field name="name">route.route.form</field>
			<field name="model">route.route</field>
			<field name="arch" type="xml">
				<form string="Routes">
					<header>

						<button name="action_confirm" states="draft"
							string="Confirm" type="object" class="oe_highlight"
							groups="to_geo_routes.group_user" />
						<button name="action_cancel" states="confirmed"
							string="Cancel" type="object" groups="to_geo_routes.group_user" />
						<button name="action_draft" states="cancelled"
							string="Set to Draft" type="object" class="oe_highlight" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,confirmed,cancelled" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
						</div>
						<h1>
							<field name="code" />
						</h1>
						<h2>
							<field name="name" />
						</h2>
						<group>
							<group>
								<field name="departure_id" />

								<field name="destination_id" />
							</group>
							<group>
								<label for="total_distance" />
								<div name="total_distance">
									<field name="total_distance" class="oe_inline" />
									km
								</div>
								<label for="average_speed" />
								<div name="average_speed">
									<field name="average_speed" class="oe_inline" />
									km/h
								</div>
								<label for="est_trip_time" />
								<div name="est_trip_time">
									<field name="est_trip_time" class="oe_inline" />
									hours
								</div>
							</group>
						</group>
						<notebook>
							<page name="waypoints" string="Waypoints">
								<field name="waypoint_ids" nolabel="1">
									<tree string="Waypoint" editable="bottom">
										<field name="sequence" widget="handle" />
										<field name="address_id" />
										<field name="waypoint_area_id"
											groups="base.group_no_one" />
										<field name="street" />
										<field name="street2" />
										<field name="city" />
										<field name="state_id" />
										<field name="country_id" />
									</tree>
								</field>
							</page>
							<page name="section_lines" string="Section Lines">
								<field name="route_section_line_ids" nolabel="1">
									<tree string="Sections Lines" create="0" editable="bottom">
										<field name="sequence" invisible="1" />
										<field name="section_id" invisible="1" />
										<field name="address_from_id" force_save="1" />
										<field name="address_to_id" force_save="1" />
										<field name="distance" />
										<field name="ave_speed" />
										<field name="est_trip_time" />
									</tree>
								</field>
							</page>
							<page name="address_ids" string="Passing Addresses"
								groups="base.group_no_one">
								<field name="address_ids" nolabel="1">
									<tree string="Sections Lines" create="0" editable="bottom">
										<field name="name" />
										<field name="street" />
										<field name="street2" />
										<field name="city" />
										<field name="state_id" />
										<field name="country_id" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="geo_route_action" model="ir.actions.act_window">
			<field name="name">Routes</field>
			<field name="res_model">route.route</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="geo_route_root_menu"
			parent="base.menu_administration" name="Geo-Routes" sequence="6" />
		<menuitem id="geo_route_menu" name="Routes"
			parent="geo_route_root_menu" action="geo_route_action" sequence="0" />

	</data>
</odoo>