<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="base.module_category_version_controls_git" model="ir.module.category">
        	<field name="name">Git</field>
            <field name="description">Helps you manage your source code and control its version with Git.</field>
            <field name="sequence">1</field>
        </record>

		<!-- Groups Data -->
		<record id="group_to_git_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="base.module_category_version_controls_git" />
			<field name="implied_ids"
				eval="[(4, ref('base.group_user')),(4, ref('to_sshkey.group_sshkey_user'))]" />
			<field name="comment">The user will have access to all records of git
				application.
			</field>
		</record>

		<record id="group_to_git_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="base.module_category_version_controls_git" />
			<field name="implied_ids"
				eval="[(4, ref('group_to_git_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
			<field name="comment">The user will have access to git application plus
				git configuration and settings sections as well as all statistics
				and reports.
			</field>
		</record>
	</data>

	<data noupdate="1">
		<record id="git_repo_comp_rule" model="ir.rule">
			<field name="name">Git Repo multi-company</field>
			<field name="model_id" ref="model_git_repository" />
			<field name="global" eval="True" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]
			</field>
		</record>

		<record id="git_branch_comp_rule" model="ir.rule">
			<field name="name">Git Branch multi-company</field>
			<field name="model_id" ref="model_git_branch" />
			<field name="global" eval="True" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]
			</field>
		</record>
	</data>
</odoo>