<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="git_branch_action_checkout_commit" model="ir.actions.act_window">
			<field name="name">Checkout a Commit</field>
			<field name="res_model">git.branch.checkout_commit</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="git_branch_form_view" model="ir.ui.view">
			<field name="name">git.branch.form</field>
			<field name="model">git.branch</field>
			<field name="arch" type="xml">
				<form string="Git branch Form" create="0" edit="0">
					<header>
						<button string="Checkout" class="oe_highlight"
							attrs="{'invisible': [('checked_out','=',True)]}" type="object"
							name="action_checkout" />
						<button string="Pull"
							attrs="{'invisible': [('checked_out','=',False)]}" type="object"
							name="action_pull" />
						<button string="Checkout a Commit"
							attrs="{'invisible': [('checked_out','=',False)]}" type="action"
							name="%(git_branch_action_checkout_commit)d" />
						<button string="UnCheckout" class="btn-danger"
							confirm="This action will delete all the branch's content (i.e. files and folders) from the working tree. Are you sure?"
							attrs="{'invisible': [('checked_out','=',False)]}" type="object"
							name="un_checkout" />
					</header>
					<div
						class="alert alert-info alert-dismissible border-0 rounded-0 fade show"
						role="alert" groups="base.group_no_one">
						<h5>System Requirements</h5>
						<div>
							Please make sure that you set enough memory when fetching a large
							git repository. For example, Odoo's git repo may require the
							following memory settings in your Odoo startup configuration.
							<pre>
								limit_memory_soft = 4294967296
								limit_memory_hard = 5368709120
							</pre>
						</div>
					</div>
					<sheet>
						<div class="oe_button_box" name="button_box">
						</div>
						<div class="oe_title">
							<label class="oe_edit_only" for="name"
								string="Git Branch Name" />
							<h1>
								<field name="name" placeholder="Git Branch Name" />
							</h1>
						</div>
						<field name="checked_out" invisible="1" />
						<group>
							<group>
								<field name="repository_id" />
								<field name="working_tree" groups="base.group_system"
									attrs="{'invisible': [('checked_out','=',False)]}" />
								<field name="recent_pull_time"
									attrs="{'invisible': [('checked_out','=',False)]}" />
								<field name="head_commit"
									attrs="{'invisible': [('checked_out','=',False)]}" />
								<field name="detached_head"
									attrs="{'invisible': [('checked_out','=',False)]}" />
								<field name="auto_scan"
									attrs="{'invisible': [('checked_out','=',False)]}" />
								<field name="is_default" groups="base.group_no_one" />
							</group>
							<group>
								<field name="vendor_id" force_save="1" />
								<field name="company_id" groups="base.group_multi_company"
									force_save="1" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids"/>
						<field name="message_ids"/>
					</div>
				</form>
			</field>
		</record>

		<record id="git_branch_tree_view" model="ir.ui.view">
			<field name="name">git.branch.tree</field>
			<field name="model">git.branch</field>
			<field name="arch" type="xml">
				<tree string="Git Branches" create="0" edit="0">
					<field name="name" />
					<field name="repository_id" />
					<field name="checked_out" />
					<field name="vendor_id" />
					<field name="company_id" groups="base.group_multi_company" />
					<field name="working_tree" groups="base.group_system" optional="hide" />
					<field name="auto_scan" />
				</tree>
			</field>
		</record>

		<record id="git_branch_search_view" model="ir.ui.view">
			<field name="name">git.branch.search</field>
			<field name="model">git.branch</field>
			<field name="arch" type="xml">
				<search string="Git Branches">
					<field name="name" />
					<separator />
					<field name="repository_id" />
					<separator />
					<field name="vendor_id" />
					<separator />
					<field name="checked_out" />
					<field name="working_tree" groups="base.group_system" />
					<field name="auto_scan" />
					<separator />
					<field name="company_id" groups="base.group_multi_company" />
					<separator />
					<filter name="ftr_checkedout" string="Checked out"
						domain="[('checked_out','=',True)]" />
					<filter name="ftr_not_checkedout" string="Not Checked out"
						domain="[('checked_out','=',False)]" />
					<separator />
					<group expand="0" name="group_by" string="Group By">
						<filter name="grp_vendor" string="Vendor" domain="[]"
							context="{'group_by' : 'vendor_id'}" />
						<filter name="grp_repository" string="Repository"
							domain="[]" context="{'group_by' : 'repository_id'}" />
						<filter name="grp_company_id" string="Company" domain="[]"
							context="{'group_by' : 'company_id'}"
							groups="base.group_multi_company" />
					</group>
				</search>
			</field>
		</record>

		<record id="git_branch_action_window"
			model="ir.actions.act_window">
			<field name="name">Git Branches</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">git.branch</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="git_branches_menu" name="Branches"
			sequence="20" parent="git_main_menu"
			action="git_branch_action_window" />
	</data>
</odoo>
