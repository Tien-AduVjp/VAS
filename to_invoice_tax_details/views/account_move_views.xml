<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_move_form" model="ir.ui.view">
		<field name="name">account.move.form</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
			<xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
			<xpath expr="//tree/field[@name='price_subtotal']" position="after">
				<field name="price_tax"
					groups="to_invoice_tax_details.group_show_line_tax_details" />
			</xpath>
			<xpath expr="//tree/field[@name='price_total']" position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
			<!--  -->
			<xpath expr="//kanban/field[@name='price_subtotal']"
				position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
			<xpath expr="//kanban/field[@name='price_subtotal']"
				position="after">
				<field name="price_tax"
					groups="to_invoice_tax_details.group_show_line_tax_details" />
			</xpath>
			<xpath expr="//kanban/field[@name='price_total']"
				position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
			<!--  -->
			<xpath expr="//t[@t-esc='record.price_subtotal.value']"
				position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
			<xpath expr="//t[@t-esc='record.price_subtotal.value']"
				position="after">
				<t t-esc="record.price_tax.value" groups="to_invoice_tax_details.group_show_line_tax_details"/>
			</xpath>
			<xpath expr="//t[@t-esc='record.price_total.value']"
				position="attributes">
				<attribute name="groups"
					add="to_invoice_tax_details.group_show_line_tax_details"
					separator="," />
			</xpath>
		</field>
	</record>
</odoo>
