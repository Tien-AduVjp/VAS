<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<data>
		<record id="view_hr_overtime_request_mass_form"
			model="ir.ui.view">
			<field name="name">hr.overtime.request.mass.form</field>
			<field name="model">hr.overtime.request.mass</field>
			<field name="inherit_id"
				ref="viin_hr_overtime.view_hr_overtime_request_mass_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='reason_id']" position="after">
					<field name="project_required" invisible="1" />
					<field name="for_project_id"
						attrs="{'required':[('project_required','=',True)],'invisible':[('project_required','=',False)]}" />
				</xpath>

			</field>
		</record>

	</data>
</odoo>