<?xml version = "1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.viin_map</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="46" />
        <field name="inherit_id"
            ref="base_geolocalize.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='geoloc_provider_techname']"
                position="after">
                <div
                    attrs="{'invisible': [('geoloc_provider_techname', '!=', 'mapbox')]}">
                    Access Token:
                    <field name="mapbox_token" />
                    <div class="alert alert-warning" role="alert"
                        attrs="{'invisible': [('mapbox_token_invalid_warning', '=', False)]}">
                        <field name="mapbox_token_invalid_warning" />
                    </div>
                    <div>
                        <a class="oe_link"
                            href="https://www.mapbox.com/"
                            target="_blank">
                            <i class="fa fa-arrow-right" />
                            Get mapboxÂ® token
                        </a>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
