<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.event</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id"
			ref="event.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath
				expr="//field[@name='module_event_barcode']/parent::div/parent::div"
				position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath
				expr="//field[@name='module_event_barcode']/preceding::h2[1]"
				position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
		</field>
	</record>
</odoo>
