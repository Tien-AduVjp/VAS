<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_account_move_filter" model="ir.ui.view">
			<field name="name">account.move.filter</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_account_move_filter" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date']" position="after">
					<field name="lines_count" />
				</xpath>
				<xpath expr="//filter[@name='misc_filter']" position="after">
					<filter string="Large Entries"
						domain="[('lines_count','&gt;',100)]" name="ftr_100lines"
						help="Show Journal Entries having more than 100 journal items" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
