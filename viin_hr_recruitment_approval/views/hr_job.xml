<odoo>
     <record id="action_view_recruitment_approval_from_job" model="ir.actions.act_window">
         <field name="name">Recruitment Approvals</field>
         <field name="res_model">approval.request</field>
         <field name="view_mode">tree,form,kanban</field>
         <field name="domain">[('job_id', '=', active_id)]</field>
         <field name="help" type="html">
             <p class="oe_view_nocontent_create">Create the first Recruitment approval</p>
         </field>
     </record>

     <record id="hr_job_survey" model="ir.ui.view" >
         <field name="name">hr.job.form2</field>
         <field name="model">hr.job</field>
         <field name="inherit_id" ref="hr_recruitment.hr_job_survey" />
         <field name="arch" type="xml">
             <xpath expr="//div[@name='button_box']" position="inside">
                 <button class="oe_stat_button" icon="fa-file-o"
                     name="%(action_view_recruitment_approval_from_job)d"
                     type="action">
                     <field name="recuitment_approvals_count" widget="statinfo"
                         string="Recruit. Request" />
                 </button>
             </xpath>
             <xpath expr="//field[@name='description']" position="after">
                 <label for="requirements" />
                 <field name="requirements" />
             </xpath>
         </field>
     </record>
</odoo>
