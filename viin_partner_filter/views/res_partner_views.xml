<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="partner_phone_mobile_search" model="ir.ui.view">
            <field name="name">Partner Phone Mobile Search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="attributes">
                	<attribute name="filter_domain">
                		['|', '|', '|', ('phone', 'ilike', self), ('mobile', 'ilike', self), ('phone_no_format', 'ilike', self), ('mobile_no_format', 'ilike', self)]
                	</attribute>
                </xpath>
            </field>
        </record>
	</data>
</odoo>
