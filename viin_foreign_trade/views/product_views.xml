<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Inherit Product Template -->
		<record id="product_template_form_view" model="ir.ui.view">
			<field name="name">stock.product.template.inherit.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
					<group name="foreign_trade_properties">
						<group>
							<field name="export_tax_ids" widget="many2many_tags" />
						</group>
					</group>
				</xpath>
				<xpath expr="//page[@name='purchase']//group[@name='purchase']" position="after">
					<group name="foreign_trade_properties">
						<group>
							<field name="import_tax_ids" widget="many2many_tags" />
						</group>
					</group>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
