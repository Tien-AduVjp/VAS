<odoo>
	<record id="view_abstract_approval_user_line_form" model="ir.ui.view">
		<field name="name">abstract.approval.user.line.form</field>
		<field name="model">abstract.approval.user.line</field>
		<field name="arch" type="xml">
			<form>
				<header>
				</header>
				<sheet>
					<group>
						<group>
							<field name="user_id" />
							<field name="required" widget="boolean_toggle" />
						</group>
						<group>
						</group>
					</group>
					<notebook></notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_abstract_approval_user_line_tree" model="ir.ui.view">
		<field name="name">abstract.approval.user.line.tree</field>
		<field name="model">abstract.approval.user.line</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree>
				<field name="sequence" widget="handle" />
				<field name="user_id" />
				<field name="required" />
			</tree>
		</field>
	</record>
</odoo>
