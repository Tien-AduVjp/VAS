<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Add groups security group_website_publisher for New Blog Post-->
	<template id="user_navbar" inherit_id="website.user_navbar">
		<xpath expr="//div[a[@data-action='new_blog_post']]" position="attributes">
			<attribute name="groups" add="website.group_website_publisher" separator=","/>
		</xpath>
	</template>
</odoo>
