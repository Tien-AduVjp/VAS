<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form" model="ir.ui.view">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">            	
            	<xpath expr="//div[hasclass('o_setting_left_pane')]/field[@name='module_pos_loyalty']" position="replace">
            		<field name="module_to_loyalty_pos" nolabel="1"/>
            	</xpath>
            	<xpath expr="//div[hasclass('o_setting_right_pane')]/label[@for='module_pos_loyalty']" position="replace">
            		<label for="module_to_loyalty_pos"/>
            	</xpath>
				<xpath expr="//div[hasclass('o_setting_right_pane')]/div[@attrs=&quot;{'invisible': [('module_pos_loyalty', '=', False)]}&quot;]" position="attributes">
            		<attribute name="attrs">{'invisible': [('module_to_loyalty_pos', '=', False)]}</attribute>
            	</xpath>
            </field>
        </record>
    </data>
</odoo>
