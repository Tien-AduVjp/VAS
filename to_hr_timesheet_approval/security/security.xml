<odoo>

	<record id="approval_request_type_rule_group_user" model="ir.rule">
		<field name="name">Timesheet Type Cannot Read</field>
		<field name="model_id" ref="model_approval_request_type" />
		<field name="domain_force">[('type', '!=', 'timesheets')]</field>
		<field name="perm_read" eval="1" />
		<field name="perm_write" eval="0" />
		<field name="perm_create" eval="0" />
		<field name="perm_unlink" eval="0" />
		<field name="groups" eval="[(4, ref('base.group_user'))]" />
	</record>

	<record id="approval_request_type_rule_group_hr_timesheet_user" model="ir.rule">
        <field name="name">See Owner Timesheet - Timesheet Type</field>
        <field name="model_id" ref="model_approval_request_type" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_unlink" eval="0" />
        <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]" />
    </record>

</odoo>
