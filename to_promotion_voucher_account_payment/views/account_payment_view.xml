<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_account_payment_form" model="ir.ui.view">
		<field name="name">account.payment.form</field>
		<field name="model">account.payment</field>
		<field name="inherit_id" ref="account.view_account_payment_form" />
		<field name="arch" type="xml">
			<field name="journal_id" position="after">
				<field name="voucher_payment" invisible="1"/>
				<field name="voucher_code" attrs="{'invisible': [('voucher_payment', '=', False)], 'required': [('voucher_payment', '=', True)]}"/>
				<field name="voucher_id" attrs="{'invisible': [('voucher_payment', '=', False)], 'required': [('voucher_payment', '=', True)]}"/>
			</field>
		</field>
	</record>
</odoo>
