<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="page_rule_personal_website_page" model="ir.rule">
			<field name="name">Personal Website page </field>
			<field name="model_id" ref="website.model_website_page" />
			<field name="domain_force">[('create_uid', '=', user.id),('is_published', '=', False)]</field>
			<field name="groups" eval="[(4, ref('website.group_website_publisher'))]" />
			<field name="perm_create" eval="0" />
			<field name="perm_write" eval="1" />
			<field name="perm_unlink" eval="1" />
			<field name="perm_read" eval="0" />
		</record>

		<record id="page_rule_all_website_page" model="ir.rule">
			<field name="name">All Website page</field>
			<field name="model_id" ref="website.model_website_page" />
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('website.group_website_designer'))]" />
			<field name="perm_create" eval="1" />
			<field name="perm_write" eval="1" />
			<field name="perm_unlink" eval="1" />
			<field name="perm_read" eval="1" />
		</record>

		<record id="view_rule_personal_view_page" model="ir.rule">
			<field name="name">Personal view page </field>
			<field name="model_id" ref="website.model_ir_ui_view" />
			<field name="domain_force">[('create_uid', '=', user.id), '|', ('page_ids', '=', False),
										('page_ids.is_published', '=', False)]</field>
			<field name="groups" eval="[(4, ref('website.group_website_publisher'))]" />
			<field name="perm_create" eval="0" />
			<field name="perm_write" eval="1" />
			<field name="perm_unlink" eval="1" />
			<field name="perm_read" eval="0" />
		</record>

		<record id="view_rule_all_view_page" model="ir.rule">
			<field name="name">All Website view page</field>
			<field name="model_id" ref="website.model_ir_ui_view" />
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('website.group_website_designer'))]" />
			<field name="perm_create" eval="1" />
			<field name="perm_write" eval="1" />
			<field name="perm_unlink" eval="1" />
			<field name="perm_read" eval="1" />
		</record>

	</data>
</odoo>
