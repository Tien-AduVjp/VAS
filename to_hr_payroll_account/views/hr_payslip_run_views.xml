<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="hr_payslip_run_search_inherit" model="ir.ui.view">
		<field name="name">hr.payslip.run.search.inherit</field>
		<field name="model">hr.payslip.run</field>
		<field name="inherit_id"
			ref="to_hr_payroll.hr_payslip_run_filter" />
		<field name="arch" type="xml">
			<filter name='done_filter' position="after">
				<field name="journal_id" groups="account.group_account_user" />
			</filter>
		</field>
	</record>

	<record id="hr_payslip_run_tree_inherit" model="ir.ui.view">
		<field name="name">hr.payslip.run.tree.inherit</field>
		<field name="model">hr.payslip.run</field>
		<field name="inherit_id" ref="to_hr_payroll.hr_payslip_run_tree" />
		<field name="arch" type="xml">
			<field name="company_cost" position="after">
				<field name="journal_id" groups="account.group_account_user"
					optional="hide" />
				<field name="moves_count" string="Journal Entries"
					groups="account.group_account_user" optional="hide" />
			</field>
		</field>
	</record>
	<record id="hr_payslip_run_form" model="ir.ui.view">
		<field name="name">hr.payslip.run.form</field>
		<field name="model">hr.payslip.run</field>
		<field name="inherit_id" ref="to_hr_payroll.hr_payslip_run_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_view_contracts']"
				position="after">
				<button name="action_view_account_moves"
					class="oe_stat_button" icon="fa-bars" type="object"
					groups="account.group_account_user">
					<field name="moves_count" widget="statinfo"
						string="Journal Entries" groups="account.group_account_user" />
				</button>
			</xpath>
			<field name="credit_note" position="before">
				<field name="date" />
				<field name="journal_id" groups="account.group_account_user" />
			</field>
		</field>
	</record>

</odoo>