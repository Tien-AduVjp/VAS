<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_payroll_structure_view_form" model="ir.ui.view">
		<field name="name">hr.payroll.structure.form</field>
		<field name="model">hr.payroll.structure</field>
		<field name="inherit_id" ref="to_hr_payroll.view_hr_employee_grade_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='rule_ids']/tree/field[@name='register_id']" position="after">
				<field name="generate_account_move_line" optional="hide" />
				<field name="account_debit" optional="hide" />
				<field name="account_credit" optional="hide" />
				<field name="anylytic_option" optional="hide" />
				<field name="analytic_account_id" optional="hide" />
				<field name="analytic_tag_ids" optional="hide" widget="many2many_tags" />
			</xpath>
		</field>
	</record>
</odoo>
