<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.module.category"
			id="module_category_replenishment_request">
			<field name="name">Replenishment Request</field>
			<field name="description">Helps you manage your employee's procurement
				requests and fullfill the needs according to the requests.
			</field>
			<field name="sequence">4</field>
		</record>

		<record id="group_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id"
				ref="module_category_replenishment_request" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
			<field name="comment">The user in this group will have ability to create
				replenishment requests and submit to managers for approval.
			</field>
		</record>

		<record id="group_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id"
				ref="module_category_replenishment_request" />
			<field name="implied_ids"
				eval="[(4, ref('to_procurement_requests.group_user')),(4,ref('stock.group_stock_manager'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
			<field name="comment">The user in this group will have all access rights
				to this application and inventory application.</field>
		</record>
	</data>
</odoo>