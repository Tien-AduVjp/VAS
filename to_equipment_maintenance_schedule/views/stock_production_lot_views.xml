<odoo>
	<record id="view_production_lot_form" model="ir.ui.view">
		<field name="name">lot_maintenance_schedule</field>
		<field name="model">stock.production.lot</field>
		<field name="inherit_id" ref="stock.view_production_lot_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[@name='main_group']" position="after">
				<notebook>
					<page name="maintenance_schedule"
						string="Maintenance Schedule">
						<field name="maintenance_schedule_ids">
							<tree>
								<field name="part" />
								<field name="product_milestone_id" />
								<field name="maintenance_action_id" />
								<field name="product_id" />
							</tree>
						</field>
					</page>
				</notebook>
			</xpath>
		</field>
	</record>
</odoo>
