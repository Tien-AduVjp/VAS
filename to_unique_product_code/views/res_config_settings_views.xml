<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.form.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
		<field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="The creation of duplicated Product Internal Reference are not allowed">
                    <div class="o_setting_left_pane">
                        <field name="check_unique_product_default_code"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="check_unique_product_default_code"/>
                        <div class="text-muted">
                            The creation of duplicated Product Internal Reference are not allowed
                        </div>
                    </div>
                </div>
            </xpath>
		</field>
	</record>
</odoo>
