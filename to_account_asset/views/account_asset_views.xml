<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="view_account_asset_asset_form">
		<field name="name">account.asset.asset.form</field>
		<field name="model">account.asset.asset</field>
		<field name="arch" type="xml">
			<form string="Asset" js_class="account_asset_form">
				<header>
					<button name="validate" states="draft" string="Confirm"
						type="object" class="oe_highlight" />
					<button type="object" name="action_compute_depreciation_board"
						string="Compute Depreciation" states="draft" />
					<button name="%(action_asset_sell)d" states="open,close" attrs="{'invisible': [('state','!=', 'open')]}"
						string="Sell" type="action" class="oe_highlight" context="{'sell': True, 'default_asset_id': id}"/>
					<button name="%(action_asset_dispose)d" states="open,close" attrs="{'invisible': [('state','!=', 'open')]}"
						string="Dispose" type="action" class="oe_highlight" context="{'dispose': True, 'default_asset_id': id}"/>
					<button name="set_to_draft" string="Set to Draft"
						type="object"
						attrs="{'invisible': ['|', ('posted_entry_count', '!=', 0), ('state', '=', 'draft')]}" />
					<button name="%(action_asset_modify)d" states="open"
						string="Modify Depreciation" type="action" />
					<button name="%(action_asset_revaluation)d" states="open"
						string="Revalution of Asset" type="action" />
					<button name="action_view_sales_invoice" type="object"
						string="View a Sales Invoice" groups="to_account_asset.group_asset_manager"
						attrs="{'invisible': [('state','!=', 'sold')]}">
					</button>
					<field name="state" widget="statusbar"
						statusbar_visible="draft,open" />
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="open_entries"
							type="object" icon="fa-pencil">
							<field string="Entries" name="entry_count" widget="statinfo" />
						</button>
					</div>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" placeholder="e.g. Laptop iBook" />
						</h1>
					</div>
					<group>
						<group>
							<field name="active" invisible="1"/>
							<field name="posted_entry_count" invisible="1"/>
							<field name="product_id" invisible="1"/>
							<field name="category_id" string="Asset Category"
								domain="[('type', '=', 'purchase')]"
								context="{'default_type': 'purchase'}" help="Category of asset" />
							<field name="code" />
							<field name="date" help="Date of asset" />
							<field name="date_first_depreciation" />
							<field name="first_depreciation_date"
								attrs="{'invisible': [('date_first_depreciation', '!=', 'manual')], 'required': [('date_first_depreciation', '=', 'manual')]}" />
							<field name="type" invisible="1" />
						</group>
						<group>
							<span colspan="2"
								attrs="{'invisible': ['|', ('original_move_line_ids', '!=', []), ('value', '!=', 0)]}"
								class="oe_edit_only text-muted">
								Set the original value manually or
								<button
									class="btn btn-link oe_inline align-baseline p-0 add_original_move_lines"
									string="select related purchase journal items" />
							</span>
							<field name="currency_id"
								groups="base.group_multi_currency" />
							<field name="company_id" options="{'no_create': True}"
								groups="base.group_multi_company" />
							<field name="value" widget="monetary"
								options="{'currency_field': 'currency_id'}"
								help="Gross value of asset" />
							<field name="salvage_value" widget="monetary"
								options="{'currency_field': 'currency_id'}"
								attrs="{'invisible': [('type','=','sale')]}" />
							<field name="revaluation_value" widget="monetary"
								options="{'currency_field': 'currency_id'}" />
							<field name="value_residual" widget="monetary"
								options="{'currency_field': 'currency_id'}" />
							<field name="depreciation_progress" widget="progressbar"/>
							<field name="partner_id" string="Vendor"/>
							<field name="invoice_line_id" options="{'no_create': True}"
								groups="account.group_account_user" />
							<field name="invoice_id" string="Invoice"
								options="{'no_create': True}" />
							<field name="analytic_account_id"
								groups="analytic.group_analytic_accounting" />
							<field name="analytic_tag_ids"
								groups="analytic.group_analytic_tags"
								widget="many2many_tags" />
						</group>
					</group>
					<notebook colspan="4">
						<page string="Depreciation Board">
							<field name="depreciation_line_ids" mode="tree"
								options="{'reload_whole_on_button': true}">
								<tree decoration-info="(move_check == False)" create="false">
									<field name="depreciation_date" />
									<field name="amount" widget="monetary"
										string="Depreciation" sum="Depreciation Total"/>
									<field name="depreciated_value" readonly="1" />
									<field name="remaining_value" readonly="1"
										widget="monetary" string="Residual" />
									<field name="move_id" />
									<field name="move_check" widget="deprec_lines_toggler"
										attrs="{'invisible': [('parent_state', '!=', 'open')]}" />
									<field name="move_posted_check" invisible="1" />
									<field name="parent_state" invisible="1" />
									<field name="disposal"
										attrs="{'invisible':[('disposal','=',False)]}" />
								</tree>
								<form string="Depreciation Lines" create="false">
									<group>
										<group>
											<field name="parent_state" invisible="1" />
											<field name="name" />
											<field name="sequence" />
											<field name="move_id" />
											<field name="move_check" />
											<field name="parent_state" invisible="1" />
										</group>
										<group>
											<field name="amount" widget="monetary" />
											<field name="depreciation_date" />
											<field name="depreciated_value" />
											<field name="remaining_value" />
											<field name="disposal"
												attrs="{'invisible':[('disposal','=',False)]}" />
										</group>
									</group>
								</form>
							</field>
						</page>
						<page string="Depreciation Information">
							<group>
								<group name="depreciation_method">
									<field name="method" widget="radio"
										attrs="{'invisible': [('type','=','sale')]}"
										options="{'horizontal': true}" />
									<field name="method_progress_factor"
										attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}" />
									<field name="method_time" string="Time Method Based On"
										widget="radio"
										attrs="{'invisible': [('type','!=','purchase')]}" />
									<field name="prorata"
										attrs="{'invisible': [('method_time','=','end')]}" />
									<field name="method_number"
										attrs="{'invisible':[('method_time','=','end')], 'required':[('method_time','=','number')]}" />
									<field name="method_period" />
									<field name="method_end"
										attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','=','number')]}" />
								</group>
								<group name="accounting">
									<field name="depreciation_expense_account_id" />
									<field name="revaluation_decrease_account_id" />
									<field name="revaluation_increase_account_id" />
								</group>
							</group>
						</page>
						<page string="Revaluation Board">
							<field name="revaluation_line_ids" mode="tree"
								options="{'reload_whole_on_button': true}">
								<tree decoration-info="(move_check == False)" create="false">
									<field name="revaluation_date" />
									<field name="method" readonly="1" />
									<field name="value" readonly="1" widget="monetary"/>
									<field name="move_id" />
									<field name="move_check" widget="deprec_lines_toggler"
										attrs="{'invisible': [('parent_state', '!=', 'open')]}" />
									<field name="move_posted_check" invisible="1" />
									<field name="parent_state" invisible="1" />
								</tree>
								<form string="Revaluation Lines" create="false">
									<group>
										<group>
											<field name="parent_state" invisible="1" />
											<field name="name" />
											<field name="sequence" />
											<field name="move_id" />
											<field name="move_check" />
											<field name="parent_state" invisible="1" />
										</group>
										<group>
											<field name="method" />
											<field name="value" widget="monetary" />
											<field name="revaluation_date" />
										</group>
									</group>
								</form>
							</field>
						</page>
						<page string="Related Purchase" name="related_items"
							attrs="{'invisible' : [('original_move_line_ids', '=', [])]}">
							<field name="original_move_line_ids" widget="many2many"
								attrs="{'readonly': [('state','=','posted')]}"
								domain="[('credit', '=', '0'), ('move_id.state', '=', 'posted')]"
								class="original_move_line_ids_field">
								<tree>
									<field name="date"/>
                                    <field name="move_name"/>
                                    <field name="partner_id"/>
									<field name="account_id" />
                                    <field name="name"/>
									<field name="debit" widget="monetary" />
									<field name="credit" widget="monetary" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids"/>
					<field name="activity_ids"/>
					<field name="message_ids"/>
				</div>
			</form>
		</field>
	</record>

	<record id="view_account_asset_asset_kanban" model="ir.ui.view">
		<field name="name">account.asset.asset.kanban</field>
		<field name="model">account.asset.asset</field>
		<field name="arch" type="xml">
			<kanban class="o_kanban_mobile">
				<field name="name" />
				<field name="category_id" />
				<field name="date" />
				<field name="state" />
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="row mb4">
								<div class="col-6">
									<strong>
										<span>
											<t t-esc="record.name.value" />
										</span>
									</strong>
								</div>
								<div class="col-6 text-right">
									<strong>
										<t t-esc="record.date.value" />
									</strong>
								</div>
							</div>
							<div class="row">
								<div class="col-6 text-muted">
									<span>
										<t t-esc="record.category_id.value" />
									</span>
								</div>
								<div class="col-6">
									<span class="float-right text-right">
										<field name="state" widget="kanban_label_selection"
											options="{'classes': {'draft': 'primary', 'open': 'success', 'close': 'default'}}" />
									</span>
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<record model="ir.ui.view"
		id="view_account_asset_asset_purchase_tree">
		<field name="name">account.asset.asset.purchase.tree</field>
		<field name="model">account.asset.asset</field>
		<field name="arch" type="xml">
			<tree decoration-info="(state == 'draft')" decoration-muted="(state == 'close')">
				<field name="name" />
				<field name="category_id" string="Asset Category" />
				<field name="date" />
				<field name="partner_id" string="Vendor" />
				<field name="value" />
				<field name="value_residual" widget="monetary" />
				<field name="depreciation_progress" widget="progressbar" />
				<field name="currency_id" groups="base.group_multi_currency" />
				<field name="company_id" groups="base.group_multi_company" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record id="view_account_asset_search" model="ir.ui.view">
		<field name="name">account.asset.asset.search</field>
		<field name="model">account.asset.asset</field>
		<field name="arch" type="xml">
			<search string="Asset Account">
				<field name="name" string="Asset" />
				<field name="date" />
				<separator />
				<field name="invoice_id" />
				<separator />
				<filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]"/>
				<separator />
				<field name="product_id" />
				<filter string="Current" name="current"
					domain="[('state','in', ('draft','open'))]"
					help="Assets in draft and open states" />
				<filter string="Closed" name="closed"
					domain="[('state','not in', ('draft','open'))]" help="Assets in closed state" />
				<filter string="With Invoice" name="ftr_has_invoice"
					domain="[('invoice_id','!=',False)]" />
				<filter string="Without Invoice" name="ftr_has_no_invoice"
					domain="[('invoice_id','=',False)]" />
				<group expand="0" string="Group By...">
					<filter string="Date" name="month" domain="[]"
						context="{'group_by':'date'}" />
					<filter string="Asset Category" name="category" domain="[]"
						context="{'group_by':'category_id'}" />
					<filter string="Asset Product" name="grp_product"
						domain="[]" context="{'group_by':'product_id'}" />
					<filter string="Invoice" name="grp_invoice" domain="[]"
						context="{'group_by':'invoice_id'}" />
				</group>
				<searchpanel>
					<field name="company_id" groups="base.group_multi_company"
						icon="fa-building" />
					<field name="category_id" icon="fa-users" />
				</searchpanel>
			</search>
		</field>
	</record>



	<record model="ir.actions.act_window"
		id="action_account_asset_asset">
		<field name="name">Assets</field>
		<field name="res_model">account.asset.asset</field>
		<field name="view_mode">tree,kanban,form</field>
		<field name="view_id"
			ref="view_account_asset_asset_purchase_tree" />
		<field name="domain">[('category_id.type', '=', 'purchase')]</field>
	</record>

	<menuitem parent="account.menu_finance_entries_management"
		id="menu_action_account_asset_asset"
		action="action_account_asset_asset" sequence="101"
		groups="group_asset_manager" />
</odoo>
