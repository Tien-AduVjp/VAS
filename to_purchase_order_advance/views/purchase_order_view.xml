<odoo>
    <data>

        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_open_reconcile_view" type="object" class="oe_stat_button"
                            icon="fa-usd" groups="account.group_account_invoice"
                            attrs="{'invisible': [('advance_payment_amount', '=', 0)]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="advance_payment_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </span>
                            <span class="o_stat_text">Reconciled Payments Amount</span>
                        </div>
                    </button>
                    <button name="action_view_advance_payment" type="object" class="oe_stat_button"
                            icon="fa-bars" groups="account.group_account_invoice"
                            attrs="{'invisible': [('advance_payment_count', '=', 0)]}">
                        <field name="advance_payment_count" widget="statinfo" string="Payments"/>
                        <field name="advance_payment_ids" invisible="1"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="advance_payment_amount" string="Reconciled Payment" widget="monetary"
                           sum="Total Reconciled Payments"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
