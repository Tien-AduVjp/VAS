<odoo>
    <record id="add_po_to_payment_wizard_view_form" model="ir.ui.view">
        <field name="name">add.po.to.payment.wizard.form</field>
        <field name="model">add.po.to.payment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="account_payment_id" invisible="1"/>
                        <field name="current_partner_id" invisible="1" />
                        <field name="current_purchase_order_ids" invisible="1"/>
                        <field name="purchase_order_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="add" string="Add" type="object"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_add_po_to_payment" model="ir.actions.act_window">
        <field name="name">Add Purchases Orders To Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">add.po.to.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
