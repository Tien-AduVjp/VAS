<odoo>
    <record id="assign_to_invoice_wizard_view_form" model="ir.ui.view">
        <field name="name">assign.to.invoice.wizard.form</field>
        <field name="model">assign.to.invoice.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="amount" widget="monetary"/>
                    </group>
                </group>
                <footer>
                    <button name="add" string="Add" type="object"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
