<odoo>
	<data>
		<record id="hr_payslip_run_form" model="ir.ui.view">
			<field name="name">hr.payslip.run.form</field>
			<field name="model">hr.payslip.run</field>
			<field name="inherit_id" ref="to_hr_payroll.hr_payslip_run_form" />
			<field name="arch" type="xml">
				<xpath expr="//button[@name='action_cancel']" position="after">
					<button name="download_acb_payslip_batch_payment"
						string="Download ACB Payslip Batch Payment (.xlsx)"
						type="object"
						states="verified"
						class="oe_highlight"
						help="The payslips with zero or negative net amount will not be included in the printed XLSX file." />
				</xpath>
			</field>
		</record>
	</data>
</odoo>