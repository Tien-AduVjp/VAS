<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
	    <xpath expr="//div[hasclass('payment-buttons-container')]" position="after">
	        <div class='payment-note'>
	        	<textarea placeholder="Note:..." name="note" class="pay-note"></textarea>
	        </div>
	    </xpath>
	</t>

    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
	    <xpath expr="//div[hasclass('before-footer')]" position="before">
	    		<div>
	    			<br/>
    				<span class="pos-recipt-note">NOTE</span>
    				<div class="pos-receipt-center-align wrap-text">
    					<span><t t-esc='receipt.note'/></span>
    				</div>
	    		</div>
	    </xpath>
	</t>
</templates>
