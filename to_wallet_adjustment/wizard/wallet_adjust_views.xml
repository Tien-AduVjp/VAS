<odoo>
	<record id="wallet_adjust_form_view" model="ir.ui.view">
		<field name="name">wallet.adjust.form</field>
		<field name="model">wallet.adjust</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="amount" />
					<field name="journal_id" />
					<field name="account_id"/>
					<field name="date" />
				</group>
				<footer>
					<button string="OK" name="action_adjust" type="object" class="oe_highlight" />
					<button string="Cancel" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_adjust_wallet" model="ir.actions.act_window">
		<field name="name">Wallet Adjustment</field>
		<field name="res_model">wallet.adjust</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>
