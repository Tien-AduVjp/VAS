<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="sale_order_template_view_form">
		<field name="name">sale.order.template.form</field>
		<field name="model">sale.order.template</field>
		<field name="type">form</field>
		<field name="inherit_id"
			ref="sale_management.sale_order_template_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[1]" position="inside">
				<group>
					<field name="autoload_odoo_apps" />
					<field name="odoo_version_id"
						attrs="{'required': [('autoload_odoo_apps','=',True)], 'invisible': [('autoload_odoo_apps','=',False)]}" />
					<field name="ir_module_category_ids" widget="many2many_tags"
						attrs="{'invisible': [('autoload_odoo_apps','=',False)]}" />
				</group>
			</xpath>
		</field>
	</record>
</odoo>
