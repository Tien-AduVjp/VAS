<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="rule_employee_doc_multi_comp" model="ir.rule">
			<field name="name">Employee Document multi-company</field>
			<field name="model_id" ref="model_employee_document" />
			<field name="global" eval="True" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>

		<record id="employee_document_rule" model="ir.rule">
			<field name="name">Personal Employee Documents</field>
			<field name="model_id" ref="model_employee_document"></field>
			<field name="groups" eval="[(4,ref('base.group_user'))]"></field>
			<field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
			<field eval="0" name="perm_unlink"/>
			<field eval="1" name="perm_write"/>
			<field eval="1" name="perm_read"/>
			<field eval="1" name="perm_create"/>
		</record>
		<record id="employee_document_rule_officer" model="ir.rule">
			<field name="name">All Employee Documents</field>
			<field name="model_id" ref="model_employee_document"></field>
			<field name="groups" eval="[(4,ref('hr.group_hr_user'))]"></field>
			<field name="domain_force">[(1,'=',1)]</field>
			<field eval="1" name="perm_unlink"/>
			<field eval="1" name="perm_write"/>
			<field eval="1" name="perm_read"/>
			<field eval="1" name="perm_create"/>
		</record>
	</data>
</odoo>
