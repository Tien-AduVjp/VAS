<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="employee_document_type_form">
			<field name="name">employee.document.type.form</field>
			<field name="model">employee.document.type</field>
			<field name="arch" type="xml">
				<form string="Employee Document Type Form">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name"
									placeholder="Insurance Card, Social Security Card, etc" />
							</h1>
						</div>
						<group>
							<group>
								<field name="type" />
								<field name="description" />
							</group>
							<group>
								<field name="kept_by" />
								<field name="return_upon_termination" />
								<field name="days_to_notify" />
							</group>
						</group>

					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="employee_document_type_tree">
			<field name="name">employee.document.type.tree</field>
			<field name="model">employee.document.type</field>
			<field name="arch" type="xml">
				<tree string="Employee Document Type Tree">
					<field name="name" />
					<field name="kept_by" />
					<field name="days_to_notify" />
					<field name="description" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="action_employee_document_type">
			<field name="name">Document Type</field>
			<field name="res_model">employee.document.type</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="employee_document_type_menu"
			name="Document Type" parent="hr.menu_human_resources_configuration"
			action="action_employee_document_type" />
	</data>
</odoo>
