<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend" name="Backend Assets">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/to_org_chart/static/src/scss/org_chart_view.scss" />

            <script type="text/javascript" src="/to_org_chart/static/src/js/org_chart_controller.js" />
            <script type="text/javascript" src="/to_org_chart/static/src/js/org_chart_model.js" />
            <script type="text/javascript" src="/to_org_chart/static/src/js/org_chart_renderer.js" />
            <script type="text/javascript" src="/to_org_chart/static/src/js/org_chart_view.js"></script>
        </xpath>
    </template>
    
    <template id="qunit_suite" name="org chart tests" inherit_id="web.qunit_suite">
	    <xpath expr="//script[last()]" position="after">
	        <script type="text/javascript" src="/to_org_chart/static/tests/helpers/sample_data.js"/>
	        <script type="text/javascript" src="/to_org_chart/static/tests/helpers/test_utils_create.js"/>
	        <script type="text/javascript" src="/to_org_chart/static/tests/helpers/test_utils.js"/>
	        <script type="text/javascript" src="/to_org_chart/static/tests/org_chart_test.js"/>
	    </xpath>
	</template>
</odoo>
