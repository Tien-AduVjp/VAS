<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="git_branch_form_view" model="ir.ui.view">
			<field name="name">git.branch.form</field>
			<field name="model">git.branch</field>
			<field name="inherit_id" ref="to_git.git_branch_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
					<button type="object" name="action_view_projects"
						class="oe_stat_button" icon="fa-puzzle-piece"
						attrs="{'invisible': [('projects_count', '=', 0)]}"
						groups="project.group_project_user">
						<field name="projects_count" widget="statinfo"
							string="Projects" />
					</button>
					<button type="object" name="action_view_tasks"
						class="oe_stat_button" icon="fa-tasks"
						attrs="{'invisible': [('tasks_count', '=', 0)]}"
						groups="project.group_project_user">
						<field name="tasks_count" widget="statinfo" string="Tasks" />
					</button>
				</xpath>
			</field>
		</record>

	</data>
</odoo>