<odoo>
	<record id="view_res_bank_form" model="ir.ui.view">
		<field name="name">res.bank.form</field>
		<field name="model">res.bank</field>
		<field name="inherit_id" ref="base.view_res_bank_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[@name='communication_details']"
				position="after">
				<group name="currency_rates_update">
					<field name="auto_rate_update" />
					<field name="auto_rate_update_provider"
						attrs="{'invisible': [('auto_rate_update','=',False)], 'required':[('auto_rate_update','=',True)]}" />
				</group>
			</xpath>
		</field>
	</record>
</odoo>
