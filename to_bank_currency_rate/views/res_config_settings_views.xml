<odoo>
	<data>
		<record model="ir.ui.view" id="res_config_settings_view_form">
			<field name="name">res.config.settings.view.form.inherit.account
			</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="account.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('o_setting_box')][./div/field[@name='module_currency_rate_live']]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Main Bank</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/>
                            <div class="text-muted">
                                The bank whose exchange rates are used for currency conversion when no specific bank is known.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="main_currency_bank_id" class="col-lg-3 o_light_label"/>
                                    <field name="main_currency_bank_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                </div>
                            </div>
                        </div>
                    </div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>