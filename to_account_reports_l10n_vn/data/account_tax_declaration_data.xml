        <field name="name">VAT Declaration</field>
        <field name='parent_id' ref='l10n_vn.account_reports_vn_statements_menu'/>
        <field name="tax_report" eval="1"/>
    </record>

    <record id="account_financial_report_line_01_vn" model="account.financial.dynamic.report.line">
    	<!-- HHDV mua vào -->
        <field name="name">Taxed Purchase of Goods &amp; Services</field>
        <field name="code">VNTAX_IN</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="0"/>
        <field name="formulas">balance = VNTAX_IN_BALANCE.balance + VNTAX_IN_BASE.balance</field>
        <field name="financial_report_id" ref="account_financial_report_l10n_vn"/>
        <field name="special_date_changer">strict_range</field>
    </record>
    <record id="account_financial_report_line_01_01_vn" model="account.financial.dynamic.report.line">
    	<!-- Thuế GTGT HHDV mua vào -->
        <field name="name">VAT on purchase of goods and services</field>
        <field name="code">VNTAX_IN_BALANCE</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="1"/>
        <field name="formulas">balance = VNTAX_IN_BALANCE_EXEMPTION.balance + VNTAX_IN_BALANCE_00.balance + VNTAX_IN_BALANCE_05.balance + VNTAX_IN_BALANCE_10.balance</field>
        <field name="parent_id" ref="account_financial_report_line_01_vn"/>
        <field name="special_date_changer">strict_range</field>
    </record>
    <record id="account_financial_report_line_exemption_01_01_vn" model="account.financial.dynamic.report.line">
    	<!-- Thuế GTGT HHDV mua vào không thuộc đối tượng chịu thuế -->
        <field name="name">VAT Exemption on purchase of goods and services</field>
        <field name="code">VNTAX_IN_BALANCE_EXEMPTION</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="2"/>
        <field name="formulas">balance = sum.balance</field>
        <field name="parent_id" ref="account_financial_report_line_01_01_vn"/>
        <field name="show_domain">never</field>
        <field name="special_date_changer">strict_range</field>
    </record>
    
