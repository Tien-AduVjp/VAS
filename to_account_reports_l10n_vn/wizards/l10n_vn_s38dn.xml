<odoo>
	<record id="account_common_report_s38dn_view" model="ir.ui.view">
		<field name="name">L10n VN S38-DN Form</field>
		<field name="model">l10n_vn.s38dn</field>
		<field name="inherit_id" ref="account.account_common_report_view" />
		<field name="arch" type="xml">
			<data>
				<xpath expr="//field[@name='journal_ids']" position="before">
					<field name="target_type" widget="radio" />
					<field name="account_type_ids" widget="many2many_tags" attrs="{'no_create': True, 'invisible': [('target_type', '!=', 'account')]}" />
					<field name="account_ids" widget="many2many_tags" attrs="{'no_create': True, 'invisible': [('target_type', '!=', 'account')], 'required': [('target_type', '=', 'account')]}" />
					<field name="partner_ids" widget="many2many_tags" attrs="{'no_create': True}" />
					<newline />
				</xpath>
				<xpath expr="//field[@name='journal_ids']" position="attributes">
					<attribute name="attrs">{'no_create': True, 'invisible': [('target_type', '!=', 'journal')], 'required': [('target_type', '=', 'journal')]}</attribute>
				</xpath>
				<xpath expr="//button[@name='check_report']" position="after">
					<button name="check_report_excel" string="Export Excel" type="object" class="oe_highlight" />
				</xpath>
				<xpath expr="//field[@name='target_move']" position="attributes">
					<attribute name="readonly">1</attribute>
				</xpath>
			</data>
		</field>
	</record>

	<record id="l10n_vn_s38dn_action" model="ir.actions.act_window">
		<field name="name">ACCOUNT DETAIL SHEET (S38-DN)</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">l10n_vn.s38dn</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="account_common_report_s38dn_view" />
		<field name="target">new</field>
	</record>

	<menuitem id="l10n_vn_s38dn_menu"
	name="Account Detail Sheet (S38-DN)"
	parent="l10n_vn.account_reports_vn_statements_menu"
	groups="account.group_account_user"
	action="l10n_vn_s38dn_action"
	sequence="2"/>
</odoo>
