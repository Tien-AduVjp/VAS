<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="survey_import_question_wizard_form_view" model="ir.ui.view">
        <field name="name">survey.import.question.wizard.form</field>
        <field name="model">survey.import.question.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="survey_id" invisible="1"/>
                <div class="alert alert-warning" role="alert">
                    Select questions from questions bank to generate questions to this survey
                </div>
                <separator string="Questions"/>
                <field name="question_ids"/>
                <footer>
                    <button name="action_import" type="object" string="Import" class="oe_highlight" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="survey_import_question_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Questions</field>
        <field name="res_model">survey.import.question.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
