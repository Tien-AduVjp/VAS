<odoo>
	<data>
		<record id="view_move_form" model="ir.ui.view">
			<field name="name">account.move.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']"
					position='after'>
					<field name="delegation_partner_id"
						attrs="{'column_invisible': [('parent.type', '=', 'entry')]}"
						optional="show" />
				</xpath>
				<xpath
					expr="//field[@name='line_ids']/tree/field[@name='partner_id']"
					position="before">
					<field name="delegation_partner_id" invisible="1" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>