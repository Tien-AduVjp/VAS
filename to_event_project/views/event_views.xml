<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="event_project_view" model="ir.ui.view">
            <field name="name">event.event.form</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
					<button name="%(project.open_create_project)d" type="action"
					        string="Create Project"
					        context="{'default_event_id': id}"
					        groups="project.group_project_user" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_projects" type="object" icon="fa-puzzle-piece" class="oe_stat_button"
                            attrs="{'invisible': [('project_count','=',0)]}" groups="base.group_user">
                        <field name="project_count" widget="statinfo" string="Projects" />
                     </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
