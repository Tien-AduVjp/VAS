<odoo>
	<record id="wizard_form_view" model="ir.ui.view" >
		<field name="name">wizard.form</field>
		<field name="model">sale.subscription.wizard</field>
		<field name="arch" type="xml">
			<form string="Upsell">
				<p>You can add new subscription product by create a new quotation and confirm it or
					insert them in the existing subscription and invoice it on the next invoice date
				</p>
				<group>
					<field name="date_from" />
				</group>
				<field name="option_lines">
					<tree string="Options" editable="bottom">
						<field name="product_id"
							domain="[('recurring_invoice', '=', True)]"
							context="{'default_recurring_invoice': True}" />
						<field name="name" invisible="1" />
						<field name="quantity" readonly="0" />
						<field name="uom_id" groups="uom.group_uom" />
					</tree>
				</field>
				<footer>
					<button name="action_create_sale_order" type="object"
						string="Create &amp; View Quotation" class="oe_highlight" />
					<button name="action_add_lines" type="object"
						string="Add in Subscription" class="oe_highlight"
						help="Insert the options directly, they will be invoiced on the next invoice date." />
					<button special="cancel" string="Cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="wizard_action" model="ir.actions.act_window" >
		<field name="name">Upsell</field>
		<field name="res_model">sale.subscription.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wizard_form_view" />
		<field name="target">new</field>
	</record>
</odoo>
