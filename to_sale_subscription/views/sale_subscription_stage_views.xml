<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sale_subscription_stage_view_tree" model="ir.ui.view">
		<field name="name">sale.subscription.stage.tree</field>
		<field name="model">sale.subscription.stage</field>
		<field name="arch" type="xml">
			<tree string="Subscription Stages">
				<field name="sequence" widget="handle" />
				<field name="name" />
				<field name="fold" />
			</tree>
		</field>
	</record>

	<record id="sale_subscription_stage_view_form" model="ir.ui.view">
		<field name="name">sale.subscription.stage.form</field>
		<field name="model">sale.subscription.stage</field>
		<field name="arch" type="xml">
			<form string="Subscription Stage">
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" class="oe_edit_only" />
						</h1>
					</div>
					<group>
						<group>
							<field name="rating_template_id" />
							<field name="sequence" groups="base.group_no_one" />
						</group>
						<group>
							<field name="fold" />
							<field name="in_progress" />
						</group>
					</group>
					<notebook>
						<page name="description" string="Description">
							<field name="description"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="sale_subscription_stage_action" model="ir.actions.act_window">
		<field name="name">Subscription Stages</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sale.subscription.stage</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create a new subscription stage
			</p>
		</field>
	</record>

	<menuitem id="menu_sale_subscription_stage" parent="menu_sale_subscription_config"
		action="sale_subscription_stage_action"
		groups="to_sale_subscription.group_sale_subscription_manager"
		sequence="5" />
</odoo>
