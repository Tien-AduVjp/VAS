<?xml version="1.0" encoding='UTF-8'?>
<odoo>
	<record id="cron_send_rating" model="ir.cron">
        <field name="name">Sale Subscription: Send rating</field>
        <field name="model_id" ref="to_sale_subscription.model_sale_subscription"/>
        <field name="state">code</field>
        <field name="code">model._send_rating_all()</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

	<record id="cron_update_stage" model="ir.cron" >
		<field name="name">Sale Subscription: subscriptions expiration</field>
		<field name="model_id"
			ref="to_sale_subscription.model_sale_subscription" />
		<field name="state">code</field>
		<field name="code">model.cron_update_stage()</field>
		<field name="interval_number">1</field>
		<field name="interval_type">weeks</field>
		<field name="numbercall">-1</field>
		<field name="doall" eval="False" />
	</record>

	<record id="account_analytic_cron_for_invoice" model="ir.cron" >
		<field name="name">Sale Subscription: invoices and payments </field>
		<field name="model_id" ref="to_sale_subscription.model_sale_subscription" />
		<field name="state">code</field>
		<field name="code">model._cron_generate_recurring_invoice()</field>
		<field name="interval_number">1</field>
		<field name="interval_type">days</field>
		<field name="numbercall">-1</field>
	</record>

	<record id="ir_cron_sale_subscription_update_kpi" model="ir.cron">
		<field name="name">Sale Subscription: Compute Sale KPI</field>
		<field name="model_id" ref="to_sale_subscription.model_sale_subscription" />
		<field name="state">code</field>
		<field name="code">model._cron_update_sale_kpi()</field>
		<field name="interval_number">1</field>
		<field name="interval_type">weeks</field>
		<field name="numbercall">-1</field>
	</record>
</odoo>
