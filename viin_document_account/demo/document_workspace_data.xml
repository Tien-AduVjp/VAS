<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="document_workspace_customer_invoice_demo" model="document.workspace">
        <field name="name">Customer Invoice</field>
        <field name="parent_id" ref="document_workspace_accounting"/>
        <field name="tag_ids" eval="[
            (4, ref('document_tag_account_customer_invoice')),
            (4, ref('document_tag_account_vat')),
            (4, ref('document_tag_account_financial')),
            (4, ref('document_tag_fiscal_year_2022')),
            (4, ref('document_tag_fiscal_year_2023')),
            (4, ref('document_tag_fiscal_year_2024')),
            (4, ref('viin_document.document_tag_to_review')),
            (4, ref('viin_document.document_tag_approve')),
            (4, ref('viin_document.document_tag_deprecate'))]"/>
        <field name="read_team_ids" eval="[(4, ref('document_team_accounting'))]"/>
        <field name="write_group_ids" eval="[(4, ref('account.group_account_manager'))]"/>
        <field name="read_group_ids" eval="[
            (4, ref('account.group_account_readonly')),
            (4, ref('account.group_account_invoice'))]"/>
        <field name="action_ids" eval="[
            (4, ref('viin_document.document_action_ask_to_review')),
            (4, ref('viin_document.document_action_approve')),
            (4, ref('document_action_move_to_vendor_bill_demo'))]"/>
    </record>

    <record id="document_workspace_vendor_bill" model="document.workspace">
        <field name="name">Vendor Bill</field>
        <field name="parent_id" ref="document_workspace_accounting"/>
        <field name="tag_ids" eval="[
            (4, ref('document_tag_account_vendor_bill')),
            (4, ref('document_tag_account_vat')),
            (4, ref('document_tag_account_financial')),
            (4, ref('document_tag_fiscal_year_2022')),
            (4, ref('document_tag_fiscal_year_2023')),
            (4, ref('document_tag_fiscal_year_2024')),
            (4, ref('viin_document.document_tag_to_review')),
            (4, ref('viin_document.document_tag_approve')),
            (4, ref('viin_document.document_tag_deprecate'))]"/>
        <field name="read_team_ids" eval="[(4, ref('document_team_accounting'))]"/>
        <field name="write_group_ids" eval="[(4, ref('account.group_account_manager'))]"/>
        <field name="read_group_ids" eval="[
            (4, ref('account.group_account_readonly')),
            (4, ref('account.group_account_invoice'))]"/>
        <field name="action_ids" eval="[
            (4, ref('viin_document.document_action_ask_to_review')),
            (4, ref('viin_document.document_action_approve')),
            (4, ref('document_action_move_to_customer_invoice_demo'))]"/>
    </record>

    <record id="viin_document_account.document_action_move_to_customer_invoice_demo" model="document.action">
        <field name="move_to_workspace_id" ref="document_workspace_customer_invoice_demo"/>
    </record>

    <record id="viin_document_account.document_action_move_to_vendor_bill_demo" model="document.action">
        <field name="move_to_workspace_id" ref="document_workspace_vendor_bill"/>
    </record>

    <record id="viin_document_account.document_workspace_accounting" model="document.workspace">
        <field name="action_ids" eval="[
            (4, ref('document_action_move_to_customer_invoice_demo')),
            (4, ref('document_action_move_to_vendor_bill_demo'))]"/>
    </record>

</odoo>
