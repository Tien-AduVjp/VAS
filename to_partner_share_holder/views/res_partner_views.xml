<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        
        <record id="partner_view_form_inherit" model="ir.ui.view">
	        <field name="name">res.partner.form.inherit.base</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_partner_form" />
	        <field name="arch" type="xml">
            	<page name="internal_notes" position="before">
            		<page name="shareholder" string="Shareholders" attrs="{'invisible': [('company_type', '=', 'person')]}">
            			<field name="shareholder_ids">
            				<tree string="Shareholders" editable="bottom">
            					<field name="shareholder_id" domain="[('company_type', '=', 'person')]"/>
            					<field name="owned_percentage"/>
            					<field name="description"/>
            				</tree>
            			</field>
            		</page>
            	</page>
	        </field>
        </record>
	
	</data>
</odoo>