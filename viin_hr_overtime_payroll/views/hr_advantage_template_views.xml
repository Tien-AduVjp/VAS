<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_advantage_template_view_form" model="ir.ui.view">
		<field name="name">hr.advantage.template.form</field>
		<field name="model">hr.advantage.template</field>
		<field name="inherit_id" ref="to_hr_payroll.hr_advantage_template_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='upper_bound']" position="after">
				<field name="overtime_base_factor" />
			</xpath>
		</field>
	</record>

	<record id="hr_advantage_template_view_tree" model="ir.ui.view">
		<field name="name">hr.advantage.template.tree</field>
		<field name="model">hr.advantage.template</field>
		<field name="inherit_id" ref="to_hr_payroll.hr_advantage_template_view_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='upper_bound']" position="after">
				<field name="overtime_base_factor" />
			</xpath>
		</field>
	</record>

</odoo>
