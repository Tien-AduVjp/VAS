<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="hr_payslip_run_form" model="ir.ui.view">
		<field name="name">hr.payslip.run.form</field>
		<field name="model">hr.payslip.run</field>
		<field name="inherit_id" ref="to_hr_payroll.hr_payslip_run_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_verify_payslips']"
				position="after">
				<button name="action_compute_overtime_entries"
					string="Recompute Overtime Entries"
					help="Click here to recompute overtime entries for all the payslips of this batch."
					type="object"
					attrs="{'invisible':['|',('slip_ids', '=', []),('state', '!=', 'draft')]}" />
			</xpath>
			<xpath expr="//div[@name='button_box']" position="inside">
				<button name="action_view_overtime_plan_lines"
					class="oe_stat_button" icon="fa-clock-o" type="object"
					attrs="{'invisible': [('overtime_plan_lines_count','=',0)]}">
					<field name="overtime_plan_lines_count" widget="statinfo"
						string="Overtime Entries"
						help="Overtime Entries that are included in this payslip batch for paying overtime work calculation." />
				</button>
			</xpath>
		</field>
	</record>

</odoo>
