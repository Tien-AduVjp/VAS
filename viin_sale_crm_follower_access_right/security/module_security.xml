<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">

		<record id="sale_order_rule_user" model="ir.rule">
			<field name="name">Personal followers order</field>
			<field name="model_id" ref="sale.model_sale_order" />
			<field name="domain_force">['|',('message_partner_ids', 'in', [user.partner_id.id]),('message_channel_ids', 'in', user.partner_id.channel_ids.ids)]</field>
			<field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
			<field name="perm_create" eval="0" />
			<field name="perm_write" eval="0" />
			<field name="perm_unlink" eval="0" />
			<field name="perm_read" eval="1" />
		</record>

		<record id="sale_order_line_rule_user" model="ir.rule">
			<field name="name">Persnal followers order line</field>
			<field name="model_id" ref="sale.model_sale_order_line" />
			<field name="domain_force">['|',('order_id.message_partner_ids', 'in', [user.partner_id.id]),('order_id.message_channel_ids', 'in', user.partner_id.channel_ids.ids)]</field>
			<field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
			<field name="perm_create" eval="0" />
			<field name="perm_write" eval="0" />
			<field name="perm_unlink" eval="0" />
			<field name="perm_read" eval="1" />
		</record>

		<record id="crm_lead_rule_user" model="ir.rule">
			<field name="name">Personal followers lead</field>
			<field name="model_id" ref="crm.model_crm_lead" />
			<field name="domain_force">['|',('message_partner_ids', 'in', [user.partner_id.id]),('message_channel_ids', 'in', user.partner_id.channel_ids.ids)]</field>
			<field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
			<field name="perm_create" eval="0" />
			<field name="perm_write" eval="0" />
			<field name="perm_unlink" eval="0" />
			<field name="perm_read" eval="1" />
		</record>

	</data>
</odoo>
