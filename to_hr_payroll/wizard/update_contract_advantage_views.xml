<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="update_contract_advantage_view_form" model="ir.ui.view">
		<field name="name">Update Contract Advantage</field>
		<field name="model">update.contract.advantage</field>
		<field name="arch" type="xml">
			<form string="Update Contract Advantage">
				<group>
					<div class="alert alert-warning" role="alert">
						<span colspan="4" nolabel="1">This action will generate contract advantages
							for all selected contract(s). If an advantage already exists on the contract,
							it will only be updated the amount.
						</span>
					</div>
				</group>
				<group>
					<field name="template_id"/>
					<field name="amount" />
					<field name="contract_ids">
						<tree>
							<field name="name"/>
							<field name="employee_id" widget="many2one_avatar_employee"/>
							<field name="job_id"/>
							<field name="department_id"/>
							<field name="state" widget="badge" decoration-success="state == 'open'"/>
						</tree>
					</field>
					<field name="currency_id" invisible="1"/>
					<field name="company_id" invisible="1"/>
				</group>
				<footer>
					<button name="action_confirm" string="Confirm" type="object" class="btn-primary" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="update_contract_advantage_action" model="ir.actions.act_window">
			<field name="name">Update Contract Advantage</field>
			<field name="res_model">update.contract.advantage</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="context">{'default_teamplate_id': active_id}</field>
	</record>
</odoo>
