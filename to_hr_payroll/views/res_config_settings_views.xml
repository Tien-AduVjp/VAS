<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="open_payroll_modules" model="ir.actions.act_window">
		<field name="name">Payroll</field>
		<field name="res_model">ir.module.module</field>
		<field name="view_mode">kanban,tree,form</field>
		<field name="context"
			eval="{'search_default_category_id': ref('base.module_category_localization'), 'search_default_name': 'Payroll'}" />
		<field name="search_view_id" ref="base.view_module_filter" />
	</record>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.hr.payroll
		</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="45" />
		<field name="inherit_id"
			ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Payroll"
					string="Payroll" data-key="to_hr_payroll"
					groups="to_hr_payroll.group_hr_payroll_manager">
					<field name="module_to_l10n_vn_hr_payroll" invisible="1" />
					<h2
						attrs="{'invisible': [('module_to_l10n_vn_hr_payroll', '=', True)]}">Payroll</h2>
					<div class="row mt16 o_settings_container"
						id="hr_payroll_localization">
						<div class="col-lg-6 col-12 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Payroll Rules</span>
								<div class="text-muted">
									Payroll rules that apply to your country
								</div>
								<div class="mt16" id="localization_text">
									<button name="%(open_payroll_modules)d"
										icon="fa-arrow-right" type="action"
										string="Choose a Payroll Localization" class="btn-link" />
								</div>
								<div class="mt16" id="localization_text">
									<button name="action_generate_payroll_rules"
										icon="fa-arrow-right" type="object"
										string="Generate Payroll Rules" class="btn-link"
										confirm="This will generate default rules for payroll. Please make sure you have set a proper country for your company before performing this action. Proceed now?" />
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Salary Cycle</span>
								<div class="text-muted">
									Customize your salary cycle
								</div>
								<div class="text-muted">
									<field name="salary_cycle_id" required="1" />
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Basic Wage Rule Category</span>
								<div class="text-muted">
									The salary rule category that represents employee's basic wage
								</div>
								<div class="text-muted">
									<field name="basic_wage_rule_categ_id" />
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Gross Salary Rule Category</span>
								<div class="text-muted">
									The salary rule category that computes employee gross salary (before tax)
								</div>
								<div class="text-muted">
									<field name="gross_salary_rule_categ_id" />
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Personal Income Tax Base Rule Category</span>
								<div class="text-muted">
									The salary rule category that represents the personal income tax base for personal income tax computation
								</div>
								<div class="text-muted">
									<field name="tax_base_rule_categ_id" />
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Net Income Rule Category</span>
								<div class="text-muted">
									The salary rule category that computes employee net income (after tax and deduction)
								</div>
								<div class="text-muted">
									<field name="net_income_salary_rule_categ_id" />
								</div>
							</div>
						</div>
						<div class="col-lg-6 col-12 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="module_viin_hr_payroll_administrative_region" />
							</div>
							<div name="payroll_administrative_region" class="o_setting_right_pane">
								<label for="module_viin_hr_payroll_administrative_region"
									string="Enable Payroll Administrative Region" />
								<div class="text-muted">
									Respect min./max. wage and contributions by administration regions
								</div>
							</div>
						</div>
					</div>
					<h2>Automation</h2>
					<div class="row mt16 o_settings_container"
						id="hr_payroll_automation">
						<div class="col-lg-6 col-12 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="payslips_auto_generation" />
							</div>
							<div class="o_setting_right_pane">
								<label for="payslips_auto_generation"
									string="Payslips Automation" />
								<div class="text-muted">
									Auto generate payslips periodically based on contracts settings
								</div>
								<button name="action_sync_contract_payslips_auto_generation"
									type="object"
									confirm="This action will synchronize (enable/disable) the Payslips Automation option to all the contracts that are in either draft or running state so that you will not have to do it manually for each and every contract of your company.">
									Update Contracts
								</button>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box"
							attrs="{'invisible':[('payslips_auto_generation','=',False)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Payslips Generation Schedule</span>
								<div class="text-muted">
									Payslips will be generated on the
									<field name="payslips_auto_generation_day"
										attrs="{'required':[('payslips_auto_generation','=',True)]}" />
									day off the company salary cycle
								</div>
								<div class="text-muted">
									Generation mode
									<field name="payslips_auto_generation_mode"
										attrs="{'required':[('payslips_auto_generation','=',True)]}" />
								</div>
								<div class="text-muted">
									Generation language
									<field name="payslips_auto_generation_lang" />
								</div>
							</div>
						</div>
					</div>
					<h2>Accounting</h2>
					<div class="row mt16 o_settings_container"
						id="hr_payroll_accountant">
						<div class="col-lg-6 col-12 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="module_to_hr_payroll_account" />
							</div>
							<div class="o_setting_right_pane">
								<label for="module_to_hr_payroll_account"
									string="Payroll Entries" />
								<div class="text-muted">
									Post payroll slips in accounting
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

	<record id="action_hr_payroll_configuration"
		model="ir.actions.act_window">
		<field name="name">Settings</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'to_hr_payroll'}</field>
	</record>

	<menuitem id="menu_hr_payroll_global_settings" name="Settings"
		parent="menu_hr_payroll_configuration" sequence="0"
		action="action_hr_payroll_configuration" groups="base.group_system" />
</odoo>
