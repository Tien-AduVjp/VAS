<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="to_hr_payroll_contribution_analysis_pivot_view">
			<field name="name">Payroll Contribution Analysis Pivot</field>
			<field name="model">hr.payroll.contribution.analysis</field>
			<field name="arch" type="xml">
				<pivot string="Payroll Contribution Analysis">
					<field name="state" type="row" />
					<field name="payroll_contribution_type_id" type="row" />
					<field name="date_from" type="col" />
				</pivot>
			</field>
		</record>
		<record model="ir.ui.view" id="to_hr_payroll_contribution_analysis_graph_view">
			<field name="name">Payroll Contribution Analysis Graph</field>
			<field name="model">hr.payroll.contribution.analysis</field>
			<field name="arch" type="xml">
				<graph string="Payroll Contribution Analysis">                 	
					<field name="payroll_contribution_type_id" type="row" />
				</graph>
			</field>
		</record>
		<record model="ir.ui.view" id="to_hr_payroll_contribution_analysis_tree_view">
			<field name="name">Payroll Contribution Analysis Tree</field>
			<field name="model">hr.payroll.contribution.analysis</field>
			<field name="arch" type="xml">
				<tree string="Payroll Analysis">                 	
					<field name="payroll_contribution_type_id" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="payroll_contribution_reg_id" />
					<field name="employee_contrib_reg_id" />
					<field name="company_contrib_reg_id" />
					<field name="employee_id" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<record id="view_hr_payroll_contribution_analyis_search" model="ir.ui.view">
	        <field name="name">Payroll Contribution Analysis Search</field>
	        <field name="model">hr.payroll.contribution.analysis</field>
	        <field name="arch" type="xml">
	            <search string="Payroll Contribution Analysis">
	                <field name="payroll_contribution_type_id"/>
	                <field name="date_from"/>
	                <field name="date_to"/>
	                <field name="employee_id"/>
	            </search>
	        </field>
	    </record>

		<!-- hr related job position menu action -->
		<record model="ir.actions.act_window" id="action_hr_payroll_contribution_analysis">
			<field name="name">Payroll Contribution Analysis</field>
			<field name="res_model">hr.payroll.contribution.analysis</field>
			<field name="view_mode">pivot,graph</field>
		</record>

		<menuitem action="action_hr_payroll_contribution_analysis" id="hr_menu_hr_payroll_contribution_analysis"
			name="Payroll Conrtibution Analysis" parent="menu_hr_payroll_reports" sequence="2"
			groups="to_hr_payroll.group_hr_payroll_user" />
	</data>
</odoo>