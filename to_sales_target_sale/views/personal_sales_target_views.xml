<odoo>
	<data>
		<record id="personal_sales_target_view_form" model="ir.ui.view">
			<field name="name">personal.sales.target.form</field>
			<field name="model">personal.sales.target</field>
			<field name="inherit_id"
				ref="to_sales_target.personal_sales_target_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
					<div class="oe_button_box" name="button_box">
						<button name="action_view_sale_orders" type="object"
							class="oe_stat_button" icon="fa-usd"
							groups="sales_team.group_sale_salesman"
							help="Sales Orders that match this target">
							<field name="sale_orders_count" widget="statinfo" />
						</button>
						<button name="action_view_invoices" type="object"
							class="oe_stat_button" icon="fa-pencil-square-o"
							groups="account.group_account_invoice"
							help="Customer Invoices that match this sales target">
							<field name="sales_invoices_count" widget="statinfo"
								string="Invoices" />
						</button>
					</div>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page name="kpi" string="Sales KPI">
						<group>
							<group name="sales" string="Sales">
								<field name="untaxed_sales_total" string="Sales Total" />
								<field name="sales_target_reached" widget="progressbar"
									string="Target Reached" />
							</group>
							<group name="invoiced" string="Invoiced">
								<field name="sales_invoiced" />
								<field name="invoiced_target_reached" widget="progressbar"
									string="Target Reached" />
							</group>
							<group name="all_channels" string="All Channels">
								<field name="sales_total" />
								<field name="target_reached" widget="progressbar" />
							</group>
						</group>
					</page>

				</xpath>
			</field>
		</record>

		<record id="personal_sales_target_view_tree" model="ir.ui.view">
			<field name="name">personal.sales.target.tree</field>
			<field name="model">personal.sales.target</field>
			<field name="inherit_id"
				ref="to_sales_target.personal_sales_target_view_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='target']" position="after">
					<field name="sales_total" />
					<field name="target_reached" widget="progressbar" />
				</xpath>
			</field>
		</record>

		<record id="personal_sales_target_view_graph"
			model="ir.ui.view">
			<field name="name">personal.sales.target.graph</field>
			<field name="model">personal.sales.target</field>
			<field name="inherit_id"
				ref="to_sales_target.personal_sales_target_view_graph" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='target']" position="after">
					<field name="sales_total" type="measure" />
					<field name="target_reached" type="measure"
						string="Target Comleted (%)" />
				</xpath>
			</field>
		</record>

		<record id="personal_sales_target_view_pivot"
			model="ir.ui.view">
			<field name="name">personal.sales.target.pivot</field>
			<field name="model">personal.sales.target</field>
			<field name="inherit_id"
				ref="to_sales_target.personal_sales_target_view_pivot" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='target']" position="after">
					<field name="sales_total" type="measure" />
					<field name="target_reached" type="measure"
						string="Target Comleted (%)" />
				</xpath>
			</field>
		</record>

		<record id="personal_sales_target_view_search" model="ir.ui.view">
			<field name="name">personal.sales.target.report.search</field>
			<field name="model">personal.sales.target</field>
			<field name="inherit_id"
				ref="to_sales_target.personal_sales_target_view_search" />
			<field name="arch" type="xml">
				<xpath expr="//filter[@name='my_target']" position="after">
					<separator />
					<filter name="target_reached" string="Target Reached"
						domain="[('target_reached', '&gt;=', 100.0)]" />
					<filter name="target_uncompleted" string="Target Unreached"
						domain="[('target_reached', '&lt;', 100.0)]" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>
