<odoo>
	<record id="wizard_confirm_purchase_form_view" model="ir.ui.view">
		<field name="name">wizard.confirm.purchase.form</field>
		<field name="model">wizard.confirm.purchase</field>
		<field name="inherit_id"
           ref="to_backdate.abstract_backdate_wizard_view_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="purchase_order_id" invisible="1" force_save="1"/>
            </xpath>
        </field>
	</record>

	<record id="action_wizard_confirm_purchase" model="ir.actions.act_window">
		<field name="name">Purchase Order Confirmation</field>
		<field name="res_model">wizard.confirm.purchase</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>
