<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="purchase_order_form">
		<field name="name">purchase.order.form</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='button_confirm' and @id='bid_confirm']" position="attributes">
				<attribute name="context">{'launch_confirmation_wizard':True}</attribute>
			</xpath>
			<xpath expr="//button[@name='button_confirm' and @id='draft_confirm']" position="attributes">
				<attribute name="context">{'launch_confirmation_wizard':True}</attribute>
			</xpath>
			<xpath expr="//button[@name='button_approve']" position="attributes">
				<attribute name="context">{'launch_confirmation_wizard':True}</attribute>
			</xpath>
		</field>
	</record>
</odoo>
