<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_production_lot_form" model="ir.ui.view">
		<field name="name">stock.production.lot.form</field>
		<field name="model">stock.production.lot</field>
		<field name="inherit_id" ref="stock.view_production_lot_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='button_box']" position="inside">
				<button type="object" name="action_view_repair_history"
					class="oe_stat_button" icon="fa-wrench"
					attrs="{'invisible':[('repair_count','=',0)]}" groups="stock.group_stock_user,to_repair_access_group.group_repair_manager">
					<field name="repair_count" widget="statinfo" string="Repairs"
						help="View repair history" />
				</button>
			</xpath>
		</field>
	</record>
</odoo>
