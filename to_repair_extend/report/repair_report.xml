<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_repair_report_pivot" model="ir.ui.view">
         <field name="name">repair.report.pivot</field>
         <field name="model">repair.report</field>
         <field name="arch" type="xml">
             <pivot string="Repair Report" disable_linking="True">
                 <field name="operation_product_id" type="col"/>
                 <field name="repair_product_id" type="row"/>
                 <field name="operation_product_uom_qty" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="action_repair_report_all" model="ir.actions.act_window">
        <field name="name">Repair Report</field>
        <field name="res_model">repair.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id"></field>
    </record>
</odoo>
