<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="document_workspace_hr" model="document.workspace">
        <field name="name">HR</field>
        <field name="tag_ids" eval="[
            (4, ref('document_tag_hr_employee_document')),
            (4, ref('document_tag_hr_certification')),
            (4, ref('document_tag_hr_hr')),
            (4, ref('viin_document.document_tag_to_review')),
            (4, ref('viin_document.document_tag_approve')),
            (4, ref('viin_document.document_tag_deprecate'))]"/>
        <field name="read_team_ids" eval="[(4, ref('document_team_hr'))]"/>
        <field name="write_group_ids" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="read_group_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="action_ids" eval="[
            (4, ref('viin_document.document_action_ask_to_review')),
            (4, ref('viin_document.document_action_approve')),
            (4, ref('viin_document.document_action_send_to_legal')),
            (4, ref('viin_document.document_action_deprecated'))]"/>
    </record>

    <record id="document_workspace_hr_document" model="document.workspace">
        <field name="name">Document</field>
        <field name="parent_id" ref="document_workspace_hr"/>
        <field name="tag_ids" eval="[
            (4, ref('document_tag_hr_employee_document')),
            (4, ref('document_tag_hr_certification')),
            (4, ref('document_tag_hr_hr')),
            (4, ref('viin_document.document_tag_to_review')),
            (4, ref('viin_document.document_tag_approve')),
            (4, ref('viin_document.document_tag_deprecate'))]"/>
        <field name="read_team_ids" eval="[(4, ref('document_team_hr'))]"/>
        <field name="write_group_ids" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="read_group_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="action_ids" eval="[
            (4, ref('viin_document.document_action_ask_to_review')),
            (4, ref('viin_document.document_action_approve')),
            (4, ref('viin_document.document_action_send_to_legal')),
            (4, ref('viin_document.document_action_deprecated'))]"/>
    </record>

</odoo>
