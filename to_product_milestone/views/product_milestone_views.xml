<odoo>
	<data>
		<record model="ir.ui.view" id="product_milestone_list">
			<field name="name">product_milestone_list</field>
			<field name="model">product.milestone</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree name="Product Milestones">
					<field name="name" />
					<field name="amount" />
					<field name="uom_id" />
					<field name="operation_time" />
				</tree>
			</field>
		</record>
		<record id="product_milestone_form_view" model="ir.ui.view">
			<field name="name">product.milestone.form</field>
			<field name="model">product.milestone</field>
			<field name="arch" type="xml">
				<form string="Product Milestones">
					<sheet>
						<div>
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="amount" />
								<field name="uom_id" />
								<field name="operation_time" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="product_milestone_list_view">
			<field name="name">Product Milestones</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.milestone</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

	</data>
</odoo>