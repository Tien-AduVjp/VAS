<odoo>
	<data>
		<record id="product_milestone_view_tree" model="ir.ui.view">
			<field name="name">product_milestone_list</field>
			<field name="model">product.milestone</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree name="Product Milestone">
					<field name="name" />
					<field name="amount" />
					<field name="uom_id" />
					<!-- TODO: remove field when upgrading to 15.0, not used anymore -->
					<field name="operation_time" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="product_milestone_view_form" model="ir.ui.view">
			<field name="name">product.milestone.form</field>
			<field name="model">product.milestone</field>
			<field name="arch" type="xml">
				<form string="Product Milestone">
					<sheet>
						<div>
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="amount" />
								<field name="uom_id" />
								<!-- TODO: remove field when upgrading to 15.0, not used anymore -->
								<field name="operation_time" invisible="1"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="product_milestone_view_list" model="ir.actions.act_window">
			<field name="name">Product Milestone</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.milestone</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

	</data>
</odoo>
