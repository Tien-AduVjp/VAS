<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
            	<xpath expr="//div[@id='dynamic_report']" position="attributes">
            		<attribute name="invisible">0</attribute>
            	</xpath>
            	<xpath expr="//field[@name='module_account_reports']" position="replace">
            		<field name="module_to_account_reports" />
            	</xpath>
            	<xpath expr="//label[@for='module_account_reports']" position="replace">
            		<label for="module_to_account_reports" string="Advanced Dynamic Reports"/>
            	</xpath>
            	<xpath expr="//div[@id='account_reports']" position="replace">
            		<div class="text-muted" id="account_reports">
                        Navigate easily through accounting and financial reports and see what is behind the numbers
                    </div>
            	</xpath>
            	
            	<xpath expr="//field[@name='module_account_budget']" position="replace">
            		<field name="module_to_account_budget" />
            	</xpath>
            	<xpath expr="//label[@for='module_account_budget']" position="replace">
            		<label for="module_to_account_budget" />
            	</xpath>
            	<xpath expr="//div[hasclass('o_setting_right_pane')][./label[@for='module_to_account_budget']]" position="inside">
            		<div id="msg_to_account_budget" class="content-group" attrs="{'invisible': [('module_to_account_budget', '=', False)]}">
                        <div class="text-warning mt16 mb4">
                            Save this page and come back here to set up the feature.
                        </div>
                    </div>
            	</xpath>
            	
            	<xpath expr="//t[@groups='account.group_account_user'][./div[@id='bank_cash']]" position="before">
	            	<t groups="account.group_account_user">
	            		<h2>Automated Entries</h2>
		                <div class="row mt16 o_settings_container" id="automated_entries">
		                    <div class="col-12 col-lg-6 o_setting_box" id="asset_types" title="This allows you to manage the assets owned by a company or a person. It keeps track of the depreciation occurred on those assets, and creates account move for those depreciation lines.">
		                        <div class="o_setting_left_pane">
		                            <field name="module_to_account_asset" />
		                        </div>
		                        <div class="o_setting_right_pane">
		                            <label for="module_to_account_asset"/>
		                            <div class="text-muted">
		                                Use depreciation boards, automate amortization entries
		                            </div>
		                            <div id="msg_to_account_asset" class="content-group" attrs="{'invisible': [('module_to_account_asset', '=', False)]}">
		                                <div class="text-warning mt16 mb4">
		                                    Save this page and come back here to set up the feature.
		                                </div>
		                            </div>
		                        </div>
		                    </div>
		                    <div class="col-12 col-lg-6 o_setting_box" title="This allows you to manage the revenue recognition on selling products. It keeps track of the installments occurred on those revenue recognitions, and creates account moves for those installment lines.">
		                        <div class="o_setting_left_pane">
		                            <field name="module_to_cost_revenue_deferred" />
		                        </div>
		                        <div class="o_setting_right_pane">
		                            <label for="module_to_cost_revenue_deferred" string="Deferred Revenues Management"/>
		                            <div class="text-muted">
		                                Automate deferred revenues entries for multi-year contracts
		                            </div>
		                            <div id="msg_cost_revenue_deferred" class="content-group" attrs="{'invisible': [('module_to_cost_revenue_deferred', '=', False)]}">
		                                <div class="text-warning mt16 mb4">
		                                    Save this page and come back here to set up the feature.
		                                </div>
		                            </div>
		                        </div>
		                    </div>
		                </div>
	            	</t>
            	</xpath>
            	
            	<xpath expr="//field[@name='module_currency_rate_live']" position='attributes'>
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='module_currency_rate_live']" position='after'>
					<field name="module_viin_auto_currency_rate"/>
				</xpath>
				
				<xpath expr="//label[@for='module_currency_rate_live']" position='attributes'>
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//label[@for='module_currency_rate_live']" position='after'>
					<label for="module_viin_auto_currency_rate"/>
				</xpath>
            </field>
        </record>

    </data>
</odoo>
