<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
    	<record id="to_employee_advance_payment_form" model="ir.ui.view">
            <field name="name">employee.advance.payment.form</field>
            <field name="model">employee.advance.payment</field>
            <field name="arch" type="xml">
                <form string="Payment">
                    <group>
                    	<group>	                        
	                        <field name="emp_advance_id" invisible="1" />
	                        <field name="employee_advance_reconcile_id" invisible="1" />
	                        <field name="payment_date" />
	                        <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount"/>
                                <field name="currency_id" force_save="1"/>
                            </div>
	                    </group>
	                    <group>
	                    	<field name="journal_id" context="{'default_lt_is_advance_journal': 1}" />
	                    	<field name="hide_payment_method" invisible="1"/>
                            <field name="payment_method_id" widget="radio" attrs="{'invisible': [('hide_payment_method', '=', True)]}"/>        
                            <field name="communication"/>          		                    	
	                    </group>
                    </group>
                    <footer>
                        <button name="action_pay" string="Pay" type="object" class="oe_highlight" />                       	
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_to_employee_advance_payment">
            <field name="name">Payment</field>
            <field name="res_model">employee.advance.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="to_employee_advance_payment_form"/>
            <field name="target">new</field>
        </record>
    
    </data>
</odoo>