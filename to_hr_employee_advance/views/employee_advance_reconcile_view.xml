<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<record id="to_hr_employee_advance_reconcile_tree" model="ir.ui.view">
			<field name="name">employee.advance.reconcile.tree</field>
			<field name="model">employee.advance.reconcile</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Advance Reconcile"
					decoration-muted="state=='cancel'"
					decoration-bf="state=='confirm'"
					decoration-success="state=='draft'">
					<field name="name" />
					<field name="date" />
					<field name="employee_id" />
					<field name="job_id" />
					<field name="department_id" />
					<field name="balance" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<record id="to_hr_employee_advance_reconcile_form" model="ir.ui.view">
			<field name="name">employee.advance.reconcile.form</field>
			<field name="model">employee.advance.reconcile</field>
			<field name="arch" type="xml">
				<form string="Employee Advance Reconcile" duplicate="0">
					<header>
						<button name="action_confirm" type="object" states="draft"
							string="Confirm" class="oe_highlight" />
						<button name="action_compute_data_line" type="object" states="draft" string="Compute" />
						<button name="%(action_to_employee_advance_payment)d" type="action" string="Pay Employee"
							class="oe_highlight" context="{'default_employee_advance_reconcile_id': active_id}"
							attrs="{'invisible':['|',('difference_amount','&gt;',0),('state','!=','confirm')]}" />
						<button name="%(action_to_employee_advance_payment)d" type="action" string="Employee Refund"
							class="oe_highlight" context="{'default_employee_advance_reconcile_id': active_id}"
							attrs="{'invisible':['|',('difference_amount','&lt;',0),('state','!=','confirm')]}" />
						<button name="action_cancel" type="object" states="confirm,done"
							string="Cancel" groups="account.group_account_manager" />
						<button name="action_draft" type="object" states="cancel"
							string="Set to Draft" class="oe_highlight" groups="account.group_account_manager" />
						<field name="state" readonly="1" statusbar_visible="draft,confirm,done"
							widget="statusbar" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="employee_id" />
								<field name="job_id" />
								<field name="department_id" />
							</group>
							<group>
								<field name="date" />
								<field name="journal_id" />
								<field name="difference_amount" invisible="1" />
								<field name="balance" />
							</group>
						</group>
						<notebook>
							<page string="Reconcile Information">
								<label for="line_db_ids" string="Debits" />
								<field name="line_db_ids">
									<tree string="Reconciled Debits" create="0" editable="bottom">
										<field name="move_line_id" force_save="1" />
										<field name="name" force_save="1" />
										<field name="account_id" force_save="1" />
										<field name="date" force_save="1" />
										<field name="amount" sum="Total Amount" force_save="1" />
										<field name="type" invisible="1" force_save="1" />
									</tree>
								</field>
								<label for="line_cr_ids" />
								<field name="line_cr_ids">
									<tree string="Reconciled Credits" create="0" editable="bottom">
										<field name="move_line_id" force_save="1" />
										<field name="name" force_save="1" />
										<field name="account_id" force_save="1" />
										<field name="date" force_save="1" />
										<field name="amount" sum="Total Amount" force_save="1" />
										<field name="type" invisible="1" force_save="1" />
									</tree>
								</field>
							</page>
							<page string="Journal Items" groups="account.group_account_user"
								attrs="{'invisible': [('state','not in',('confirm','done'))]}">
								<field name="move_lines" nolabel="1">
									<tree>
										<field name="date" />
										<field name="name" />
										<field name="partner_id" />
										<field name="account_id" />
										<field name="debit" sum="Total Debit" />
										<field name="credit" sum="Total Credit" />
										<field name="parent_state" />
									</tree>
								</field>
							</page>
							<page string="Payments / Refunds" attrs="{'invisible': [('state','not in',('confirm','done'))]}">
								<field name="payment_ids" nolabel="1" edit="0" create="0">
									<tree>
										<field name="payment_date"/>
										<field name="name"/>
										<field name="partner_id"/>
										<field name="journal_id"/>
										<field name="amount"/>
										<field name="state"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					    <field name="activity_ids" widget="mail_activity"/>
					</div>
				</form>
			</field>
		</record>
		
		<record id="to_hr_employee_advance_reconcile_search" model="ir.ui.view">
			<field name="name">employee.advance.reconcile.search</field>
			<field name="model">employee.advance.reconcile</field>
			<field name="arch" type="xml">
				<search string="Search Employee Advance Reconcile">
					<field name="name" string="Reference" />
					<field name="employee_id" />
					<separator />
					<filter name="draft_reconcile" string="Draft" domain="[('state','in', ('draft', 'cancel'))]" />
					<filter name="confirm_reconcile" string="Confirmed" domain="[('state','=', 'confirm')]" />
					<separator />
					<filter name="done_reconcile" string="Done" domain="[('state','=', 'done')]" />
					<separator />
					<group expand="0" string="Group By">
						<filter string="Employee" domain="[]" name="grp_employee"
							context="{'group_by':'employee_id'}" />
						<filter string="Advance Month" domain="[]" name="grp_date"
							context="{'group_by':'date'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_employee_advance_reconcile">
			<field name="name">Employee Advance Reconcile</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">employee.advance.reconcile</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem action="action_employee_advance_reconcile"
			id="employee_advance_reconcile_menu" parent="employee_advance_accounting_menu" sequence="0"/>

	</data>
</odoo>