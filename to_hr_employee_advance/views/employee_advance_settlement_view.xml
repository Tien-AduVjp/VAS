<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="to_hr_employee_advance_settlement_form" model="ir.ui.view">
			<field name="name">employee.advance.settlement.form</field>
			<field name="model">employee.advance.settlement</field>
			<field name="arch" type="xml">
				<form string="Employee Advance Settlement">
					<group>
						<group>
							<field name="amount" />
							<field name="journal_id" widget="selection" />
							<field name="type" invisible="1" />
						</group>
						<group>
							<field name="date" />
							<field name="name" />
							<field name="move_id" readonly="1"/>
						</group>
					</group>
					<footer>
						<button name="action_settle" string="Pay" class="oe_highlight"
							type="object" attrs="{'invisible':[('type','=','refund')]}" />
						<button name="action_settle" string="Refund" class="oe_highlight"
							type="object" attrs="{'invisible':[('type','=','pay')]}" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

	</data>
</odoo>