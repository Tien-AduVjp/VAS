<odoo>
	<record id="employee_advance_reconcile_view_tree" model="ir.ui.view">
		<field name="name">employee.advance.reconcile.tree</field>
		<field name="model">employee.advance.reconcile</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree decoration-muted="state=='cancel'" decoration-bf="state=='confirm'" decoration-success="state=='draft'">
				<field name="name" />
				<field name="date" />
				<field name="employee_id" />
				<field name="job_id" />
				<field name="department_id" />
				<field name="balance" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record id="employee_advance_reconcile_view_form" model="ir.ui.view">
		<field name="name">employee.advance.reconcile.form</field>
		<field name="model">employee.advance.reconcile</field>
		<field name="arch" type="xml">
			<form string="Employee Advance Reconcile" duplicate="0">
				<header>
					<button name="action_confirm" type="object" states="draft" string="Confirm" class="oe_highlight" groups="account.group_account_user" />
					<button name="action_compute_data_line" type="object" states="draft" string="Compute" groups="account.group_account_user" />
					<button name="%(employee_advance_payment_action)d" type="action" string="Pay Employee" class="oe_highlight"
						context="{'default_employee_advance_reconcile_id': active_id}" groups="account.group_account_user"
						attrs="{'invisible':['|','|',('difference_amount','&gt;',0),('state','!=','confirm'),('balance', '=', 0)]}" />
					<button name="%(employee_advance_payment_action)d" type="action" string="Employee Refund" class="oe_highlight"
						context="{'default_employee_advance_reconcile_id': active_id}" groups="account.group_account_user"
						attrs="{'invisible':['|','|',('difference_amount','&lt;',0),('state','!=','confirm'),('balance', '=', 0)]}" />
					<button name="action_cancel" type="object" states="confirm,done" string="Cancel" groups="account.group_account_manager" />
					<button name="action_draft" type="object" states="cancel" string="Set to Draft" class="oe_highlight" groups="account.group_account_manager" />
					<field name="state" readonly="1" statusbar_visible="draft,confirm,done" widget="statusbar" />
				</header>
				<div groups="account.group_account_user"
                     class="alert alert-info" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible': [('has_outstanding_payment', '=', False)]}">
                    You have <b>draft or cancelled payment</b> for this employee advance reconcile. You should <b>delete</b> or <b>post</b> them.
                </div>
                <field name="has_outstanding_payment" invisible="1"/>
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="employee_id" />
							<field name="job_id" />
							<field name="department_id" />
						</group>
						<group>
							<field name="date" />
							<field name="journal_id" />
							<field name="difference_amount" invisible="1" />
							<field name="balance" />
						</group>
					</group>
					<notebook groups='account.group_account_user'>
						<page string="Reconcile Information">
							<label for="line_db_ids" string="Debits" />
							<field name="line_db_ids">
								<tree string="Reconciled Debits" create="0" editable="bottom">
									<field name="move_line_id" force_save="1" />
									<field name="name" force_save="1" optional="hide"/>
									<field name="account_id" force_save="1" />
									<field name="date" force_save="1" />
									<field name="amount" sum="Total Amount" force_save="1" />
									<field name="type" invisible="1" force_save="1" />
								</tree>
							</field>
							<label for="line_cr_ids" />
							<field name="line_cr_ids">
								<tree string="Reconciled Credits" create="0" editable="bottom">
									<field name="move_line_id" force_save="1" />
									<field name="name" force_save="1" optional="hide"/>
									<field name="account_id" force_save="1" />
									<field name="date" force_save="1" />
									<field name="amount" sum="Total Amount" force_save="1" />
									<field name="type" invisible="1" force_save="1" />
								</tree>
							</field>
						</page>
						<page string="Payments / Refunds">
							<field name="payment_ids" nolabel="1" edit="0" create="0">
								<tree>
									<field name="date" />
									<field name="name" />
									<field name="partner_id" />
									<field name="journal_id" />
									<field name="amount" />
									<field name="state" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" groups="base.group_user" />
					<field name="message_ids" />
					<field name="activity_ids" />
				</div>
			</form>
		</field>
	</record>

	<record id="employee_advance_reconcile_view_search" model="ir.ui.view">
		<field name="name">employee.advance.reconcile.search</field>
		<field name="model">employee.advance.reconcile</field>
		<field name="arch" type="xml">
			<search string="Search Employee Advance Reconcile">
				<field name="name" string="Reference" />
				<field name="employee_id" />
				<separator />
				<filter name="draft_reconcile" string="Draft" domain="[('state','in', ('draft', 'cancel'))]" />
				<filter name="confirm_reconcile" string="Confirmed" domain="[('state','=', 'confirm')]" />
				<separator />
				<filter name="done_reconcile" string="Done" domain="[('state','=', 'done')]" />
				<separator />
				<group expand="0" string="Group By">
					<filter string="Employee" domain="[]" name="grp_employee" context="{'group_by':'employee_id'}" />
					<filter string="Advance Month" domain="[]" name="grp_date" context="{'group_by':'date'}" />
				</group>
			</search>
		</field>
	</record>

	<record id="employee_advance_reconcile_action" model="ir.actions.act_window">
		<field name="name">Employee Advance Reconcile</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">employee.advance.reconcile</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
	</record>

	<menuitem id="employee_advance_reconcile_menu" action="employee_advance_reconcile_action"
	parent="employee_advance_menu_accounting" sequence="0" />
</odoo>
