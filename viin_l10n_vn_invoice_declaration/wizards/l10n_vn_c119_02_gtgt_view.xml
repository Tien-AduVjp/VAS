<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Action form view for Invoice Declaration, Ref Purchase (01 -2/GTGT) -->
		<record id="wizard_l10n_vn_c119_02gtgt_form" model="ir.ui.view">
			<field name="name">02 GTGT Form</field>
			<field name="model">wizard.l10n_vn_c119.02gtgt</field>
			<field name="arch" type="xml">
				<form>
					<group colspan="2" col="6">
						<field name="type" widget="radio"
							options="{'horizontal': true}" />
						<field name="month"
							attrs="{'invisible': [('type', '=', 'quarter')]}" />
						<field name="quarter"
							attrs="{'invisible': [('type', '=', 'month')]}" />
					</group>
					<group colspan="2" col="4">
						<field name="date_from" />
						<field name="date_to" />
					</group>
					<footer>
						<button name="print_purchase" string="Print Excel"
							type="object" class="btn-primary" />
						<button string="Cancel" class="btn-secondary"
							special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<!-- Action window for Invoice Declaration, Ref Purchase (01 -2/GTGT) -->
		<record id="action_wizard_l10n_vn_c119_02gtgt"
			model="ir.actions.act_window">
			<field name="name">LIST OF INVOICES, FINANCIAL PAPERS OF PURCHASED GOODS AND SERVICES (01 -2/GTGT)
			</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wizard.l10n_vn_c119.02gtgt</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_l10n_vn_c119_02gtgt_form" />
			<field name="target">new</field>
		</record>
		
		<!--Menu action-->
		<menuitem parent="invoice_declaration_vn_statements_menu"
			id="viin_l10n_vn_invoice_declaration_purchase"
			groups="account.group_account_user"
			action="action_wizard_l10n_vn_c119_02gtgt" 
			sequence="1" name="List of Invoice, Financial paper of Purchased and Services (01 -2/GTGT)" />
	</data>
</odoo>