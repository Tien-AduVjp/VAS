<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.form.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']/div" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" title="The creation of contacts with duplicated tax code is not allowed">
                    <div class="o_setting_left_pane">
                        <field name="check_unique_vat"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="check_unique_vat"/>
                        <div class="text-muted">
                            The creation of contacts with duplicated tax code is not allowed.
                        </div>
                    </div>
                </div>
            </xpath>
		</field>
	</record>
</odoo>
