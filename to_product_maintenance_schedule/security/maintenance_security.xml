<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_maintenance_user" model="res.groups">
        <field name="name">Maintenance User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_manufacturing_maintenance"/>
    </record>

	<record id="maintenance.group_equipment_manager" model="res.groups">
		<field name="name">Maintenance Manager</field>
		<field name="implied_ids" eval="[(4, ref('group_maintenance_user'))]"/>
	</record>

    <record model="res.users" id="base.user_root">
        <field eval="[(4,ref('maintenance.group_equipment_manager'))]" name="groups_id"/>
    </record>

    <record id="equipment_rule_maintenance_user" model="ir.rule">
        <field name="name">Maintenance Users are allowed to access all equipments </field>
        <field name="model_id" ref="maintenance.model_maintenance_equipment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('to_product_maintenance_schedule.group_maintenance_user'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>

    <record id="equipment_request_rule_user" model="ir.rule">
        <field name="name">Users are allowed to access maintenance requests</field>
        <field name="model_id" ref="maintenance.model_maintenance_request"/>
        <field name="domain_force">[('owner_user_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
