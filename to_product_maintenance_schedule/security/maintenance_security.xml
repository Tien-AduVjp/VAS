<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record model="ir.module.category" id="module_category_maintenance">
        <field name="name">Maintenance</field>
        <field name="sequence">20</field>
    </record>


    <record id="group_maintenance_user" model="res.groups">
        <field name="name">Maintenance User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="to_product_maintenance_schedule.module_category_maintenance"/>
    </record>

    <record id="group_maintenance_manager" model="res.groups">
        <field name="name">Maintenance Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_maintenance_user'))]"/>
        <field name="category_id" ref="to_product_maintenance_schedule.module_category_maintenance"/>
    </record>    

    <record model="res.users" id="base.user_root">
        <field eval="[(4,ref('to_product_maintenance_schedule.group_maintenance_manager'))]" name="groups_id"/>
    </record>

    <record model="res.users" id="base.user_admin">
        <field eval="[(4,ref('to_product_maintenance_schedule.group_maintenance_manager'))]" name="groups_id"/>
    </record>
    
    <record id="equipment_rule_maintenance_user" model="ir.rule">
        <field name="name">Maintenance Users are allowed to access all equipments </field>
        <field name="model_id" ref="maintenance.model_maintenance_equipment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('to_product_maintenance_schedule.group_maintenance_user'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>

</odoo>
