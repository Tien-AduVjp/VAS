<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.token</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="base_setup.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//div[hasclass('o_setting_box')][./div/field[@name='show_effect']]"
					position="after">
					<div class="col-12 col-lg-6 o_setting_box"
						groups="base.group_no_one">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<label for="rotating_token_life" />
							<div class="text-muted">
								If a positive value is set, tokens will live for
								that given days. Otherwise, they will never get expired.
							</div>
							<div class="content-group">
								<div class="mt16">
									<field name="rotating_token_life" />
									<span>days</span>
								</div>
							</div>
						</div>
					</div>
				</xpath>
			</field>
		</record>

	</data>
</odoo>