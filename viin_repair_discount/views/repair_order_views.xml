<odoo>
	<data>
		<record id="view_repair_order_form" model="ir.ui.view">
			<field name="name">repair.form</field>
			<field name="model">repair.order</field>
			<field name="inherit_id" ref="repair.view_repair_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//notebook//field[@name='operations']/form//field[@name='price_subtotal']" position="after">
					<field name="discount"/>
				</xpath>
				<xpath expr="//notebook//field[@name='fees_lines']/form//field[@name='price_subtotal']" position="after">
					<field name="discount"/>
				</xpath>
				<xpath expr="//field[@name='operations']/tree/field[@name='tax_id']" position="after">
					<field name="discount"/>
				</xpath>
				<xpath expr="//field[@name='fees_lines']/tree/field[@name='tax_id']" position="after">
					<field name="discount"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
