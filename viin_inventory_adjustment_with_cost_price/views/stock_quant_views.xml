<odoo>
    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="name">stock.quant.tree.editable.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value']" position="before">
                <field name="diff_float_compared" invisible="1"/>
                <field name="cost_method" invisible="1"/>
                <field name="price_unit" widget="monetary"
                       attrs="{'invisible': ['|', ('diff_float_compared', '&lt;=', 0), ('cost_method', '=', 'standard')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
