<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="stock_allocation_request_form_view">
			<field name="name">stock.allocation.request.form</field>
			<field name="model">stock.allocation.request</field>
			<field name="arch" type="xml">
				<form string="Stock Allocation Request Form">
					<header>
						<button name="action_confirm" type="object"
							string="Confirm" states="draft" class="oe_highlight" />
						<button name="action_approve" type="object"
							string="Approve" states="waiting,refused" class="oe_highlight"
							confirm="Depending on your product configuration, this may trigger a request for quotation, a manufacturing order or a stock transfer. Once approved, the request will not be able to get cancelled nor refused. Are you sure that you want to proceed?"
							groups="stock.group_stock_manager" />
						<button name="action_refuse" type="object" string="Refuse"
							states="waiting" groups="stock.group_stock_manager" />
						<button name="action_done" type="object"
							string="Mark as Done" states="approved" class="oe_highlight" />
						<button name="action_cancel" type="object" string="Cancel"
							states="waiting,refused" />
						<button name="action_cancel" type="object" string="Cancel"
							states="approved" groups="stock.group_stock_manager"  />
						<button name="action_draft" type="object"
							string="Set to draft" states="cancelled" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,waiting,refused,approved,cancelled" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="action_view_procurement_groups"
								type="object" icon="fa-support" class="oe_stat_button"
								groups="stock.group_stock_user"
								attrs="{'invisible': [('procurement_groups_count', '=', 0)]}">
								<field name="procurement_groups_count" widget="statinfo"
									string="Procurement Group" />
							</button>
							<button name="action_view_stock_pickings" type="object"
								icon="fa-truck" class="oe_stat_button"
								groups="stock.group_stock_user"
								attrs="{'invisible': [('pickings_count', '=', 0)]}">
								<field name="pickings_count" widget="statinfo"
									string="Picking" />
							</button>
						</div>
						<div class="oe_title">
							<h1>
								<field name="name" readonly="1" />
							</h1>
						</div>
						<group>
							<group>
								<field name="warehouse_id" />
								<field name="scheduled_date" />
							</group>
							<group>
								<field name="responsible_id" />
							</group>
						</group>
						<field name="line_ids" context="{'default_src_warehouse_id)]': warehouse_id}">
							<tree editable="bottom" context="{'default_src_warehouse_id)]': warehouse_id}">
								<field name="product_id" />
								<field name="description" />
								<field name="quantity" />
								<field name="uom_id" />
								<field name="warehouse_id" required="1" />
								<field name="state" invisible="1" />
							</tree>
						</field>
						<field name="note" />
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="stock_allocation_request_tree_view">
			<field name="name">stock.allocation.request.tree</field>
			<field name="model">stock.allocation.request</field>
			<field name="arch" type="xml">
				<tree string="Stock Allocation Request Tree"
					decoration-bf="message_needaction==True"
					decoration-muted="state=='cancelled'">
					<field name="name" />
					<field name="warehouse_id" />
					<field name="scheduled_date" />
					<field name="responsible_id" />
					<field name="state" />
					<field name="message_needaction" invisible="1" />
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="stock_allocation_request_calendar_view">
			<field name="name">stock.allocation.request.tree</field>
			<field name="model">stock.allocation.request</field>
			<field name="arch" type="xml">
				<calendar string="Stock Allocation Request Calendar" date_start="scheduled_date" color="create_uid">
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="create_uid"/>
                </calendar>
			</field>
		</record>

		<record model="ir.ui.view"
			id="stock_allocation_request_search_view">
			<field name="name">stock.allocation.request.search</field>
			<field name="model">stock.allocation.request</field>
			<field name="arch" type="xml">
				<search string="Stock Allocation Request Search">
					<field name="name" />
					<field name="warehouse_id" />
					<field name="product_id" />
					<field name="procurement_group_ids" />
					<field name="responsible_id" />
					<filter name="ftr_draft" string="Draft"
						domain="[('state','=','draft')]" />
					<filter name="ftr_waiting" string="Waiting Approval"
						domain="[('state','=','waiting')]" />
					<filter name="ftr_approved" string="Approved"
						domain="[('state','=','approved')]" />
					<filter name="ftr_done" string="Done"
						domain="[('state','=','done')]" />
					<filter name="ftr_refused" string="Refused"
						domain="[('state','=','refused')]" />
					<filter name="ftr_cancelled" string="Cancelled"
						domain="[('state','=','cancelled')]" />
					<separator />
					<filter string="My Requests" name="ftr_my_requests"
						domain="[('create_uid', '=', uid)]" />
					<filter string="Waiting my approval"
						name="ftr_waiting_my_approval"
						domain="[('responsible_id', '=', uid),('state','=','waiting')]"
						groups="stock.group_stock_manager" />
					<filter string="Approved by Me" name="ftr_approved_by_me"
						domain="[('responsible_id', '=', uid),('state','=','approved')]"
						groups="stock.group_stock_manager" />
					<group string="Group By">
						<filter string="Warehouse" name="grp_warehouse" domain="[]"
							context="{'group_by':'warehouse_id'}" />
						<filter string="Responsible" name="grp_responsible"
							domain="[]" context="{'group_by':'responsible_id'}" />
						<filter string="Scheduled Date" name="grp_scheduled_date"
							domain="[]" context="{'group_by':'scheduled_date'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="action_stock_allocation_request">
			<field name="name">Stock Allocation Request</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.allocation.request</field>
			<field name="view_mode">tree,calendar,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new stock allocation request
				</p>
				<p>
					Once you have input and confirm your allocation request, it
					will be sent to a manager for approval.
				</p>
			</field>
		</record>

		<menuitem id="stock_allocation_request_menu"
			parent="stock.menu_stock_warehouse_mgmt"
			action="action_stock_allocation_request" name="Stock Allocation Requests" />
			
	</data>
</odoo>