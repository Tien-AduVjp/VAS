<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="email_template_submit_notification"
			model="mail.template">
			<field name="name">Stock Allocation Submit Notification</field>
			<field name="email_from">${object.create_uid.email_formatted |safe}</field>
			<field name="subject">Please approve the stock allocation request
				${object.name}</field>
			<field name="partner_to">${object.responsible_id.partner_id.id}</field>
			<field name="model_id"
				ref="to_stock_product_allocation.model_stock_allocation_request" />
			<field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
	<p style="margin: 0px; padding: 0px; font-size: 13px;">
		Dear ${object.responsible_id.partner_id.name},
		<br />
		<br />
		The Stock Allocation Request
		<strong>${object.name}</strong>
		has been submitted and is waiting for your approval.
	</p>
</div>
			</field>
			<field name="lang">${object.responsible_id.partner_id.lang}</field>
			<field name="user_signature" eval="True" />
			<field name="auto_delete" eval="True" />
		</record>
	</data>
</odoo>