<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_sale_order_form" model="ir.ui.view">
		<field name="name">sale.order.form.inherit</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<field name="payment_term_id" position="after">
				<field name="loyalty_id" />
				<field name="spendable_points"
					attrs="{'invisible': ['|', ('loyalty_id', '=', False), ('state', 'not in', ('draft', 'sent', 'sale'))]}" />
				<field name="reward_count" invisible="1" />
				<field name="customer_level_id" invisible="1" />
			</field>
			<xpath expr="//group[@name='sale_reporting']" position="after">
				<group name="loyalty" string="Loyalty Programs"
					groups="to_loyalty.group_loyalty_manager">
					<field name="loyalty_points" />
				</group>
			</xpath>
			<xpath
				expr="//field[@name='order_line']/form/group/group/field[@name='price_subtotal']"
				position="after">
				<field name="reward_id" />
				<field name="loyalty_points" />
			</xpath>
			<xpath
				expr="//field[@name='order_line']/tree/field[@name='price_subtotal']"
				position="after">
				<field name="loyalty_points" groups="base.group_no_one" />
			</xpath>
			<xpath expr="//form//header//button[@name='action_draft']" position="after">
				<button name="%(action_reward_popup)d" type="action"
					string="Rewards" class="oe_highlight"
					groups="to_loyalty.group_loyalty_manager"
					attrs="{'invisible':['|', ('state', 'not in', ('draft', 'sent', 'sale')), ('reward_count', '=', 0)]}"
					context="{'default_sale_order_id': active_id}" />
			</xpath>
		</field>
	</record>
	<record id="view_sales_order_auto_done_setting" model="ir.ui.view">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_sales_order_auto_done_setting" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_done']" position="after">
				<button name="%(action_reward_popup)d" type="action"
					string="Rewards" class="oe_highlight"
					groups="to_loyalty.group_loyalty_manager"
					attrs="{'invisible':['|', ('state', 'not in', ('draft', 'sent', 'sale')), ('reward_count', '=', 0)]}"
					context="{'default_sale_order_id': active_id}" />
			</xpath>
		</field>
	</record>
</odoo>
