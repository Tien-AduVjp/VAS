<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    	<record id="reward_wizard_form" model="ir.ui.view">
            <field name="name">reward.wizard.form</field>
            <field name="model">reward.wizard</field>
            <field name="arch" type="xml">
                <form string="Rewards">
                    <group>
                    	<group>
	                        <field name="sale_order_id" invisible="1" />
	                        <field name="reward_id"/>
	                    </group>
                    </group>
                    <footer>
                        <button name="action_choose" string="Choose" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_reward_popup">
            <field name="name">Rewards</field>
            <field name="res_model">reward.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="reward_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
