<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="product_template_form_view" model="ir.ui.view">
			<field name="name">product.template.common.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//notebook/page[last()]" position="before">
					<page name="purchase_landed_cost" string="Purchase Landed Costs"
						attrs="{'invisible':[('type', '!=', 'product')]}" groups="purchase.group_purchase_user">
						<field name="product_landed_cost_ids">
							<tree name="product_landed_cost_ids" nolabel="1" editable="bottom">
								<field name="sequence" widget="handle" />
								<field name="product_id" domain="[('landed_cost_ok', '=', True)]"
									context="{'default_landed_cost_ok': True, 'default_type': 'service', 'form_view_ref':'to_purchase_landed_cost.view_stock_landed_cost_type_form'}" />
								<field name="description" />
								<field name="auto_purchase" />
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
