<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_stock_landed_cost_form" model="ir.ui.view">
			<field name="name">stock.landed.cost.form</field>
			<field name="model">stock.landed.cost</field>
			<field name="inherit_id"
				ref="stock_landed_costs.view_stock_landed_cost_form" />
			<field name="arch" type="xml">
				<xpath expr="//header" position="after">
					<field name="should_wait_for_lc_invoice" invisible="1" />
					<div class="alert alert-info" role="alert"
						style="margin-bottom:0px;"
						attrs="{'invisible': ['|',('should_wait_for_lc_invoice','=',False),('state','in',['done','cancel'])]}">
						<strong>Wait!</strong> There could be a corresponding landed cost purchase
						order that might not have been billed yet. You may want to get
						them billed first so that Odoo could help track your landed costs
						against the bills...
					</div>
				</xpath>
				<xpath
					expr="//field[@name='cost_lines']/form/group/group/field[@name='product_id']"
					position="after">
					<field name="invoice_line_id" />
					<field name="for_stock_done_picking_ids"
						widget="many2many_tags" />
				</xpath>
				<xpath
					expr="//field[@name='cost_lines']/tree/field[@name='product_id']"
					position="after">
					<field name="invoice_line_id" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>