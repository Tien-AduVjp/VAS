<odoo>
    <record id="view_hr_skill_description_list" model="ir.ui.view">
        <field name="name">hr.skill.description.tree.inherited</field>
        <field name="model">hr.skill.description</field>
        <field name="inherit_id" ref="viin_hr_skill_framework.view_hr_skill_description_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='level_progress']" position='after'>
                <field name="slide_channel_count"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_skill_description_form" model="ir.ui.view">
        <field name="name">hr.skill.description.form</field>
        <field name="model">hr.skill.description</field>
        <field name="inherit_id" ref="viin_hr_skill_framework.view_hr_skill_description_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="before">
                <div name="button_box" class="oe_button_box">
		            <button name="action_view_slide_channel" class="oe_stat_button"
		                icon="fa-book" type="object">
		                <field name="slide_channel_count" widget="statinfo"
		                    string="Courses" />
		            </button>
                </div>
            </xpath>
            <xpath expr="//page[@name='desc']" position='after'>
                <page name="courses" string="Courses" groups="website_slides.group_website_slides_officer">
	               <field name="slide_channel_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
