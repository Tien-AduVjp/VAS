<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_employee_grade_form"
            model="ir.ui.view">
            <field name="name">hr.employee.grade.form</field>
            <field name="model">hr.employee.grade</field>
            <field name="inherit_id"
                ref="to_hr_employee_grade.view_hr_employee_grade_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='child_ids']"
                    position="after">
            			<separator string="Required Courses" />
                        <field name="require_training_ids">
                            <tree name="require_training_ids"
                                editable="bottom">
                                <field name="slide_channel_id" />
                                <field name="require_hour" widget="timesheet_uom" />
                            </tree>
                        </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
