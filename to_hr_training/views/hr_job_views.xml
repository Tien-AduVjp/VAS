<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_job_form"
            model="ir.ui.view">
            <field name="name">hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form" />
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <separator string="Required Courses" />
                    <field name="require_training_ids">
                        <tree name="require_training_ids" editable="bottom">
                            <field name="slide_channel_id" />
                            <field name="require_hour" widget="timesheet_uom" />
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
