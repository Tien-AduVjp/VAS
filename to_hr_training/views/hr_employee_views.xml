<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='public']" position="after">
	                <page string="Criterions">
                        <separator string="Courses" />
                        <field name="training_line_ids" force_save="1">
                            <tree name="training_line_ids" editable="bottom">
                                <field name="slide_channel_id" />
                                <field name="require_hour" widget="timesheet_uom" />
                            </tree>
                        </field>
	                </page>
            	</xpath>
            </field>
        </record>

        <record id="hr_employee_public_view_form" model="ir.ui.view">
            <field name="name">hr.employee.public.form.inherit</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="show_required_course" invisible="1"/>
                </xpath>
                 <xpath expr="//page[@name='public']" position="after">
	                <page string="Criterions" attrs="{'invisible': [('show_required_course', '=', False)]}">
                        <separator string="Require Courses" />
                        <field name="training_line_ids">
                            <tree name="training_line_ids" editable="bottom">
                                <field name="slide_channel_id" />
                                <field name="require_hour" widget="timesheet_uom" />
                            </tree>
                        </field>
	                </page>
            	</xpath>
            </field>
        </record>

    </data>
</odoo>
