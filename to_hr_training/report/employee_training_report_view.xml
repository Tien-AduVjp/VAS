<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="employee_training_action_pivot" model="ir.actions.act_window" >
            <field name="name">Training Analysis</field>
            <field name="res_model">hr.employee.training.line</field>
            <field name="view_mode">pivot,tree</field>
            <field name="domain">[('employee_id','!=',False)]</field>
        </record>

        <record id="employee_training_view_pivot" model="ir.ui.view" >
            <field name="name">hr.employee.training.pivot</field>
            <field name="model">hr.employee.training.line</field>
            <field name="arch" type="xml">
                <pivot string="Courses">
                    <field name="employee_id" type="row"/>
                    <field name="require_hour" type="measure" widget="timesheet_uom"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="employee_training_tree">
            <field name="name">hr.employee.training.tree</field>
            <field name="model">hr.employee.training.line</field>
            <field name="arch" type="xml">
                <tree string="Courses" >
                    <field name="employee_id"/>
                    <field name="slide_channel_id"/>
                    <field name="grade_id"/>
                    <field name="job_id"/>
                    <field name="require_hour" widget="timesheet_uom"/>
                </tree>
            </field>
        </record>

        <menuitem name="Statistic"
            id="employee_training_menu_pivot_report"
            action="employee_training_action_pivot"
            sequence="99"
            parent="website_slides.website_slides_menu_report"/>

    </data>
</odoo>
