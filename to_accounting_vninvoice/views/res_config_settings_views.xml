<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.accounting.vninvoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="to_einvoice_common.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='einvoice_settings']" position="after">
                <h2 groups="account.group_account_manager" attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">VN-Invoice Settings</h2>
                <div class="row mt16 o_settings_container" id="vninvoice_settings" groups="account.group_account_manager" attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
                    <div class="col-lg-6 col-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="text-muted"
								attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
								Using sandbox to test your VN-Invoice integration
								first.
							</div>
							<div class="content-group"
								attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
								<div class="mt16">
									<field name="vninvoice_mode" widget="radio"
										class="o_light_label" />
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<span class="o_form_label">API URL</span>
							<div class="text-muted">
								The URL to connect to VN-Invoice's API service
							</div>
							<div class="mt16" id="vninvoice_api_url">
								<field name="vninvoice_api_url" class="oe_inline"
									attrs="{'invisible': [('vninvoice_mode','!=','production')], 'required': [('einvoice_provider','=','vninvoice')]}" />
								<field name="sandbox_vninvoice_api_url" class="oe_inline"
									attrs="{'invisible': [('vninvoice_mode','=','production')], 'required': [('einvoice_provider','=','vninvoice')]}" />
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="vninvoice_api_username" />
							<div class="text-muted">
								The username for VN-invoice API authentication
							</div>
							<div class="mt16" id="vninvoice_api_username">
								<field name="vninvoice_api_username"
									attrs="{'required': [('einvoice_provider','=','vninvoice')]}" />
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="vninvoice_api_password" />
							<div class="text-muted">
								The password for VN-invoice API authentication
							</div>
							<div class="mt16" id="vninvoice_api_password">
								<field name="vninvoice_api_password" password="True"
									attrs="{'required': [('einvoice_provider','=','vninvoice')]}" />
							</div>
						</div>
					</div>

					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="vninvoice_start_date" />
							<div class="text-muted">
								Start date of VN-Invoice
							</div>
							<div class="mt16" id="vninvoice_start_date">
								<field name="vninvoice_start_date"
									attrs="{'required': [('einvoice_provider','=','vninvoice'),('einvoice_issue_earliest_invoice_first','=',True)]}" />
							</div>
						</div>
					</div>

					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="account_vninvoice_serial_id" />
							<div class="text-muted">
								The Serial that you have registered with VN-Invoice
							</div>
							<div class="mt16" id="account_vninvoice_serial_id">
								<field name="account_vninvoice_serial_id"
									attrs="{'required': [('einvoice_provider','=','vninvoice')]}" />
							</div>
						</div>
					</div>

					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="account_vninvoice_template_id" />
							<div class="text-muted">
								The Template that you have registered with
								VN-Invoice
							</div>
							<div class="mt16" id="account_vninvoice_template_id">
								<field name="account_vninvoice_template_id"
									attrs="{'required': [('einvoice_provider','=','vninvoice')]}" readonly="1" force_save="1"/>
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-12 o_setting_box"
						attrs="{'invisible':[('einvoice_provider','!=','vninvoice')]}">
						<div class="o_setting_right_pane">
							<label for="account_vninvoice_type_id" />
							<div class="text-muted">
								The Invoice Type that you have registered with
								VN-Invoice
							</div>
							<div class="mt16" id="account_vninvoice_type_id">
								<field name="account_vninvoice_type_id"
									attrs="{'required': [('einvoice_provider','=','vninvoice')]}"  readonly="1" force_save="1"/>
							</div>
						</div>
					</div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>