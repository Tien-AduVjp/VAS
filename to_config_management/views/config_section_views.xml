<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="config_section_form_view">
			<field name="name">config.section.form</field>
			<field name="model">config.section</field>
			<field name="arch" type="xml">
				<form string="Config Section Form">
					<header>

					</header>
					<sheet>
						<div class="oe_button_box" name="button_box"></div>
						<div class="oe_title">
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="description" />
							</group>
						</group>
						<notebook>

						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="config_section_tree_view">
			<field name="name">config.section.tree</field>
			<field name="model">config.section</field>
			<field name="arch" type="xml">
				<tree string="Config Section List">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="config_section_search_view">
			<field name="name">config.section.search</field>
			<field name="model">config.section</field>
			<field name="arch" type="xml">
				<search string="Search Config Section">
					<field name="name" />
				</search>
			</field>
		</record>


		<record model="ir.actions.act_window"
			id="config_section_action">
			<field name="name">Config Section</field>
			<field name="res_model">config.section</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create a new Config Section</p>
			</field>
		</record>

	</data>
</odoo>   

