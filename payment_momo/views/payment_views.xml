<odoo>
	<data noupdate="0">
		<record id="acquirer_form" model="ir.ui.view">
			<field name="name">acquirer.form.momo</field>
			<field name="model">payment.acquirer</field>
			<field name="inherit_id" ref="payment.acquirer_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='acquirer']" position="inside">
					<group attrs="{'invisible': [('provider', '!=', 'momo')]}">
                        <field name="momo_partner_code" attrs="{'required':[ ('provider', '=', 'momo'), ('state', '=', 'enabled')]}"/>
                        <field name="momo_access_key" password="True" attrs="{'required':[ ('provider', '=', 'momo'), ('state', '=', 'enabled')]}"/>
                        <field name="momo_secret_key" password="True" attrs="{'required':[ ('provider', '=', 'momo'), ('state', '=', 'enabled')]}"/>
                        <a colspan="2" href="https://developers.momo.vn/#/home?id=quy-tr%c3%acnh-t%c3%adch-h%e1%bb%a3p" target="_blank">How to configure your MoMo account?</a>
                    </group>
				</xpath>
			</field>
		</record>
	</data>

</odoo>
