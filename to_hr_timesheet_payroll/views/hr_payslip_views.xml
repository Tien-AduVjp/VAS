<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="view_hr_payslip_tree" model="ir.ui.view">
		<field name="name">hr.payslip.tree</field>
		<field name="model">hr.payslip</field>
		<field name="inherit_id"
			ref="to_hr_payroll.view_hr_payslip_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='company_cost']" position="after">
				<field name="total_timesheet_hours" optional="hide"
					groups="hr_timesheet.group_timesheet_manager" />
				<field name="timesheet_cost" optional="hide"
					groups="hr_timesheet.group_timesheet_manager"/>
			</xpath>
		</field>
	</record>

	<record id="view_hr_payslip_form" model="ir.ui.view">
		<field name="name">hr.payslip.form.timesheet.inherit</field>
		<field name="model">hr.payslip</field>
		<field name="inherit_id"
			ref="to_hr_payroll.view_hr_payslip_form" />
		<field name="arch" type="xml">
			<button name="compute_sheet" position="after">
				<button string="Load Timesheets" name="action_load_timesheets" groups="to_hr_payroll.group_hr_payroll_user" type="object"
				states="draft" />
			</button>
			<xpath expr="//div[@name='button_box']" position="inside">
				<button name="action_view_timesheet" class="oe_stat_button"
					icon="fa-calendar" type="object"
					attrs="{'invisible': [('timesheet_lines_count','=',0)]}">
					<field name="timesheet_lines_count" widget="statinfo"
						string="Timesheet"
						help="Show timesheet logged for this payslip's period" />
				</button>
			</xpath>
			<xpath expr="//field[@name='company_cost']" position="after">
				<field name="timesheet_cost"/>
			</xpath>
		</field>
	</record>
</odoo>
