<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.hr.payroll
		</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="45" />
		<field name="inherit_id"
			ref="to_hr_payroll.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='hr_payroll_accountant']" position="after">
				<h2>Timesheets</h2>
				<div class="row mt16 o_settings_container"
						id="hr_payroll_automation">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">General Overhead</span>
							<div class="text-muted">
								General management expense coefficient
							</div>
							<div class="text-muted">
								<field name="general_overhead" />
							</div>
							<button name="action_update_employee_timesheet_cost_from_payslips"
								type="object"
								confirm="This action will update all the existing timesheet cost related to the payslips of all the employees of the company and the latest timesheet cost for for employees. Are you sure to proceed?">
								Update Employees Timesheet Cost
							</button>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>