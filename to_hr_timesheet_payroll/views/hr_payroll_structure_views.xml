<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_hr_payroll_structure_list_view"
		model="ir.ui.view">
		<field name="name">hr.payroll.structure.tree</field>
		<field name="model">hr.payroll.structure</field>
		<field name="inherit_id"
			ref="to_hr_payroll.view_hr_payroll_structure_list_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='parent_id']" position="after">
				<field name="update_employee_timesheet_cost"
					widget="boolean_toggle" />
			</xpath>
		</field>
	</record>

	<record id="view_hr_employee_grade_form" model="ir.ui.view">
		<field name="name">hr.payroll.structure.form</field>
		<field name="model">hr.payroll.structure</field>
		<field name="inherit_id"
			ref="to_hr_payroll.view_hr_employee_grade_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='parent_id']" position="after">
				<field name="update_employee_timesheet_cost" />
			</xpath>
		</field>
	</record>

</odoo>
