<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_hr_job_form">
			<field name="name">hr.job.inherit.form</field>
			<field name="model">hr.job</field>
			<field name="inherit_id" ref="hr.view_hr_job_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[./field[@name='description']]" position="before">
					<div name="skills">
						<label for="rank_ids" />
						<field name="rank_ids" widget="many2many_tags" />
					</div>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page name="ranks" string="Ranks">
						<field name="rank_line_ids">
							<tree editable="bottom">
								<field name="role_id" />
								<field name="grade_id" />
								<field name="rank_id" />
							</tree>
							<form>
								<group>
									<group>
										<field name="role_id" />
										<field name="grade_id" />
									</group>
									<group>
										<field name="rank_id" />
									</group>
								</group>
							</form>
						</field>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
