<odoo>
	<data>

		<record model="ir.ui.view" id="view_hr_role_form">
			<field name="name">hr.role.form</field>
			<field name="model">hr.role</field>
			<field name="inherit_id" ref="viin_hr_role.view_hr_role_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[@name='description']" position="after">
					<page name="ranks" string="Ranks">
						<field name="rank_ids">
							<tree editable="bottom">
								<field name="name" />
								<field name="department_id" />
								<field name="grade_id" />
								<field name="company_id" groups="base.group_multi_company" />
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
