<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="vehicle_type_form_view">
			<field name="name">vehicle.type.form</field>
			<field name="model">vehicle.type</field>
			<field name="arch" type="xml">
				<form string="Vehicle Type">
					<sheet>
						<div class="oe_button_box" name="button_box">
						</div>
						<div class="oe_title">
							<label class="oe_edit_only" for="name" string="Type Title" />
							<h1>
								<field name="name" placeholder="Vehicle Type Title..." />
							</h1>
						</div>
						<group>
							<group>
								<field name="type" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="vehicle_type_tree_view" model="ir.ui.view">
			<field name="name">vehicle.type.tree</field>
			<field name="model">vehicle.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Vehicle Type">
					<field name="name" />
					<field name="type" />
				</tree>
			</field>
		</record>

		<record id="vehicle_type_search_view" model="ir.ui.view">
			<field name="name">vehicle.type.search</field>
			<field name="model">vehicle.type</field>
			<field name="arch" type="xml">
				<search string="Search Vehicle Type">
					<field name="name" string="Name" />
					<separator />
					<filter name="car" string="Cars"
						domain="[('type','=','car')]" />
					<filter name="truck" string="Trucks"
						domain="[('type','=','truck')]" />
					<filter name="bus" string="Buses"
						domain="[('type','=','bus')]" />
					<separator />
					<group expand="0" string="Group By">
						<filter name="type" string="Technical Type" domain="[]"
							context="{'group_by':'type'}" />
					</group>
				</search>
			</field>
		</record>

		<record id="vehicle_type_action" model="ir.actions.act_window">
			<field name="name">Vehicle Type</field>
			<field name="res_model">vehicle.type</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="vehicle_type_menu"
			parent="fleet.fleet_configuration" action="vehicle_type_action"
			name="Vehicle Type" sequence="250" groups="fleet.fleet_group_manager" />
	</data>
</odoo>