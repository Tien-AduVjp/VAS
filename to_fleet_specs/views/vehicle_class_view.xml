<odoo>
	<data>
		<record id="vehicle_class_view_form" model="ir.ui.view">
			<field name="name">vehicle.class.form</field>
			<field name="model">vehicle.class</field>
			<field name="arch" type="xml">
				<form string="Vehicle Class">
					<sheet>
						<div class="oe_button_box" name="button_box">
						</div>
						<div class="oe_title">
							<label class="oe_edit_only" for="name" string="Class Name" />
							<h1>
								<field name="name" placeholder="Vehicle Class Name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="type_id" />
								<field name="type" groups="base.group_no_one" />
								<label for="min_weight" />
								<div class="o_row" name="min_weight">
									<field name="min_weight" />
									<span>kg</span>
								</div>
								<label for="max_weight" />
								<div class="o_row" name="max_weight">
									<field name="max_weight" />
									<span>kg</span>
								</div>
							</group>
							<group>
								<field name="min_seats" />
								<field name="max_seats" />
							</group>
						</group>
						<notebook>
							<page name="description" string="Description">
								<field name="description" />
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="vehicle_class_view_tree" model="ir.ui.view">
			<field name="name">vehicle.class.tree</field>
			<field name="model">vehicle.class</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Vehicle Class">
					<field name="name" />
					<field name="type_id" />
					<field name="type" groups="base.group_no_one" />
					<field name="min_weight" />
					<field name="max_weight" />
				</tree>
			</field>
		</record>

		<record id="vehicle_class_view_search" model="ir.ui.view">
			<field name="name">vehicle.class.search</field>
			<field name="model">vehicle.class</field>
			<field name="arch" type="xml">
				<search string="Search Vehicle Class">
					<field name="name" string="Name" />
					<field name="type_id" string="Vehicle Type" />
					<separator />
					<filter name="ftr_type_car" string="Cars"
						domain="[('type','=','car')]" />
					<filter name="ftr_type_truck" string="Trucks"
						domain="[('type','=','truck')]" />
					<filter name="ftr_type_bus" string="Buses"
						domain="[('type','=','bus')]" />
					<separator />
					<group expand="0" string="Group By">
						<filter name="grp_type" string="Vehicle Type" domain="[]"
							context="{'group_by':'type'}" />
					</group>
				</search>
			</field>
		</record>

		<record id="vehicle_class_action" model="ir.actions.act_window">
			<field name="name">Vehicle Class</field>
			<field name="res_model">vehicle.class</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="vehicle_class_menu"
			parent="fleet.fleet_configuration" action="vehicle_class_action"
			name="Vehicle Class" sequence="200"
			groups="fleet.fleet_group_manager" />
	</data>
</odoo>
