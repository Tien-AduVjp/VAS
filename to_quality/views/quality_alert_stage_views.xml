<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_alert_stage_view_tree" model="ir.ui.view">
		<field name="name">quality.alert.stage.tree</field>
		<field name="model">quality.alert.stage</field>
		<field name="arch" type="xml">
			<tree>
				<field name="sequence" widget="handle" />
				<field name="name" />
			</tree>
		</field>
	</record>

	<record id="quality_alert_stage_view_form" model="ir.ui.view">
		<field name="name">quality.alert.stage.form</field>
		<field name="model">quality.alert.stage</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="sequence" />
						</group>
						<group>
							<field name="folded" />
							<field name="done" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="quality_alert_stage_action" model="ir.actions.act_window">
		<field name="name">Quality Alert Stages</field>
		<field name="res_model">quality.alert.stage</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p>
				Create a new Quality Alert stages
			</p>
		</field>
	</record>

	<menuitem id="quality_config_alert_stage_menu" parent="quality_configuration_menu" action="quality_alert_stage_action" sequence="20" />
</odoo>
