<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_type_view_tree" model="ir.ui.view">
		<field name="name">quality.type.tree</field>
		<field name="model">quality.type</field>
		<field name="arch" type="xml">
			<tree string="Quality Type">
				<field name="name" />
				<field name="type" />
			</tree>
		</field>
	</record>

	<record id="quality_type_view_form" model="ir.ui.view">
		<field name="name">quality.type.form</field>
		<field name="model">quality.type</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="type" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="quality_type_action" model="ir.actions.act_window">
		<field name="name">Quality Type</field>
		<field name="res_model">quality.type</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="quality_type_menu" name="Quality Type" parent="quality_configuration_menu"
		action="quality_type_action" sequence="90" />
</odoo>
