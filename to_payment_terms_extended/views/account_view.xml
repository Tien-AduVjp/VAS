<odoo>
	<data>

		<!-- inherit payment terms -->
        <record id="view_payment_term_line_tree" model="ir.ui.view">
            <field name="name">account.payment.term.line.tree</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='days']" position="attributes">
                    <attribute name="attrs">{'invisible': [('option', 'in', ['fix_day_next_x_months','last_day_next_x_months'])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='day_of_the_month']" position="attributes">
                    <attribute name="attrs">{'invisible': [('option', 'not in', ['day_after_invoice_date', 'fix_day_next_x_months'])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='day_of_the_month']" position="after">
                    <field name="number_of_next_month" attrs="{'invisible': [('option', 'not in', ['fix_day_next_x_months','last_day_next_x_months'])]}" />
                </xpath>
            </field>
        </record>

		<record id="to_payment_term_extended_inherit_form" model="ir.ui.view">
			<field name="name">to.payment.term.extended.inherit.form</field>
			<field name="model">account.payment.term.line</field>
			<field name="inherit_id" ref="account.view_payment_term_line_form" />
			<field name="arch" type="xml">
				<field name="days" position="attributes">
					<attribute name="attrs">{'invisible': [('option', 'in', ['fix_day_next_x_months','last_day_next_x_months'])]}
					</attribute>
				</field>

                <xpath expr="//div[@colspan='2'][2]" position="attributes">
                    <attribute name="attrs">{'invisible': [('option', 'not in', ['day_after_invoice_date', 'fix_day_next_x_months'])]}</attribute>
                </xpath>

				<xpath expr="//div[@colspan='2'][2]" position="after">
					<label for="number_of_next_month"
						   attrs="{'invisible': [('option','not in', ['fix_day_next_x_months','last_day_next_x_months'])]}"/>
					<field name="number_of_next_month"
						attrs="{'invisible': [('option','not in', ['fix_day_next_x_months','last_day_next_x_months'])],
						          'required':[('option','in', ['fix_day_next_x_months','last_day_next_x_months'])]}" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>
