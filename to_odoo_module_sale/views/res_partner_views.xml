<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_partner_form" model="ir.ui.view">
			<field name="name">res.partner.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//page[@name='sales_purchases']/group/group[@name='sale']"
					position="inside">
					<field name="exclude_already_purchased_apps"
						attrs="{'invisible': [('parent_id','!=',False)]}" />
					<div
						attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
						<p>
							Odoo Apps settings are managed on
							<button name="open_commercial_entity" type="object"
								string="the parent company" class="oe_link" />
						</p>
					</div>
				</xpath>

			</field>
		</record>
	</data>
</odoo>
