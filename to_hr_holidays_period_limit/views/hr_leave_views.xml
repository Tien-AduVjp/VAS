<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="edit_holiday_new">
			<field name="name">Leave Request</field>
			<field name="model">hr.leave</field>
			<field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//sheet/group/group[1]/div" position="after">
					<label for="max_leave_days"
						attrs="{'invisible': ['|', '|', ('holiday_status_id','=', False), ('allocation_type','=', 'no'), ('max_leave_days','&lt;=',0)]}" />
					<div
						attrs="{'invisible': ['|', '|', ('holiday_status_id','=', False), ('allocation_type','=', 'no'), ('max_leave_days','&lt;=',0)]}">
						<div>
							<field name="allocation_type" invisible="1" />
						</div>
						<div class="o_row">
							<field name="max_leave_days" />
							/
							<field name="leave_period_unit"
								attrs="{'required': [('max_leave_days', '&gt;', 0)]}" />
						</div>
					</div>
				</xpath>
			</field>
		</record>

