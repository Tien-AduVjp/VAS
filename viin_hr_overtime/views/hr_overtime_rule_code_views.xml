<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="hr_overtime_rule_code_tree_view" model="ir.ui.view">
		<field name="name">hr.overtime.rule.code.tree</field>
		<field name="model">hr.overtime.rule.code</field>
		<field name="arch" type="xml">
			<tree string="Overtime Codes" editable="bottom">
				<field name="name" />
				<field name="pay_rate" />
				<field name="holiday" widget="boolean_toggle" />
			</tree>
		</field>
	</record>

	<record id="action_hr_overtime_rule_codes"
		model="ir.actions.act_window">
		<field name="name">Overtime Codes</field>
		<field name="res_model">hr.overtime.rule.code</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="hr_overtime_rule_code_menu"
		action="action_hr_overtime_rule_codes" name="Overtime Codes"
		parent="hr_overtime_config_menu" sequence="11"
		groups="viin_hr_overtime.group_overtime_officer" />
</odoo>
