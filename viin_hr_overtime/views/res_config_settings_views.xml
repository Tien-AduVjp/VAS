<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="open_overtime_modules"
			model="ir.actions.act_window">
			<field name="name">Overtime</field>
			<field name="res_model">ir.module.module</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context"
				eval="{'search_default_category_id': ref('base.module_category_human_resources_overtime')}" />
			<field name="search_view_id" ref="base.view_module_filter" />
		</record>

		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.overtime
			</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="40" />
			<field name="inherit_id"
				ref="base.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('settings')]" position="inside">
					<div class="app_settings_block" data-string="Overtime"
						string="Overtime" data-key="viin_hr_overtime"
						groups="viin_hr_overtime.group_overtime_admin">
						<div class="row mt16 o_settings_container">
							<div class="col-12 col-lg-6 o_setting_box">
								<div class="o_setting_left_pane" />
								<div class="o_setting_right_pane">
									<span class="o_form_label">Overtime Recognition Mode</span>
									<span class="fa fa-lg fa-building-o"
										title="Values set here are company-specific."
										aria-label="Values set here are company-specific."
										groups="base.group_multi_company" role="img" />
									<div class="text-muted">
										Either manual or automatic actual overtime recognition
									</div>
									<div class="content-group">
										<div class="row mt16">
											<label for="overtime_recognition_mode" string="Mode"
												class="col-lg-3 o_light_label" />
											<field name="overtime_recognition_mode"
												widget="selection" />
										</div>
										<div class="mt8">
											<button
												name="%(viin_hr_overtime.open_overtime_modules)d"
												icon="fa-arrow-right" type="action"
												string="Install More Modes" class="btn-link" />
										</div>
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-6 o_setting_box"
								id="overtime_attendance"
								title="Enable you to get your employee's overtime recognized by attendance data that matches overtime plan.">
								<div class="o_setting_left_pane">
									<field name="module_viin_hr_overtime_attendance" />
								</div>
								<div class="o_setting_right_pane"
									name="overtime_attendance_right_pane">
									<label for="module_viin_hr_overtime_attendance" />
									<div class="text-muted">
										Recognize employee overtime automatically with
										attendance
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-6 o_setting_box"
								id="overtime_timesheet"
								title="Enable you to get your employee's overtime recognized by timesheet entries that matches overtime plan.">
								<div class="o_setting_left_pane">
									<field name="module_viin_hr_overtime_timesheet" />
								</div>
								<div class="o_setting_right_pane"
									name="overtime_timesheet_right_pane">
									<label for="module_viin_hr_overtime_timesheet" />
									<div class="text-muted">
										Recognize employee overtime automatically with
										timesheet
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-6 o_setting_box"
								id="overtime_approval"
								title="Enable you to get your overtime plans approved by authorized persons">
								<div class="o_setting_left_pane">
									<field name="module_viin_hr_overtime_approval" />
								</div>
								<div class="o_setting_right_pane"
									name="overtime_attendance_right_pane">
									<label for="module_viin_hr_overtime_approval" />
									<div class="text-muted">
										Overtime Plan Approval
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-6 o_setting_box"
								id="overtime_attendance"
								title="Enable you to get your employee's overtime recognized by attendance data that matches overtime plan.">
								<div class="o_setting_left_pane">
									<field name="module_viin_hr_overtime_payroll" />
								</div>
								<div class="o_setting_right_pane"
									name="overtime_payroll_right_pane">
									<label for="module_viin_hr_overtime_payroll" />
									<div class="text-muted">
										Integrate Payroll with Overtime
									</div>
								</div>
							</div>
						</div>

					</div>
				</xpath>
			</field>
		</record>

		<record id="action_overtime_config"
			model="ir.actions.act_window">
			<field name="name">Settings</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.config.settings</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
			<field name="context">{'module' : 'viin_hr_overtime', 'bin_size': False}
			</field>
		</record>

		<menuitem id="menu_overtime_config" name="Settings"
			parent="hr_overtime_config_menu" sequence="0"
			action="action_overtime_config" groups="base.group_system" />
	</data>
</odoo>
