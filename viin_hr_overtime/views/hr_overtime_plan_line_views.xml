<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_hr_overtime_plan_line_form" model="ir.ui.view">
		<field name="name">hr.overtime.plan.line.form</field>
		<field name="model">hr.overtime.plan.line</field>
		<field name="arch" type="xml">
			<form>
				<header>
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
					</div>
					<group>
						<group>
							<field name="employee_id" />
							<field name="overtime_plan_id" />
							<field name="contract_id" />
							<field name="resource_calendar_id" />
							<field name="global_leave_id" />
							<field name="tz" />
						</group>
						<group>
							<field name="date_start" />
							<field name="date_end" />
							<field name="recognition_mode" />
							<label for="planned_hours" />
							<div>
								<field name="planned_hours" class="oe_inline" />
								hours
							</div>
							<label for="actual_hours" />
							<div>
								<field name="actual_hours" class="oe_inline" />
								hours
							</div>
							<label for="pay_rate" />
							<div>
								<field name="pay_rate" class="oe_inline" />
								%
							</div>
							<field name="planned_overtime_pay" />
							<field name="actual_overtime_pay" />
							<field name="hr_overtime_rule_id" />
							<field name="rule_code_id" />
							<field name="currency_id" invisible="1" />
						</group>
					</group>
					<notebook>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_hr_overtime_plan_line_tree_simple"
		model="ir.ui.view">
		<field name="name">hr.overtime.plan.line.tree</field>
		<field name="model">hr.overtime.plan.line</field>
		<field name="arch" type="xml">
			<tree>
				<field name="date_start" />
				<field name="date_end" />
				<field name="contract_id" optional="hide" />
				<field name="resource_calendar_id" optional="hide" />
				<field name="tz" optional="hide" />
				<field name="planned_hours" sum="Total Planned Hours" />
				<field name="actual_hours" sum="Total Actual Hours" />
				<field name="standard_hour_pay" />
				<field name="pay_rate" string="Pay Rate (%)" />
				<field name="planned_overtime_pay" sum="Total Actual Hours"
					optional="hide" />
				<field name="actual_overtime_pay" sum="Total Actual Hours"
					optional="hide" />
				<field name="standard_pay" sum="Total Actual Hours"
					optional="hide" />
				<field name="hr_overtime_rule_id" />
				<field name="global_leave_id" optional="hide" />
				<field name="currency_id" invisible="1" />
				<field name="currency_rate" optional="hide"
					groups="base.group_no_one" />
			</tree>
		</field>
	</record>

	<record id="view_hr_overtime_plan_line_tree" model="ir.ui.view">
		<field name="name">hr.overtime.plan.line.tree</field>
		<field name="model">hr.overtime.plan.line</field>
		<field name="inherit_id"
			ref="viin_hr_overtime.view_hr_overtime_plan_line_tree_simple" />
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='date_start']" position="before">
				<field name="employee_id" />
				<field name="overtime_plan_id" />
			</xpath>
		</field>
	</record>

	<record id="view_hr_overtime_plan_line_pivot" model="ir.ui.view">
		<field name="name">hr.overtime.plan.line.pivot</field>
		<field name="model">hr.overtime.plan.line</field>
		<field name="arch" type="xml">
			<pivot string="Employee Overtime Analysis"
				disable_linking="True">
				<field name="date_start" interval="month" type="col" />
				<field name="planned_hours" type="measure" />
				<field name="planned_overtime_pay" type="measure" />
				<field name="actual_hours" type="measure" />
				<field name="standard_pay" type="measure" />
				<field name="actual_overtime_pay" type="measure" />
			</pivot>
		</field>
	</record>

	<record id="view_hr_overtime_plan_line_calendar" model="ir.ui.view">
        <field name="name">hr.overtime.plan.line.calendar</field>
        <field name="model">hr.overtime.plan.line</field>
        <field name="arch" type="xml">
            <calendar
            	string="Overtime Plan"
            	event_open_popup="true" mode="month"
            	date_start="date_start" date_stop="date_end"
            	date_delay="planned_hours" quick_add="False" color="employee_id">
                <field name="display_name" />
				<field name="employee_id" avatar_field="image_128" />
				<field name="reason_id" />
				<field name="planned_hours" />
            </calendar>
        </field>
    </record>

	<record id="view_hr_overtime_plan_line_search"
		model="ir.ui.view">
		<field name="name">hr.overtime.plan.line.search</field>
		<field name="model">hr.overtime.plan.line</field>
		<field name="arch" type="xml">
			<search string="Employee Overtime Plan Line">
				<field name="employee_id" />
				<separator />
				<field name="date_start" string="Start Date" />
				<field name="date_end" string="End Date" />
				<separator />
				<field name="hr_overtime_rule_id" />
				<field name="rule_code_id" />
				<separator />
				<field name="contract_id" />
				<separator />
				<field name="resource_calendar_id" />
				<field name="global_leave_id" />
				<separator />
				<group expand="0" string="Extended Filters">
					<field name="employee_id" />
				</group>
				<group expand="1" string="Group By">
					<filter string="Employee" name="grp_employee"
						context="{'group_by':'employee_id'}" />
					<filter name="grp_res_calendar" string="Working Schedule"
						context="{'group_by':'resource_calendar_id'}" />
					<separator />
					<filter string="OT Rule" name="grp_rule"
						context="{'group_by':'hr_overtime_rule_id'}" />
					<filter string="OT Rule Code" name="grp_rule_code"
						context="{'group_by':'rule_code_id'}" />
					<separator />
					<filter string="Start Date" name="grp_date_start"
						context="{'group_by':'date_start'}" />
					<filter string="End Date" name="grp_date_end"
						context="{'group_by':'date_end'}" />
				</group>
			</search>
		</field>
	</record>

	<record id="action_hr_overtime_plan_line"
		model="ir.actions.act_window">
		<field name="name">Overtime Plan Line</field>
		<field name="res_model">hr.overtime.plan.line</field>
		<field name="view_mode">tree,form,calendar,pivot</field>
		<field name="view_id"
			ref="viin_hr_overtime.view_hr_overtime_plan_line_tree" />
	</record>
</odoo>
