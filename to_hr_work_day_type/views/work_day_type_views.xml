<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="work_day_type_form_view" model="ir.ui.view">
			<field name="name">work.day.type.form</field>
			<field name="model">work.day.type</field>
			<field name="arch" type="xml">
				<form string="Work Day Type">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="rate" />
							</group>
							<group>
								<field name="date_from" />
								<field name="date_to" />
								<field name="is_holiday" invisible="1" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="work_day_type_tree_view" model="ir.ui.view">
			<field name="name">work.day.type.tree</field>
			<field name="model">work.day.type</field>
			<field name="arch" type="xml">
				<tree string="Work Day Type" editable="top">
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="rate" />
					<field name="is_holiday" invisible="0" />
					<field name="company_id" groups="base.group_multi_company" />
				</tree>
			</field>
		</record>

		<record id="work_day_type_search_view" model="ir.ui.view">
			<field name="name">work.day.type.search</field>
			<field name="model">work.day.type</field>
			<field name="arch" type="xml">
				<search string="Search Work Day Type">
					<field name="name" />
					<field name="rate" />
					<field name="company_id" />
					<filter string="Holiday" name="ftr_holiday" domain="[('is_holiday','=',True)]" />
					<group string="Group By">
						<filter name="grb_rate" string="Rate" context="{'group_by':'rate'}" />
						<filter name="grb_company" string="Company" context="{'group_by':'company_id'}" />
					</group>
				</search>
			</field>
		</record>

		<record id="work_day_type_action" model="ir.actions.act_window">
			<field name="name">Work Day Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">work.day.type</field>
			<field name="view_mode">tree</field>
			<field name="domain"
				eval="[('id','!=', ref('to_hr_work_day_type.normal_work_day'))]" />
			<field name="context">{'default_is_holidy': 1}</field>
		</record>

		<menuitem id="work_day_type_menu" name="Work Day Types"
			parent="resource.menu_resource_config" action="work_day_type_action" />
	</data>
</odoo>