<odoo>
	<record model="ir.ui.view" id="pos_config_inherit_view_form">
		<field name="name">pos.config.inherit.form</field>
		<field name="model">pos.config</field>												    
		<field name="inherit_id" ref="to_pos_frontend_return.pos_config_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet/div[4]/div" position="after">
				<div class="col-xs-12 col-md-6 o_setting_box" >   
					<div class="o_setting_left_pane">
						<field name="allow_to_create_new_reason" />
					</div>
					<div class="o_setting_right_pane">
						<b>Product Return</b>
						<div class="text-muted">
							Allow to create new return reason in front-end
						</div>
					</div>
                </div>            
			</xpath>
		</field>
	</record>
</odoo>
