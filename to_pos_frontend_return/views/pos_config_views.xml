<odoo>
	<record model="ir.ui.view" id="pos_config_view_form">
		<field name="name">pos.config.form</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
            <xpath expr="//sheet/h2" position="before">
            	<h2>Return Products</h2>
                <div id="return_products" class="row mt16 o_settings_container">
                    <div id="nod_return_product" class="col-12 col-lg-6 o_setting_box" >
                    	<div class="o_setting_left_pane"></div>
                    	<div class="o_setting_right_pane">
	                        <label for="nod_return_product"/>
                            <div class="text-muted">
                                The max number of days for returning sold product
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="nod_return_product" class="o_light_label"/>
                                    <field name="nod_return_product"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
		</field>
	</record>
</odoo>
