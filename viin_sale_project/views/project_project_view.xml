<odoo>
    <record id="project_project_view_form" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="sale_timesheet.project_project_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='billing_employee_rate']//field[@name='sale_order_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'delete': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='billing_employee_rate']//field[@name='sale_line_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'delete': False}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
