<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="cash_flow_user_input_tree" model="ir.ui.view">
			<field name="name">cash.flow.user.input.tree</field>
			<field name="model">cash.flow.user.input</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Cash Flow User Inputs">
					<field name="name" />
					<field name="type" />
					<field name="partner_id"/>
					<field name="amount" />
					<field name="currency_id" />
					<field name="date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="cash_flow_user_input_form" model="ir.ui.view">
			<field name="name">cash.flow.user.input.form</field>
			<field name="model">cash.flow.user.input</field>
			<field name="arch" type="xml">
				<form string="Cash Flow User Input">
					<header>
						<button name="action_confirm" type="object" states="draft"
							string="Confirm" class="oe_highlight"/>
						<button name="action_draft" type="object" states="cancel"
							string="Set to Draft" class="oe_highlight"/>
						<button name="action_cancel" type="object" states="confirm"
							string="Cancel" class="oe_highlight"/>
						<field name="state" readonly="1"
							statusbar_visible="draft,confirm,cancel" widget="statusbar" />
					</header>
					<sheet>
						<div class="oe_title">
	                        <label for="name" string="Short Summary" class="oe_edit_only"/>
	                        <h2><field name="name"/></h2>
	                    </div>
						<group>
	                        <group>
	                            <field name="type" widget="selection"/>
	                            <field name="amount"/>
	                            <field name="date"/>
	                            <field name="currency_id" groups="base.group_multi_currency"/>
	                        </group>
	                        <group>
	                            <field name="partner_id"/>
	                            <field name="company_id" groups="base.group_multi_company"/>
	                        </group>
	                    </group>
	                    <notebook>
	                        <page string="Note">
	                            <field name="note" placeholder="Description of the cash flow input data and its reason ..."/>
	                        </page>
	                    </notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="cash_flow_user_input_search" model="ir.ui.view">
			<field name="name">cash.flow.user.input.search</field>
			<field name="model">cash.flow.user.input</field>
			<field name="arch" type="xml">
				<search string="Search Cash Flow user Inputs">
					<field name="name" string="Reference" />
					<field name="date" />
					<field name="partner_id"/>
					<separator />
					<filter name="draft_input" string="Draft" domain="[('state','in', ('draft', 'cancel'))]" />
					<filter name="confirm_input" string="Confirmed" domain="[('state','=', 'confirm')]" />
				</search>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_cash_flow_user_input_draft">
			<field name="name">Cash Flow User Inputs</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">cash.flow.user.input</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_draft_input':1}</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_cash_flow_user_input_confirm">
			<field name="name">Cash Flow User Inputs</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">cash.flow.user.input</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_confirm_input':1}</field>
		</record>

		<menuitem id="cash_flow_user_input_draft_menu" name="Draft Inputs"
			parent="user_input_menu" action="action_cash_flow_user_input_draft" sequence="1"/>

		<menuitem id="cash_flow_user_input_confirm_menu" name="Confirmed Inputs"
			parent="user_input_menu" action="action_cash_flow_user_input_confirm" sequence="2"/>

	</data>
</odoo>