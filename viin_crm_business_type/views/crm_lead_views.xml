<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="crm_lead_view_form" model="ir.ui.view">
			<field name="name">crm.lead.form.inherit.business.type</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_lead_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_name']" position="after">
					<field name="business_type_id"/>
				</xpath>
				<xpath expr="//page[@name='lead']/group/group/field[@name='partner_name']" position="after">
					<field name="business_type_id"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_crm_case_opportunities_filter" model="ir.ui.view">
			<field name="name">crm.opportunities.filter.inherit.business.type</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
			<field name="arch" type="xml">
				<xpath expr="//group/filter[@name='city']" position="before">
					<filter name="grp_business_type" string="Business Type" context="{'group_by': 'business_type_id'}"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_crm_case_leads_filter" model="ir.ui.view">
			<field name="name">crm.lead.filter.inherit.business.type</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
			<field name="arch" type="xml">
				<xpath expr="//group/filter[@name='city']" position="before">
					<filter name="grp_business_type" string="Business Type" context="{'group_by': 'business_type_id'}"/>
				</xpath>
			</field>
		</record>

	</data>
</odoo>