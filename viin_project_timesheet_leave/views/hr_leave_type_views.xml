<odoo>
	<data>

		<record model="ir.ui.view"
			id="hr_holiday_status_view_form_inherit">
			<field name="name">hr.leave.type.form</field>
			<field name="model">hr.leave.type</field>
			<field name="inherit_id"
				ref="project_timesheet_holidays.hr_holiday_status_view_form_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='timesheet_generate']"
					position="attributes">
					<attribute name="invisible">0</attribute>
				</xpath>
				<xpath expr="//field[@name='timesheet_generate']"
					position="after">
					<field name="project_required"
						attrs="{'invisible': [('timesheet_generate','=',False)]}" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>
