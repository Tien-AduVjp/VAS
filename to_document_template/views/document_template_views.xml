<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="document_template_form">
            <field name="name">document.template.form</field>
            <field name="model">document.template</field>
            <field name="arch" type="xml">
                <form string="Templates">
                    <sheet>
                    	<div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(wizard_document_template_preview)d" icon="fa-search-plus" string="Preview"
                                    type="action" target="new"
                                    context="{'template_id':active_id}"/>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <group>
                                <field name="model_id" required="1" options="{'no_create': True}"/>
                            </group>
                        </div>
                        <notebook>
                            <page string="Content">
                                <field name="content_html" widget="html" options="{'style-inline': false}"/>
                            </page>
                            <page string="Dynamic Placeholder Generator">
                                <group>
                                    <field name="model_object_field"
                                            domain="[('model_id','=',model_id),('ttype','!=','one2many'),('ttype','!=','many2many')]"/>
                                    <field name="sub_object" readonly="1"/>
                                    <field name="sub_model_object_field"
                                            domain="[('model_id','=',sub_object),('ttype','!=','one2many'),('ttype','!=','many2many')]"
                                            attrs="{'readonly':[('sub_object','=',False)],'required':[('sub_object','!=',False)]}"/>
                                    <field name="null_value"/>
                                    <field name="copyvalue"/>
                                </group>
                            </page>
                        </notebook>
                       </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="document_template_tree">
            <field name="name">document.template.tree</field>
            <field name="model">document.template</field>
            <field name="arch" type="xml">
                <tree string="Templates">
                    <field name="name"/>
                    <field name="model_id"/>
                </tree>
            </field>
        </record>

        <record id="view_document_template_search" model="ir.ui.view">
           <field name="name">document.template.search</field>
           <field name="model">document.template</field>
           <field name="arch" type="xml">
               <search string="Templates">
                    <field name="name" />
                    <field name="model_id"/>
                    <group expand="0" string="Group by...">
                    	<filter string="Model" name ="model" domain="[]" context="{'group_by':'model_id'}"/>
                    </group>
               </search>
           </field>
        </record>

        <record model="ir.actions.act_window" id="action_document_template_tree_all">
            <field name="name">Document Templates</field>
            <field name="res_model">document.template</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="document_template_tree" />
            <field name="search_view_id" ref="view_document_template_search"/> 
        </record>
		<menuitem id="menu_document_temp_root" parent="base.menu_custom" name="Document Templates" sequence="99"/>
        <menuitem id="menu_document_templates" parent="menu_document_temp_root" action="action_document_template_tree_all"
                  sequence="1"/>

    </data>
</odoo>
