<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="acquirer_form">
			<field name="name">payment.acquirer.form</field>
			<field name="model">payment.acquirer</field>
			<field name="inherit_id" ref="payment.acquirer_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[./group[@name='acquirer_config']]"
					position="after">
					<page name="unsupported_currency_conversion"
						string="Unsupported Currency Conversion">
						<label for="supported_currency_map_ids" />
						<field name="supported_currency_map_ids">
							<tree editable="bottom">
								<field name="currency_id" />
							</tree>
						</field>
						<group>
							<field name="supported_currency_ids"
								widget="many2many_tags" />
							<field name="default_converted_currency_id" />
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>