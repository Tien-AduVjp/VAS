<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="currency_conversion_configuration"
        model="ir.ui.view">
        <field name="name">Currency Conversion Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
            ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[field[@name='expense_currency_exchange_account_id']]"
                position="after">
                <div class="mt16">
                    <b>Post Currency Conversion difference entries in:</b>
                </div>
                <div class="row mt8">
                    <label
                        for="currency_conversion_diff_journal_id"
                        class="col-lg-3 o_light_label" string="Journal" />
                    <field
                        name="currency_conversion_diff_journal_id" />
                </div>
                <div class="row mt8"
                    attrs="{'invisible': [('currency_conversion_diff_journal_id', '=', False)]}">
                    <label
                        for="income_currency_conversion_diff_account_id"
                        class="col-lg-3 o_light_label"
                        string="Income Account" />
                    <field
                        name="income_currency_conversion_diff_account_id"
                        attrs="{'required': [('group_multi_currency', '=', True), ('currency_conversion_diff_journal_id', '!=', False)]}" />
                </div>
                <div class="row mt8"
                    attrs="{'invisible': [('currency_conversion_diff_journal_id', '=', False)]}">
                    <label
                        for="expense_currency_conversion_diff_account_id"
                        class="col-lg-3 o_light_label"
                        string="Expense Account" />
                    <field
                        name="expense_currency_conversion_diff_account_id"
                        attrs="{'required': [('group_multi_currency', '=', True), ('currency_conversion_diff_journal_id', '!=', False)]}" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
