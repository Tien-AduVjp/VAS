<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="currency_conversion_configuration"
			model="ir.ui.view">
			<field name="name">Currency Conversion Settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="account.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//div[field[@name='currency_exchange_journal_id']]"
					position="after">
					<div class="row mt16">
						<label for="currency_conversion_diff_journal_id"
							class="col-lg-3 o_light_label" />
						<field name="currency_conversion_diff_journal_id" />
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>