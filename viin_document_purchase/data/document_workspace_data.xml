<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="document_workspace_purchase" model="document.workspace">
        <field name="name">Purchase</field>
        <field name="tag_ids" eval="[
            (4, ref('document_tag_rfq')),
            (4, ref('document_tag_purchase_order')),
            (4, ref('viin_document.document_tag_to_review')),
            (4, ref('viin_document.document_tag_approve')),
            (4, ref('viin_document.document_tag_deprecate'))]"/>
        <field name="read_team_ids" eval="[(4, ref('document_team_purchase'))]"/>
        <field name="write_group_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="read_group_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="action_ids" eval="[
            (4, ref('viin_document.document_action_ask_to_review')),
            (4, ref('viin_document.document_action_approve'))]"/>
    </record>

</odoo>
