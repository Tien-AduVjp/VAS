<odoo>

    <record id="report_helpdesk_sla_view_pivot" model="ir.ui.view">
        <field name="name">report.helpdesk.sla.pivot</field>
        <field name="model">report.helpdesk.sla</field>
        <field name="arch" type="xml">
            <pivot string="SLA Analysis" disable_linking="True">
                <field name="team_id" type="row" />
                <field name="create_date" type="col" />
                <field name="sla_reached" type="measure" />
                <field name="sla_ongoing" type="measure" />
                <field name="sla_failed" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="report_helpdesk_sla_view_graph" model="ir.ui.view">
        <field name="name">report.helpdesk.sla.graph</field>
        <field name="model">report.helpdesk.sla</field>
        <field name="arch" type="xml">
            <graph string="SLA Alalysis" type="bar">
                <field name="team_id" type="row" />
                <field name="create_date" type="col" />
            </graph>
        </field>
    </record>

    <record id="report_helpdesk_sla_view_search" model="ir.ui.view">
        <field name="name">report.helpdesk.sla.search</field>
        <field name="model">report.helpdesk.sla</field>
        <field name="arch" type="xml">
            <search string="SLA Report">
                <field name="team_id" />
                <field name="ticket_id" />
                <separator/>
                <group expand="0" string="Extended Filters">
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Team" name="grp_team_id" context="{'group_by': 'team_id'}"/>
                    <filter string="Ticket" name="grp_ticket_id" context="{'group_by': 'ticket_id'}"/>
                    <filter string="Company" name="grp_company_id" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="report_helpdesk_sla_action" model="ir.actions.act_window">
        <field name="name">SLA Analysis</field>
        <field name="res_model">report.helpdesk.sla</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="report_helpdesk_sla_view_search"/>
    </record>

    <menuitem id="menu_helpdesk_sla_report" action="report_helpdesk_sla_action" parent="reporting_menu" sequence="40" />

</odoo>
