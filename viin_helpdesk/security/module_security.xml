<odoo>
	<data>
		<!-- Group -->
		<record id="group_helpdesk_user" model="res.groups">
			<field name="name">User</field>
            <!-- TODOS: renamed to module_category_services_helpdesk on 14.0-->
			<field name="category_id" ref="base.module_category_operations_helpdesk" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
		</record>
		
		<record id="group_helpdesk_manager" model="res.groups">
			<field name="name">Administrator</field>
            <!-- TODOS: renamed to module_category_services_helpdesk on 14.0-->
			<field name="category_id" ref="base.module_category_operations_helpdesk" />
			<field name="implied_ids" eval="[(4, ref('group_helpdesk_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
		</record>
		
		<record id="group_helpdesk_rating" model="res.groups">
	        <field name="name">Use Rating on Helpdesk</field>
	        <field name="category_id" ref="base.module_category_hidden"/>
	    </record>
	
		<!-- Ticket Rules -->
	
		<record model="ir.rule" id="helpdesk_ticket_company_rule">
	        <field name="name">Ticket: Multi-company</field>
	        <field name="model_id" ref="model_helpdesk_ticket"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
	    </record>
	    
	    <record id="helpdesk_ticket_all" model="ir.rule">
			<field name="name">Ticket: Manager users: all tickets</field>
			<field name="model_id" ref="model_helpdesk_ticket" />
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('viin_helpdesk.group_helpdesk_manager'))]" />
		</record>
	    
	    <record id="helpdesk_ticket_rule_portal" model="ir.rule">
	        <field name="name">Ticket: Portal users: create/read only (created)</field>
	        <field name="model_id" ref="viin_helpdesk.model_helpdesk_ticket"/>
	        <field name="domain_force">['|',
				('create_uid', '=', user.id),
				('partner_id', '=', user.partner_id.id)]</field>
	        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
	        <field name="perm_write" eval="False" />
			<field name="perm_unlink" eval="False" />
	    </record>
		
		<record id="helpdesk_ticket_employee_assigned_rule" model="ir.rule">
			<field name="name">Ticket: Employee users: create/read (created or assigned)</field>
			<field name="model_id" ref="model_helpdesk_ticket" />
			<field name="domain_force">['|','|','|',
				('create_uid', '=', user.id),
				('user_id', '=', user.id),
				('message_partner_ids', 'in', [user.partner_id.id]),
				('message_channel_ids', 'in', user.partner_id.channel_ids.ids)
				]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]" />
			<field name="perm_write" eval="False" />
			<field name="perm_unlink" eval="False" />
		</record>
		
		<record id="helpdesk_ticket_employee_deleted_rule" model="ir.rule">
			<field name="name">Ticket: Employee users: unlink (created)</field>
			<field name="model_id" ref="model_helpdesk_ticket" />
			<field name="domain_force">[('create_uid', '=', user.id)]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]" />
			<field name="perm_read" eval="False" />
			<field name="perm_write" eval="False" />
			<field name="perm_create" eval="False" />
			<field name="perm_unlink" eval="True" />
		</record>
		
		<!-- Team Rules -->
		
		<record model="ir.rule" id="helpdesk_team_company_rule">
	        <field name="name">Team: Multi-company</field>
	        <field name="model_id" ref="model_helpdesk_team"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	    </record>
		
		<record id="helpdesk_team_all" model="ir.rule">
			<field name="name">Team: Manager users: All Teams</field>
			<field name="model_id" ref="model_helpdesk_team" />
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('viin_helpdesk.group_helpdesk_manager'))]" />
		</record>
		
		<record id="helpdesk_ticket_team_leader" model="ir.rule">
			<field name="name">Helpdesk Team: Team Leader</field>
			<field name="model_id" ref="model_helpdesk_team" />
			<field name="domain_force">[('team_leader_id', '=', user.id)]</field>
			<field name="groups" eval="[(4, ref('viin_helpdesk.group_helpdesk_user'))]" />
			<field name="perm_create" eval="False" />
			<field name="perm_unlink" eval="False" />
		</record>
		
		<record id="helpdesk_team_public_members_rule" model="ir.rule" >
	        <field name="name">Helpdesk Team: Employees: following required for follower-only teams</field>
	        <field name="model_id" ref="model_helpdesk_team"/>
	        <field name="domain_force">[
	        	'|',
                ('privacy_visibility', '!=', 'followers'),
                '|','|','|',
                ('message_partner_ids', 'in', [user.partner_id.id]),
                ('message_channel_ids', 'in', user.partner_id.channel_ids.ids),
                ('ticket_ids.message_partner_ids', 'in', [user.partner_id.id]),
                '&amp;',
                ('privacy_visibility', '=', 'followers'),
                ('team_member_ids', 'in', [user.id]),
                ]
            </field>
	        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
	        <field name="perm_create" eval="False" />
	        <field name="perm_write" eval="False" />
			<field name="perm_unlink" eval="False" />
	    </record>
        
        <record id="helpdesk_team_rule_portal" model="ir.rule">
	        <field name="name">Helpdesk Team: Portal users: portal and following</field>
	        <field name="model_id" ref="viin_helpdesk.model_helpdesk_team"/>
	        <field name="domain_force">[('privacy_visibility', '=', 'portal')]</field>
	        <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
	        <field name="perm_create" eval="False" />
	        <field name="perm_write" eval="False" />
			<field name="perm_unlink" eval="False" />
	    </record>
	    
	    <!-- Stage Rules -->
	    <record id="helpdesk_stage_all" model="ir.rule">
			<field name="name">Stage: Manager users: All Stages</field>
			<field name="model_id" ref="model_helpdesk_stage" />
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('viin_helpdesk.group_helpdesk_manager'))]" />
		</record>
		
		<record id="follower_helpdesk_stage_own_user_rule" model="ir.rule">
			<field name="name">Stage: Users: following stages</field>
			<field name="model_id" ref="model_helpdesk_stage" />
			<field name="groups"
				eval="[(4, ref('viin_helpdesk.group_helpdesk_user'))]" />
			<field name="domain_force">[('team_ids.team_leader_id','!=',user.id),('team_ids.ticket_ids.user_id','=',user.id)]
			</field>
			<field name="perm_read" eval="0" />
			<field name="perm_write" eval="1" />
			<field name="perm_create" eval="1" />
			<field name="perm_unlink" eval="1" />
		</record>
		
		<record id="helpdesk_stage_team_leader" model="ir.rule">
			<field name="name">Stage: Team Leader</field>
			<field name="model_id" ref="model_helpdesk_stage" />
			<field name="domain_force">[('team_ids.team_leader_id', '=', user.id)]</field>
			<field name="groups" eval="[(4, ref('viin_helpdesk.group_helpdesk_user'))]" />
			<field name="perm_read" eval="0" />
			<field name="perm_write" eval="1" />
			<field name="perm_create" eval="1" />
			<field name="perm_unlink" eval="1" />
		</record>
	</data>
</odoo>
