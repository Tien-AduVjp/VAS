<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<!-- After installation of the module, open the related menu -->
		<record id="client_promotion_voucher_menu_action"
			model="ir.actions.client">
			<field name="name">Open Promotion Voucher Menu</field>
			<field name="tag">reload</field>
			<field name="params"
				eval="{'menu_id': ref('menu_promotion_voucher_root')}" />
		</record>
		<record id="base.open_menu" model="ir.actions.todo">
			<field name="action_id"
				ref="client_promotion_voucher_menu_action" />
			<field name="state">open</field>
		</record>
	</data>

	<data>
		<record id="promotion_voucher_configuration" model="ir.ui.view">
			<field name="name">Promotion Voucher Settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="base.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('settings')]" position="inside">
					<div class="app_settings_block"
						data-string="Gift / Promotion Voucher"
						string="Gift / Promotion Voucher" data-key="to_promotion_voucher"
						groups="to_promotion_voucher.group_promotion_voucher_manager">
						<h2>Accounting</h2>
						<div class="row mt16 o_settings_container">
							<div class="col-12 col-lg-6 o_setting_box"
								id="property_promotion_voucher_profit_account_id"
								title="Default Voucher Profit Account.">
								<div class="o_setting_left_pane"/>
								<div class="o_setting_right_pane">
								 	<label for="property_promotion_voucher_profit_account_id" />
									<div class="content-group">
										<div class="mt16">
		                             		<field name="property_promotion_voucher_profit_account_id" />
	                             		</div>
									</div>
								</div>
							</div>
							<div class="col-12 col-md-6 o_setting_box"
								id="property_promotion_voucher_loss_account_id"
								title="Default Loss/Expense Account.">
								<div class="o_setting_left_pane" />
								<div class="o_setting_right_pane">
									<label for="property_promotion_voucher_loss_account_id" />
									<div class="content-group">
										<div class="mt16">
		                             		<field name="property_promotion_voucher_loss_account_id" />
	                             		</div>
									</div>
								</div>
							</div>
							<div class="col-12 col-md-6 o_setting_box"
								id="property_unearn_revenue_account_id"
								title="Default Unearn Revenue Account.">
								<div class="o_setting_left_pane" />
								<div class="o_setting_right_pane">
									<label for="property_unearn_revenue_account_id" />
									<div class="content-group">
										<div class="mt16">
		                             		<field name="property_unearn_revenue_account_id" />
	                             		</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</xpath>
			</field>
		</record>

		<record id="action_promotion_voucher_configuration"
			model="ir.actions.act_window">
			<field name="name">Configure Promotion Voucher</field>
			<field name="res_model">res.config.settings</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
			<field name="context">{'module' : 'to_promotion_voucher'}</field>
		</record>

		<menuitem id="menu_promotion_voucher_global_settings"
			name="Settings" parent="menu_config" sequence="0"
			action="action_promotion_voucher_configuration" />
	</data>
</odoo>
