<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_voucher_product_action" model="ir.actions.act_window">
		<field name="name">Voucher Products</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.product</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'default_is_promotion_voucher': True}</field>
		<field name="domain">[('is_promotion_voucher', '=', True)]</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Click to create a voucher product.
			</p>
		</field>
	</record>

	<menuitem id="menu_voucher_product" name="Voucher Products" parent="menu_config"
		action="view_voucher_product_action" sequence="4" />

</odoo>
