<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_voucher_issue_order_tree" model="ir.ui.view">
		<field name="name">voucher.issue.order.tree</field>
		<field name="model">voucher.issue.order</field>
		<field name="arch" type="xml">
			<tree string="Voucher Issue Orders" decoration-info="state=='draft'" decoration-warning="state=='confirmed'"
					decoration-success="state=='done'" decoration-danger="state=='cancel'">
				<field name="name" />
				<field name="product_id" />
				<field name="planned_date" />
				<field name="issued_date" />
				<field name="voucher_qty" string="Quantity"/>
				<field name="state" />
			</tree>
		</field>
	</record>
	
	<record id="view_voucher_issue_order_form" model="ir.ui.view">
            <field name="name">voucher.issue.order.form</field>
            <field name="model">voucher.issue.order</field>
            <field name="arch" type="xml">
                <form string="Voucher Issue Orders">
                <header>
                	<button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                	<button name="action_issue" string="Issue" type="object" states="confirmed" class="oe_highlight" groups="to_promotion_voucher.group_promotion_voucher_manager"/>
                	<button name="action_draft" type="object" states="cancel" string="Set to Draft" class="oe_highlight"/>
                	<button name="action_cancel" type="object" states="confirmed" string="Cancel" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" context="{'default_is_promotion_voucher': True}"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="voucher_qty"/>
                            <field name="product_uom_id" invisible="1"/>
                            <field name="origin"/>
                        </group>
                        <group>
                            <field name="planned_date"/>
                            <field name="issued_date" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                            <field name="valid_duration"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Moves">
                        	<field name="move_finished_ids"/>
                        </page>
                        <page string="Miscellaneous">
                            <group>
                                <group groups="stock.group_stock_multi_locations">
                                    <field name="picking_type_id" domain="[('code', '=', 'voucher_issue_order')]"/>
                                </group>
                                <group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
	
	<record id="voucher_issue_order_filter" model="ir.ui.view">
		<field name="name">voucher.issue.order.filter</field>
		<field name="model">voucher.issue.order</field>
		<field name="arch" type="xml">
			<search string="Voucher Issue Orders">
				<field name="name" string="Issue Order" filter_domain="['|',('name','ilike',self),('origin','ilike',self)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <field name="product_id"/>
                <group expand="0" string="Group By...">
                    <filter string="Product" name="grp_product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="Status" name="grp_status" domain="[]" context="{'group_by':'state'}"/>
                </group>
			</search>
		</field>
	</record>

	<record id="voucher_issue_order_action" model="ir.actions.act_window">
		<field name="name">Voucher Issue Orders</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">voucher.issue.order</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="voucher_issue_order_filter" />
		<field name="help" type="html">
        	<p class="oe_view_nocontent_create">
        		Click to start a new voucher issue order.
       		</p>
     	</field>
	</record>
	
	<menuitem id="menu_issue_voucher" action="voucher_issue_order_action" name="Issue Vouchers"
			parent="menu_operation_issue" sequence="4" />
	
</odoo>
