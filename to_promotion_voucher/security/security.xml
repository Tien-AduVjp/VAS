<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<record model="ir.module.category"
			id="module_to_promotion_voucher">
			<field name="name">Promotion Voucher</field>
			<field name="description">Helps you manage and issue your promotion voucher.
			</field>
			<field name="sequence">102</field>
		</record>
		<record id="group_promotion_voucher_user" model="res.groups">
			<field name="name">Promotion Voucher User</field>
			<field name="category_id" ref="module_to_promotion_voucher" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
			<field name="comment">Users who can use and manage voucher. They also can
				submit voucher order for voucher issuing by voucher managers</field>
		</record>
		<record id="group_promotion_voucher_manager" model="res.groups">
			<field name="name">Promotion Voucher Manager</field>
			<field name="category_id" ref="module_to_promotion_voucher" />
			<field name="implied_ids"
				eval="[(4, ref('group_promotion_voucher_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
			<field name="comment">Access to all features offered by Promotion Voucher
				Application, including issuing vouchers for usages in sales related
				applications</field>
		</record>
	</data>
</odoo>
