<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_account_analytic_line_tree">
			<field name="name">account.analytic.line.tree</field>
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="to_fleet_accounting.view_account_analytic_line_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vehicle_cost_id']" position="after">
					<field name="vehicle_revenue_id" />
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_account_analytic_line_form">
			<field name="name">account.analytic.line.form</field>
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="to_fleet_accounting.view_account_analytic_line_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vehicle_cost_id']" position="after">
					<field name="vehicle_revenue_id" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
