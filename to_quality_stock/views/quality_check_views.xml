<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_check_view_tree" model="ir.ui.view">
		<field name="name">quality.check.view.tree</field>
		<field name="model">quality.check</field>
		<field name="inherit_id" ref="viin_quality_product.quality_check_view_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="lot_id" groups="stock.group_production_lot" />
			</xpath>
		</field>
	</record>

	<record id="quality_check_view_search" model="ir.ui.view">
		<field name="name">quality.check.view.search</field>
		<field name="model">quality.check</field>
		<field name="inherit_id" ref="viin_quality_product.quality_check_view_search" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="picking_id" />
			</xpath>
			<xpath expr="//filter[@name='grp_product_id']" position="after">
				<separator />
				<filter name="grp_picking" string="Stock Picking" context="{'group_by': 'picking_id'}" />
				<filter name="grp_picking_type" string="Picking Type" context="{'group_by': 'picking_type_id'}" />
				<filter name="grp_lot" string="Lot" context="{'group_by': 'lot_id'}" groups="stock.group_production_lot" />
				<filter name="grp_procurement_group" string="Procurement Group" context="{'group_by': 'procurement_group_id'}" />
			</xpath>
		</field>
	</record>

	<record id="quality_check_view_form" model="ir.ui.view">
		<field name="name">quality.check.view.form</field>
		<field name="model">quality.check</field>
		<field name="inherit_id" ref="viin_quality_product.quality_check_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="lot_id" groups="stock.group_production_lot" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</xpath>
			<xpath expr="//field[@name='point_id']" position="before">
				<field name="picking_id" attrs="{'invisible': [('quality_type', '!=', 'product')]}"/>
			</xpath>
		</field>
	</record>

	<record id="quality_check_view_kanban" model="ir.ui.view">
		<field name="name">quality.check.view.kanban</field>
		<field name="model">quality.check</field>
		<field name="inherit_id" ref="viin_quality_product.quality_check_view_kanban" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="lot_id" />
			</xpath>
			<xpath expr="//div[hasclass('row') and hasclass('text-muted')]/div[./span/t[@t-esc='record.product_id.value']]" position="after">
				<div class="col-4">
					<span>
						<t t-esc="record.lot_id.value" />
					</span>
				</div>
			</xpath>
		</field>
	</record>

	<record id="quality_check_picking_action" model="ir.actions.act_window">
		<field name="name">Quality Checks</field>
		<field name="res_model">quality.check</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{
			'search_default_picking_id': [active_id],
			'default_picking_id': active_id}
		</field>
	</record>
</odoo>
