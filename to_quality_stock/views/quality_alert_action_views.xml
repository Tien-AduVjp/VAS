<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="quality_alert_corrective_action_view_form" model="ir.ui.view">
		<field name="name">quality.alert.corrective.action.form</field>
		<field name="model">quality.alert.corrective.action</field>
		<field name="inherit_id" ref="to_quality.quality_alert_corrective_action_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="lot_id" groups="stock.group_production_lot" />
			</xpath>
		</field>
	</record>

	<record id="quality_alert_preventive_action_view_form" model="ir.ui.view">
		<field name="name">quality.alert.preventive.action.form</field>
		<field name="model">quality.alert.preventive.action</field>
		<field name="inherit_id" ref="to_quality.quality_alert_preventive_action_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="lot_id" groups="stock.group_production_lot" />
			</xpath>
		</field>
	</record>
</odoo>
