<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<record id="employee_size_tree_view" model="ir.ui.view" >
			<field name="name">res.partner.employee.size.tree</field>
			<field name="model">res.partner.employee.size</field>
			<field name="arch" type="xml">
				<tree string="Employee Size List">
					<field name="name" />
				</tree>
			</field>
		</record>
		
		<record id="employee_size_form_view" model="ir.ui.view" >
			<field name="name">res.partner.employee.size.form</field>
			<field name="model">res.partner.employee.size</field>
			<field name="arch" type="xml">
				<form string="Employee Size Form">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="description" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="employee_size_search_view" model="ir.ui.view" >
			<field name="name">res.partner.employee.size.search</field>
			<field name="model">res.partner.employee.size</field>
			<field name="arch" type="xml">
				<search string="Search Employee Size">
					<field name="name" />
				</search>
			</field>
		</record>
		
		<record id="employee_size_action" model="ir.actions.act_window" >
			<field name="name">Employee Size</field>
			<field name="res_model">res.partner.employee.size</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create a new Employee Size</p>
			</field>
		</record>
		
		<menuitem id="employee_size_menu" action="employee_size_action" parent="contacts.res_partner_menu_config" sequence="18"/>
	
	</data>
</odoo>