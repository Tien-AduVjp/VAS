<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="einvoice_service_view_form" model="ir.ui.view">
			<field name="name">einvoice.service.form</field>
			<field name="model">einvoice.service</field>
			<field name="inherit_id" ref="l10n_vn_edi.einvoice_service_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[@name='configuration']" position="after">
					<page string="S-Invoice Bank Settings" name="bank_settings" attrs="{'invisible': [('provider', '!=', 'sinvoice')]}">
                    	<group>
                         	<group>
                         		<field name="sinvoice_max_len_bank_name"/>
                         	</group>
                             <group>
								<field name="sinvoice_max_len_bank_account"/>
							</group>
                     	</group>
                     </page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
