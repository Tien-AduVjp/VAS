<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_c200_s07dn">
			<t t-call="web.html_container">
				<t t-call="to_l10n_vn_qweb_layout.accounting_external_layout_c200">
					<div class="page">
						<div class="text-center">
							<br />
							<h3>
								CASH BOOK
							</h3>
							<h5>
								<t>
									Accounts:
									<span t-esc="account_ids" />
								</t>
							</h5>
							<div class="small">
								Date From:
								<span t-field="doc.date_from" />
								- Date To:
								<span t-field="doc.date_to" />
								<br />
								<br />
								Currency:
								<span t-field="doc.company_id.currency_id" />
							</div>
						</div>
						<table class="table table-bordered">
							<thead>
								<tr>
									<th rowspan="2" style="vertical-align: middle; width: 100px" class="text-center">
										Posting Date
									</th>
									<th rowspan="2" style="vertical-align: middle; width: 100px" class="text-center">
										Voucher Date
									</th>
									<th colspan="2" class="text-center">Voucher No.</th>
									<th rowspan="2" style="vertical-align: middle;  width: 300px;" class="text-center">Description</th>
									<th rowspan="2" class="text-center"
										style="vertical-align: middle;">
										Counterpart
										<br />
										Accounts
									</th>
									<th colspan="3" class="text-center">Amount</th>
									<th rowspan="2" style="vertical-align: middle;" class="text-center">Note</th>
								</tr>
								<tr>
									<th class="text-center" style="vertical-align: middle; width: 100px">
										Receipt
									</th>
									<th class="text-center" style="vertical-align: middle; width: 100px">
										Payment
									</th>
									<th class="text-center" style="vertical-align: middle; width: 120px">Receipt</th>
									<th class="text-center" style="vertical-align: middle; width: 120px">Payment</th>
									<th class="text-center" style="vertical-align: middle; width: 120px">Balance</th>
								</tr>
								<tr>
									<th class="text-center">A</th>
									<th class="text-center">B</th>
									<th class="text-center">C</th>
									<th class="text-center">D</th>
									<th class="text-center">E</th>
									<th class="text-center">F</th>
									<th class="text-center">1</th>
									<th class="text-center">2</th>
									<th class="text-center">3</th>
									<th class="text-center">G</th>
								</tr>
							</thead>
							<tbody>
								<t t-set="line_no" t-value="0" />
								<t t-foreach="lines" t-as="line">
									<tr>
										<t t-if="line['type'] == 'account_title'">
											<td colspan="9">
												<b t-esc="line['account_name']" />
											</td>
										</t>
										<t t-if="line['type'] != 'move_line'">
											<td colspan="4" />
										</t>
										<t t-if="line['type'] != 'account_title'" >
											<td t-if="line['type'] == 'move_line'">
												<span t-esc="format_date(line['date'])" />
											</td>
											<td t-if="line['type'] == 'move_line'">
												<span t-esc="format_date(line['ref_date'])" />
											</td>
	
											<td t-if="line['type'] == 'move_line'">
												<t t-if="line['type'] != 'account_total'">
													<span t-if="line['debit'] != 0" t-esc="line['ref_name']" />
												</t>
											</td>
											<td class="text-center" t-if="line['type'] == 'move_line'">
												<t t-if="line['type'] != 'account_total'">
													<span t-if="line['credit'] != 0" t-esc="line['ref_name']" />
												</t>
											</td>
											<td t-if="line['type'] != 'account_title'">
												<span t-raw="line['name']" />
											</td>
											<td class="text-center" t-if="line['type'] != 'account_title'">
												<span t-if="line['account_id']"
													t-esc="line['account_id']" />
											</td>
											<td class="text-right" t-if="line['type'] != 'account_title'">
												<span t-if="line['type'] not in ('account_end', 'account_init')" t-esc="formatLang(line['debit'], digits=line['decimal_places'])" />
											</td>
											<td class="text-right" t-if="line['type'] != 'account_title'">
												<span t-if="line['type'] not in ('account_end', 'account_init')" t-esc="formatLang(line['credit'], digits=line['decimal_places'])" />
											</td>
											<td class="text-right" t-if="line['type'] != 'account_title'">
												<t t-if="line['type'] != 'account_total'">
													<span t-esc="formatLang(line['progress'], digits=line['decimal_places'])" />
												</t>
											</td>
											<td class="text-right" t-if="line['type'] == 'move_line' or line['type'] not in ('move_line','account_title')"></td>
										</t>
									</tr>
								</t>
							</tbody>
						</table>
						<div class="row">
							<div class="col-12">
								<br />
								<p>
									- Issue Date:
									<t t-esc="format_date(today)" />
								</p>
							</div>
						</div>
						<t t-call="to_l10n_vn_qweb_layout.signature_block" />
					</div>
				</t>
			</t>
		</template>

	</data>
</odoo>