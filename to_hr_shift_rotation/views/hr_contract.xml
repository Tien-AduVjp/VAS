<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_contract_form">
			<field name="name">contract.form</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id"
				ref="hr_contract.hr_contract_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='duration_group']" position="after">
					<group name="shift_rotation_group" string="Shift Rotation">
						<field name="accept_shift_rotation" />
						<field name="rule_id"
							attrs="{'invisible':[('accept_shift_rotation', '=', False)], 'required': [('accept_shift_rotation', '=', True)]}" />
						<field name="begin_shift_rotation_rule_line_id"
							attrs="{'invisible':[('accept_shift_rotation', '=', False)], 'required': [('accept_shift_rotation', '=', True)]}" />
					</group>
				</xpath>
				<!--<field name="resource_calendar_id" position="before"> <field name="accept_shift_rotation"/>
					<field name="rule_id" attrs="{'invisible':[('accept_shift_rotation', '=',
					False)], 'required': [('accept_shift_rotation', '=', True)]}"/> </field>
					<field name="resource_calendar_id" position="attributes"> <attribute name="attrs">{'invisible':[('accept_shift_rotation',
					'=', True)]}</attribute> </field> -->

				<xpath expr="//notebook/page[2]" position="after">
					<page string="Shift Rotation Board"
						attrs="{'invisible':[('accept_shift_rotation', '=', False)]}">
						<field name="shift_scheduling_line_ids">
							<tree editable="bottom">
								<field name="date_from" />
								<field name="date_to" />
								<field name="resource_calendar_id" />
								<!-- <field name="rate"/> -->
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
