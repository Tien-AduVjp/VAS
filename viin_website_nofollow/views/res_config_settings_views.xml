<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.website</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="website.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='webmaster_settings']" position="inside">
				<div class="col-12 col-lg-6 o_setting_box" id="robots_meta_tag">
					<div class="o_setting_left_pane">
						<field name="noindex_nofollow" />
					</div>
					<div class="o_setting_right_pane">
						<label for="noindex_nofollow" />
						<div class="text-muted">
							Prevent Search Engines from indexing, following links in your Website
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
