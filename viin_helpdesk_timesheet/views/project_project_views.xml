<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_project_view_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
        	<xpath expr="//button[@name='action_view_all_rating']" position="before">
        		<button class="oe_stat_button" name="action_tickets_view" type="object" icon="fa-file-text-o">
        			<field string="Tickets" name="tickets_count" widget="statinfo"/>
                </button>
        	</xpath>
        </field>
    </record>
</odoo>
