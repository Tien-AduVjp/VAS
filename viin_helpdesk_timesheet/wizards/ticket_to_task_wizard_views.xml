<?xml version="1.0"?>
<odoo>
        <record id="ticket2task_wizard_view_form" model="ir.ui.view">
            <field name="name">ticket2task.wizard.form</field>
            <field name="model">ticket2task.wizard</field>
            <field name="arch" type="xml">
                <form string="Convert Ticket to Task">
                    <group>
                        <field name="project_id" />
						<field name="partner_id" options="{'no_create': True, 'no_open': True}" />
                        <field name="assign_to_me" />
                        <field name="date_deadline" />
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button name="action_create_task" string="Create task" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ticket2tasks_action" model="ir.actions.act_window">
            <field name="name">Convert to Tasks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ticket2task.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ticket2task_wizard_view_form"/>
            <field name="binding_model_id" ref="model_helpdesk_ticket"></field>
            <field name="target">new</field>
        </record>
</odoo>
