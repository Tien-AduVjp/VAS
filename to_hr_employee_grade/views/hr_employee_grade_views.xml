<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_hr_employee_grade_form" model="ir.ui.view">
			<field name="name">hr.employee.grade.form</field>
			<field name="model">hr.employee.grade</field>
			<field name="arch" type="xml">
				<form string="Employee Grade">
					<sheet>
						<div class="oe_button_box" name="button_box" attrs="{'invisible': [('employees_count', '=', 0)]}">
							<button name="action_view_employees" type="object" class="oe_stat_button" icon="fa-users">
								<field name="employees_count" widget="statinfo" string="Employees" />
							</button>
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" placeholder="e.g. Junior" />
							</h1>
						</div>
						<group>
							<group>
								<field name="parent_id" />
							</group>
							<group>
								<field name="department_id" />
								<field name="company_id" options="{'no_create': True}"
									groups="base.group_multi_company" />
							</group>
							<group>
								<field name="parent_path" invisible="1" />
							</group>
						</group>
						<separator string="Lower Grade" />
						<field name="child_ids">
							<tree>
								<field name="name" />
							</tree>
						</field>
						<div>
							<label for="description" />
							<field name="description" />
						</div>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
					</div>
				</form>
			</field>
		</record>

		<record id="view_hr_employee_grade_tree" model="ir.ui.view">
			<field name="name">hr.employee.grade.tree</field>
			<field name="model">hr.employee.grade</field>
			<field name="arch" type="xml">
				<tree string="Employee Grade">
					<field name="name" />
					<field name="department_id" />
					<field name="employees_count" />
					<field name="child_ids" />
					<field name="company_id" groups="base.group_multi_company" />
				</tree>
			</field>
		</record>

		<record id="hr_employee_grade_view_search" model="ir.ui.view">
			<field name="name">hr.employee.grade.search</field>
			<field name="model">hr.employee.grade</field>
			<field name="arch" type="xml">
				<search string="Employee Grade Search">
					<field name="name" />
					<field name="department_id" />
					<group expand="0" string="Group By">
						<filter name="grp_department_id" string="Department"
							context="{'group_by':'department_id'}" />
					</group>
				</search>
			</field>
		</record>

		<record id="action_hr_employee_grade" model="ir.actions.act_window">
			<field name="name">Employee Grade</field>
			<field name="res_model">hr.employee.grade</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<menuitem id="menu_view_hr_employee_grade"
			name="Grades" sequence="10"
			action="action_hr_employee_grade"
			parent="hr.menu_human_resources_configuration_employee" />

	</data>
</odoo>
