<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mrp_production_workorder_tree_editable_view" model="ir.ui.view">
        <field name="name">mrp.production.work.order.tree.editable</field>
		<field name="model">mrp.workorder</field>
		<field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view" />
		<field name="arch" type="xml">
			<button name="button_start" position="attributes">
				<attribute name="attrs">{'invisible': ['|', '|', '|', '|', ('check_todo', '=', True), ('production_state','in', ('draft', 'done')), ('working_state', '=', 'blocked'), ('state', '=', 'done'), ('is_user_working', '!=', False)]}</attribute>
			</button>
			<button name="button_start" position="before">
				<button name="action_view_quality_alerts" attrs="{'invisible': ['|', ('production_state', 'in', ('draft')), ('state', '!=', 'progress')]}" type="object" string="Quality Alert" context="{'default_workcenter_id' : workcenter_id}" />
				<button name="check_quality" attrs="{'invisible': [('check_todo', '=', False)]}" type="object" string="Quality Checks" class="oe_highlight" />
				<field name="check_ids" invisible="1" />
				<field name="check_todo" invisible="1" />
			</button>
		</field>
	</record>

    <record id="mrp_production_workorder_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.work.order.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit" />
        <field name="arch" type="xml">
   			<div name="button_box" position="inside">
				<button name="action_view_quality_alerts_wo" type="object" class="oe_stat_button" icon="fa-bell" attrs="{'invisible': [('alert_count', '=', 0)]}" context="{'search_default_work_order_id': active_id}">
					<div class="o_form_field o_stat_info">
						<span class="o_stat_value">
							<field name="alert_count" />
						</span>
						<span class="o_stat_text">Quality Alert</span>
					</div>
				</button>
				<button name="%(quality_check_action_wo)d" attrs="{'invisible': [('check_ids', '=', [])]}" type="action" string="Quality Checks" class="oe_stat_button" icon="fa-check" />
				<field name="check_ids" invisible="1" />
			</div>
        </field>
	</record>
</odoo>
