<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pos_config_form" model="ir.ui.view">
		<field name="name">pos.config.form</field>
		<field name="model">pos.config</field>
		<field name="inherit_id"
			ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet" position="inside">
				<h2 groups="analytic.group_analytic_accounting">Analytics Accounting</h2>
				<div class="row mt16 o_settings_container"
					id="analytics_accounting"
					groups="analytic.group_analytic_accounting">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_right_pane">
							<span class="o_form_label">Analytics Accounting</span>
							<div class="text-muted">
								Configuration for analytics account of PoS orders
							</div>
							<div class="content-group">
								<div class="row mt16"
									groups="analytic.group_analytic_accounting">
									<label string="Create Analytics Account"
										for="auto_create_analytics_account"
										class="col-lg-3 o_light_label" />
									<field name="auto_create_analytics_account" />
								</div>
								<div class="row" groups="analytic.group_analytic_accounting">
									<label string="Analytics Account"
										for="analytics_account_id" class="col-lg-3 o_light_label" />
									<field name="analytics_account_id" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
