<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_accounting" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.viin.hr.account</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="account.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath
				expr="//div[@id='analytic']" position="after">
				<h2>Payroll</h2>
                <div id="payroll_setting_container" class="row mt16 o_settings_container">
                    <div id="payroll_setting_general_employee_payable_account_id"
                    	groups="account.group_account_user"
                    	class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">General Employee Payable Account</span>
							<div class="text-muted">
							A payable account for encoding employee payable accounting entries (e.g. in payslip batch mode or in case no payable account specified for the related employee)
							</div>
							<div class="text-muted">
								<field name="general_employee_payable_account_id"/>
							</div>
						</div>
                    </div>
                  </div>
			</xpath>
		</field>
	</record>
</odoo>
