<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="account_analytic_tag_form_view" model="ir.ui.view">
		<field name="name">account.analytic.tag.form</field>
		<field name="model">account.analytic.tag</field>
		<field name="inherit_id"
			ref="analytic.account_analytic_tag_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//group[./field[@name='name']]" position="after">
				<group string="HR" attrs="{'invisible': [('active_analytic_distribution','=',False)]}">
					<field name="department_ids" widget="many2many_tags" />
				</group>
			</xpath>
		</field>
	</record>

</odoo>
