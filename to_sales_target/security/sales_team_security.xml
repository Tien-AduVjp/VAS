		<!-- Regional Manager Leader -->
		<record id="property_rule_personal_target_regional_manager_1"
			model="ir.rule">
			<field name="name">Sale Regional Manager - Personal Target Rule 1</field>
			<field name="model_id" ref="model_personal_sales_target" />
            <field name="domain_force">['|', '|', '|', '|', '|', ('sale_person_id.sale_team_id.crm_team_region_id.recursive_user_ids', 'in', [user.id]),
													('sale_person_id.sale_team_id.crm_team_region_id.recursive_assistant_ids', 'in', [user.id]),
													('sale_person_id.sale_team_id.crm_team_region_id', '=', False),
													('team_target_id.crm_team_id.crm_team_region_id.recursive_user_ids', 'in', [user.id]),
													('team_target_id.crm_team_id.crm_team_region_id.recursive_assistant_ids', 'in', [user.id]),
													('team_target_id.crm_team_id.crm_team_region_id', '=', False)]</field>
