<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='currency_id']"
                    position="after">
                    <field name="has_vehicle_service" widget="widgetbusbutton"
                        attrs="{'column_invisible': [('parent.move_type', 'not in', ['in_invoice','in_refund'])]}"
                        options="{&quot;warn&quot;: true}" />
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_uom_category_id']"
                    position="after">
                    <field name="fleet_vehicle_service_ids" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[2]" position="inside">
                    <separator string="Linked Fleet Vehicle Services"
                        attrs="{'invisible':[('move_type','in',['out_invoice','out_refund'])]}"
                        groups="base.group_no_one" />
                    <field name="fleet_vehicle_service_ids"
                        attrs="{'invisible':[('move_type','in',['out_invoice','out_refund'])]}"
                        groups="base.group_no_one">
                        <tree name="fleet_vehicle_service_ids">
                            <field name="vehicle_id" />
                            <field name="service_type_id" />
                            <field name="product_id" />
                            <field name="vendor_id" />
                            <field name="amount" />
                            <field name="date" />
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
        
        <record id="view_move_form_account_fleet" model="ir.ui.view">
            <field name="name">account.move.form.account.fleet</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_fleet.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']//field[@name='vehicle_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='vehicle_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
