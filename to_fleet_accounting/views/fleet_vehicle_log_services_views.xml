<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view"
            id="fleet_vehicle_log_services_view_tree">
            <field name="name">fleet.vehicle.log.services.tree</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id"
                ref="fleet.fleet_vehicle_log_services_view_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="before">
                    <field name="currency_id" invisible="1" />
                </xpath>
                <field name="vehicle_id" position="after">
                    <field name="product_id" />
                    <field name="invoiceable" groups="base.group_no_one" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view"
            id="fleet_vehicle_log_services_view_form">
            <field name="name">fleet.vehicle.log.services.form</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id"
                ref="fleet.fleet_vehicle_log_services_view_form" />
            <field name="arch" type="xml">
                <field name="service_type_id" position="after">
                    <field name="product_id"/>
                </field>
                <xpath expr="//field[@name='amount']" position="before">
                    <field name="currency_id"
                        options="{'no_create': True, 'no_open': True}"
                        groups="base.group_multi_currency" />
                </xpath>
                <xpath expr="//field[@name='odometer']/parent::div" position="after">
                    <field name="invoice_line_id" groups="base.group_no_one"
                        attrs="{'invisible':[('invoice_line_id','=',False)]}"/>
                    <field name="invoice_id" groups="base.group_no_one"
                        attrs="{'invisible':[('invoice_id','=',False)]}"/>
                    <field name="invoiceable" groups="base.group_no_one" />
                    <field name="company_id" groups="base.group_multi_company" />
                </xpath>

                <xpath expr="//field[@name='vehicle_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('invoice_line_id','!=',False)]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='service_type_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('invoice_line_id','!=',False)]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="attrs">{'readonly':[('invoice_line_id','!=',False)]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="attrs">{'readonly':[('invoice_line_id','!=',False)]}
                    </attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view"
            id="fleet_vehicle_log_services_view_search">
            <field name="name">fleet.vehicle.log.services.search</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id"
                ref="fleet.fleet_vehicle_log_services_view_search" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_type_id']"
                    position="after">
                    <separator />
                    <field name="vendor_id" />
                    <field name="invoice_id" />
                    <separator />
                    <filter name="ftr_to_invoice"
                        domain="[('invoiceable','=',True)]" string="To Invoice" />
                    <filter name="ftr_invoiced"
                        domain="[('invoice_line_id','!=',False)]" string="Invoiced" />
                    <filter name="ftr_uninvoiced" domain="[('invoice_line_id','=',False)]" string="Uninvoiced" />
                    <separator />
                    <group expand="0" string="Group By">
                        <filter name="grp_vendor_id" context="{'group_by': 'vendor_id'}"
                            string="Vendor" />
                        <filter name="grp_currency_id" context="{'group_by': 'currency_id'}"
                            string="Currency" groups="base.group_multi_currency" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
