<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
        <record id="email_template_fleet_vehicle_insurance_expiry_warning" model="mail.template">
            <field name="name">Fleet Vehicle Insurance Expiry Warning - Send by Email</field>
            <field name="email_from">System</field>
            <field name="subject">Fleet Vehicle Insurance is about to get expired (Ref ${object.display_name})</field>
            <field name="partner_to">${object.vehicle_id.driver_id.id}</field>
            <field name="model_id" ref="to_fleet_insurance_basic.model_fleet_vehicle_insurance"/>
            <field name="lang">${object.vehicle_id.driver_id.lang}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Hello ${object.vehicle_id.driver_id.name or ''},</p>
    
    <p>This is to notify that the ${object.display_name} will be expired on: ${object.date_end}. </p>
    
    <p>Best Regard,</p>

</div>
            ]]></field>
        </record>
	</data>
</odoo>