<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="fleet_vehicle_view_form" model="ir.ui.view">
			<field name="name">fleet.vehicle.form</field>
			<field name="model">fleet.vehicle</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
					<button name="action_view_insurances" type="object" class="oe_stat_button"
						icon="fa-shield" context="{'default_vehicle_id': active_id}"
						help="show the active insurances of this vehicle">
						<field name="current_insurances_count" widget="statinfo" string="Insurances" />
					</button>
				</xpath>
			</field>
		</record>
	</data>
</odoo>