<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.mobile.notification</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref='base_setup.res_config_settings_view_form' />
        <field name="arch" type="xml">
            <xpath expr="//widget[@name='res_config_dev_tool']" position="before">
                <div id="mobile_notification">
                    <h2>Mobile Notifications</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <label for="mobile_notify_provider" string="Service Type" class="col-md-4 o_light_label" />
                                        <field name="mobile_notify_provider" style="width: 120px; margin-right: 8px;"/>
                                    </div>
                                    <div class="row">
                                        <label for="mobile_notify_type" string="Notification Type" class="col-md-4 o_light_label" />
                                        <field name="mobile_notify_type" style="width: 120px; margin-right: 8px;" />
                                    </div>
                                    <div class="row">
                                        <label for="mobile_notify_auth_key" string="Authorization key" class="col-md-4 o_light_label" />
                                        <field name='mobile_notify_auth_key' password="True"/>
                                    </div>
                                    <div class="row">
                                        <label for="mobile_notify_max_retry" string="Max retry" class="col-md-4 o_light_label" />
                                        <field name='mobile_notify_max_retry' />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row" id="mobile_base_package">
                                        <label for="mobile_base_package" string="Base package" class="col-md-4 o_light_label" />
                                        <field name='mobile_base_package' />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
