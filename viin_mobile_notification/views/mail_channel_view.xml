<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_channel_view_form" model="ir.ui.view">
        <field name="name">mail.channel.view.form.notification.inherit</field>
        <field name="model">mail.channel</field>
        <field name="inherit_id" ref="mail.mail_channel_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[3]" position="after">
                <page string="Mobile">
                    <group class="o_label_nowrap">
                        <label for="receive_mobile_notification" />
                        <div>
                            <field name='receive_mobile_notification' invisible= "1" />
                            <button name="button_toggle_mobile_notification" class='btn-link' type="object" string="Cancel" attrs="{'invisible': [('receive_mobile_notification', '=', False)]}" />
                            <button name="button_toggle_mobile_notification" class='btn-link' type="object" string="Receive" attrs="{'invisible': [('receive_mobile_notification', '=', True)]}" />
                        </div>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_email']" position="after">
                <field name="mobile_notification" force_save="1" />
            </xpath>
        </field>
    </record>
</odoo>
