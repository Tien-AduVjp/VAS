<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="asset_assign_to"
                       attrs="{'column_invisible': [('parent.can_assign_equipment', '=', False)]}"/>
                <field name="employee_id" string="Employee"
                       attrs="{'column_invisible': [('parent.can_assign_equipment', '=', False)],
                               'invisible': [('asset_assign_to', 'not in', ['employee', 'other'])],
                               'required': [('asset_assign_to', '=', 'employee')]}"
                               />
                <field name="department_id" string="Department"
                       attrs="{'column_invisible': [('parent.can_assign_equipment', '=', False)],
                               'invisible': [('asset_assign_to', 'not in', ['department', 'other'])],
                               'required': [('asset_assign_to', '=', 'department')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
