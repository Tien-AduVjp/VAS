<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="maintenance_equipment_view_form_inherited">
		<field name="name">maintenance.equipment.form.inherited</field>
		<field name="model">maintenance.equipment</field>
		<field name="inherit_id" ref="hr_maintenance.maintenance_equipment_view_form_inherit_hr" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='equipment_assign_to']" position="before">
				<field name="asset_status" attrs="{'invisible': [('asset_status', '=', False)]}"/>
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view" id="maintenance_equipment_view_tree_inherited">
		<field name="name">maintenance.equipment.tree.inherited</field>
		<field name="model">maintenance.equipment</field>
		<field name="inherit_id" ref="hr_maintenance.maintenance_equipment_view_tree_inherit_hr" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='employee_id']" position="before">
				<field name="asset_status" optional="hide"/>
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view" id="maintenance_equipment_view_kanban_inherited">
		<field name="name">maintenance.equipment.kanban.inherited</field>
		<field name="model">maintenance.equipment</field>
		<field name="inherit_id" ref="hr_maintenance.maintenance_equipment_view_kanban_inherit_hr" />
		<field name="arch" type="xml">
			<div t-if="!record.employee_id.raw_value" position="before">
                <div t-if="record.asset_status.value"><field name="asset_status"/></div>
            </div>
		</field>
	</record>
</odoo>
