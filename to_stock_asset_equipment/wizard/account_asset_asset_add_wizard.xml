<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="account_asset_asset_add_wizard_view_form">
			<field name="name">account.asset.asset.add.wizard.form</field>
			<field name="model">account.asset.asset.add.wizard</field>
			<field name="inherit_id" ref="to_account_asset.account_asset_asset_add_wizard_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/group/group" position="inside">
					<field name="asset_assign_to" attrs="{'required': [('production_lot_id', '!=', False)]}" groups='maintenance.group_equipment_manager'/>
					<field name="department_id" options="{'no_create': True, 'no_edit': True}" groups='maintenance.group_equipment_manager'
						   attrs="{'invisible': [('asset_assign_to', 'not in', ['department', 'other'])], 'required': [('asset_assign_to', '=', 'department')]}" />
					<field name="employee_id" options="{'no_create': True, 'no_edit': True}" groups='maintenance.group_equipment_manager'
						   attrs="{'invisible': [('asset_assign_to', 'not in', ['employee', 'other'])], 'required': [('asset_assign_to', '=', 'employee')]}" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
