<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="vehicle_trip_register_cost_wizard_view" model="ir.ui.view">
		<field name="name">vehicle.trip.register.cost.wizard.form</field>
		<field name="model">vehicle.trip.register.cost.wizard</field>
		<field name="arch" type="xml">
			<form string="Trip Service Logging Wizard">
				<field name="trip_id" invisible="1" />
				<group>
					<group name="starting">
						<field name="vendor_id" />
						<field name="date" />
						<field name="service_type_id" />
                        <field name="quantity" />
                        <field name="price_unit"/>
						<field name="amount"/>
                        <field name="currency_id" invisible="1" />
					</group>
					<group>
						<field name="trip_waypoint_id" attrs="{'invisible':[('trip_section_id','!=',False)]}" />
						<field name="company_id" groups="base.group_multi_company" />
						<field name="trip_section_id" attrs="{'invisible':[('trip_waypoint_id','!=',False)]}" />
					</group>
				</group>
				<footer>
					<button name="action_register_cost" string="Create" type="object"
						default_focus="1" class="oe_highlight" />
					or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

    <record id="launch_vehicle_trip_register_cost_wizard" model="ir.actions.act_window">
        <field name="name">Trip Service Logging Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vehicle.trip.register.cost.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vehicle_trip_register_cost_wizard_view"/>
        <field name="target">new</field>
    </record>

</odoo>
