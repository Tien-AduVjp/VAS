<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="vehicle_trip_register_cost_wizard_view" model="ir.ui.view">
		<field name="name">vehicle.trip.register.cost.wizard.form</field>
		<field name="model">vehicle.trip.register.cost.wizard</field>
		<field name="arch" type="xml">
			<form string="Trip Cost Registration Wizard">
				<field name="trip_id" invisible="1" />
				<group>
					<group name="starting">
						<field name="date" />
						<field name="cost_subtype_id" />
						<field name="amount" />
					</group>
					<group>
						<field name="trip_waypoint_id" attrs="{'invisible':[('trip_section_id','!=',False)]}" />
						<field name="trip_section_id" attrs="{'invisible':[('trip_waypoint_id','!=',False)]}" />
					</group>
				</group>
				<footer>
					<button name="action_register_cost" string="Register" type="object"
						default_focus="1" class="oe_highlight" />
					or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<act_window id="launch_vehicle_trip_register_cost_wizard"
		name="Trip Cost Registration Wizard" res_model="vehicle.trip.register.cost.wizard"
		view_mode="form" target="new" />
</odoo>
