<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="vehicle_strip_end_wizard_form_view"
			model="ir.ui.view">
			<field name="name">vehicle.trip.end.wizard.form</field>
			<field name="model">vehicle.trip.end.wizard</field>
			<field name="arch" type="xml">
				<form string="Trip Ending Wizard">
					<group>
						<group name="starting">
							<field name="trip_id" invisible="1" />
							<field name="operation_end" />
						</group>
						<group>
							<field name="odometer" />
							<field name="fuel_consumption" />
						</group>
					</group>
					<footer>
						<button name="action_done" string="Done" type="object"
							default_focus="1" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

        <record id="launch_vehicle_strip_end_wizard" model="ir.actions.act_window">
            <field name="name">Trip Ending Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.trip.end.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="vehicle_strip_end_wizard_form_view"/>
            <field name="target">new</field>
        </record>

	</data>
</odoo>
