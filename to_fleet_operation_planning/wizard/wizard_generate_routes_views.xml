<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="generate_routes_wizard_form_view" model="ir.ui.view">
			<field name="name">wizard.generate.routes.form</field>
			<field name="model">wizard.generate.routes</field>
			<field name="arch" type="xml">
				<form string="Generate Routes from Trips">
					<group>
						<group name="starting">
							<field name="update_trip" />
							<field name="type" />
						</group>
						<group>
							<field name="raise_error_if_dupplication_routes_found" />
						</group>
					</group>
					<separator string="Trips for Routes Generation"
						attrs="{'invisible':[('type','=','all_trips')]}" />
					<field name="trip_ids" attrs="{'invisible':[('type','=','all_trips')]}">
						<tree nolabel="1">
							<field name="name" />
							<field name="start_date" />
							<field name="end_date" />
							<field name="vehicle_id" />
							<field name="driver_id" />
							<field name="route_id" />
							<field name="state" invisible="1" />
						</tree>
					</field>
					<footer>
						<button name="action_generate_routes" string="Generate Routes" type="object"
							default_focus="1" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

        <record id="launch_generate_routes_wizard" model="ir.actions.act_window">
            <field name="name">Generate Routes from Trips</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.generate.routes</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="generate_routes_wizard_form_view"/>
            <field name="target">new</field>
        </record>

		<menuitem id="route_generator_menu" name="Generate Routes" parent="to_geo_routes.geo_route_root_menu"
			action="launch_generate_routes_wizard" sequence="0" />

	</data>
</odoo>
