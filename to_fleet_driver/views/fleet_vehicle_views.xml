<odoo>
    <record id="inherit_domain_fleet_vehicle_view_form" model="ir.ui.view">
		<field name="name">fleet.vehicle.view.form</field>
		<field name="model">fleet.vehicle</field>
		<field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
		<field name="arch" type="xml">
				<xpath expr="//field[@name='driver_id']" position="replace">
                       <field name="driver_id" options="{'no_create': True}" context="{'form_view_ref':'base.res_partner_view_form_private'}"
						   domain="[('is_driver','=',True),'|',('company_id', '=', False ), ('company_id', '=', company_id)]" />
				</xpath>
				<xpath expr="//field[@name='future_driver_id']" position="replace">
					<field name="future_driver_id" options="{'no_create': True}" context="{'form_view_ref':'base.res_partner_view_form_private'}"
						   domain="[('is_driver','=',True),'|',('company_id', '=', False ), ('company_id', '=', company_id)]" />
				</xpath>
		</field>
	</record>
</odoo>
