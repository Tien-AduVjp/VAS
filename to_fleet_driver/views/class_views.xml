<odoo>
	<record id="driver_license_class_form_view" model="ir.ui.view">
		<field name="name">driver.license.class.form</field>
		<field name="model">driver.license.class</field>
		<field name="arch" type="xml">
			<form string="License Class">
				<sheet>
					<group>
						<field name="name" />
						<field name="description" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="driver_license_class_tree_view" model="ir.ui.view">
		<field name="name">driver.license.class.form</field>
		<field name="model">driver.license.class</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="description" />
			</tree>
		</field>
	</record>

	<record id="fleet_driver_license_class_action" model="ir.actions.act_window">
		<field name="name">License Class</field>
		<field name="res_model">driver.license.class</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
	</record>

	<menuitem id="fleet_driver_license_class_menu" parent="fleet.fleet_configuration"
		name="License Class" sequence="130" action="fleet_driver_license_class_action"
		groups="fleet.fleet_group_manager" />
</odoo>
