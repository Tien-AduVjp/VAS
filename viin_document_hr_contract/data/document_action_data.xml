<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <!-- Mark as Contract Running -->

    <record id="document_action_hr_contract_running" model="document.action">
        <field name="name">Mark as Running</field>
        <field name="done_document_activity" eval="True"/>
    </record>

    <record id="document_action_set_tag_hr_contract_running" model="document.action.set_tag">
        <field name="action_type">replace</field>
        <field name="category_id" ref="document_tag_category_hr_contract_status"/>
        <field name="tag_ids" eval="[(4, ref('document_tag_hr_contract_running'))]"/>
        <field name="action_id" ref="document_action_hr_contract_running"/>
    </record>

    <!-- Mark as Contract Expired -->

    <record id="document_action_hr_contract_expired" model="document.action">
        <field name="name">Mark as Expired</field>
        <field name="done_document_activity" eval="True"/>
    </record>

    <record id="document_action_set_tag_hr_contract_expired" model="document.action.set_tag">
        <field name="action_type">replace</field>
        <field name="category_id" ref="document_tag_category_hr_contract_status"/>
        <field name="tag_ids" eval="[(4, ref('document_tag_hr_contract_expired'))]"/>
        <field name="action_id" ref="document_action_hr_contract_expired"/>
    </record>

</odoo>
