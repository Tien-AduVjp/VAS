<odoo>
	<record id="hr_leave_view_form" model="ir.ui.view">
		<field name="name">hr.leave.view.form</field>
		<field name="model">hr.leave</field>
		<field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
		<field name="arch" type="xml">
			<button name="action_refuse" position="after">
				<button name="action_adjustment_leave" string="Adjust Dates" type="object"
						groups="hr_holidays.group_hr_holidays_manager"/>
			</button>
			
			<field name="date_from" position="attributes">
				<attribute name="invisible">0</attribute>
				<attribute name="attrs">{'invisible': [('request_unit_hours', '=', False)]}</attribute>
			</field>
			
			<field name="date_to" position="attributes">
				<attribute name="invisible">0</attribute>
				<attribute name="attrs">{'invisible': [('request_unit_hours', '=', False)]}</attribute>
			</field>

			<field name="request_date_from" position="attributes">
				<attribute name="attrs">{'readonly': [('state', 'not in', ('draft', 'confirm'))],
										'invisible': [('request_unit_hours', '=', True)]}
				</attribute>
			</field>
			
			<label for="request_hour_from" position="attributes">
				<attribute name="invisible">1</attribute>
			</label>
			<label for="request_hour_to" position="attributes">
				<attribute name="invisible">1</attribute>
			</label>
			<field name="request_hour_from" position="attributes">
			<attribute name="invisible">1</attribute>
				<attribute name="attrs">{}</attribute>
			</field>
			<field name="request_hour_to" position="attributes">
			<attribute name="invisible">1</attribute>
 					<attribute name="attrs">{}</attribute>
			</field>
			
			<field name="user_id" position="before">
				<label for="number_of_hours_display" string="Duration" attrs="{'invisible': [('request_unit_hours', '=', False)]}"/>
            	<div attrs="{'invisible': [('request_unit_hours', '=', False)]}">
                	<field name="number_of_hours_display" nolabel="1" class="oe_inline"/>
                    <span class="ml8">Hours</span>
                </div>
			</field>

		</field>
	</record>
</odoo>
