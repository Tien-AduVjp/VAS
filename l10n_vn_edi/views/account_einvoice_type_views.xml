<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="account_einvoice_type_form" model="ir.ui.view">
			<field name="name">account.einvoice.type.form</field>
			<field name="model">account.einvoice.type</field>
			<field name="arch" type="xml">
				<form string="E-Invoice Type">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="description" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="account_einvoice_type_tree" model="ir.ui.view">
			<field name="name">account.einvoice.type.tree</field>
			<field name="model">account.einvoice.type</field>
			<field name="arch" type="xml">
				<tree string="E-Invoice Types">
					<field name="name" />
					<field name="description" />
				</tree>
			</field>
		</record>

		<record id="action_einvoice_type" model="ir.actions.act_window">
			<field name="name">E-Invoice Types</field>
			<field name="res_model">account.einvoice.type</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem action="action_einvoice_type"
			id="menu_einvoice_type" parent="menu_einvoice" sequence="60"
			groups="account.group_account_manager" />
	</data>
</odoo>
