<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="hr_employee_resignation_form" model="ir.ui.view">
		<field name="name">hr.employee.resignation.form</field>
		<field name="model">hr.employee.resignation</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Employee Resignation">
				<header>
					<button string="Submit" name="action_submit" type="object"
						states="draft" class="oe_highlight" />
					<button string="Approve" name="action_approve" type="object"
						states="submitted" class="oe_highlight" />
					<button string="Refuse" name="action_refuse" states="submitted"
						type='object' />
					<button string="Set to Draft" name="action_draft" type="object"
						states="cancelled,refused" />
					<button string="Cancel" name="action_cancel" type="object"
						states="submitted,approved" />
					<button string="Done" name="action_done" type="object"
						states="approved" groups="hr.group_hr_manager"/>
					<field name="state" widget="statusbar"
						statusbar_visible="draft,submitted,approved,done" />
				</header>
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" />
						</h1>
					</div>
					<group>
						<group>
							<field name="employee_id" />
							<field name="plan_id" />
						</group>
						<group>
							<field name="date_resign" />
							<field name="date_approved" attrs="{'invisible':[('date_approved','=',False)]}" />
						</group>
					</group>
					<label for="reason" />
					<field name="reason" />
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" />
				</div>
			</form>
		</field>
	</record>

	<record id="hr_employee_resignation_tree" model="ir.ui.view">
		<field name="name">hr.employee.resignation.tree</field>
		<field name="model">hr.employee.resignation</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Employee Advance">
				<field name="name" />
				<field name="employee_id" />
				<field name="date_resign" />
				<field name="date_approved" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record model="ir.actions.act_window" id="hr_employee_resignation_action">
		<field name="name">Employee Resignations</field>
		<field name="res_model">hr.employee.resignation</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">Create the first Employee Resignation</p>
		</field>
	</record>

	<menuitem id="hr_employee_resignation_menu" name="Resignations"
		parent="resignations_root_menu" sequence="1"
		action="hr_employee_resignation_action" />

</odoo>