<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='group_mrp_routings']" position="after">
            		<field name="module_to_mrp_workorder" invisible="1"/>
            	</xpath>
            	<xpath expr="//field[@name='module_mrp_mps']" position="replace">
            		<field name="module_to_mrp_mps" />
            	</xpath>
            	<xpath expr="//label[@for='module_mrp_mps']" position="replace">
            		<label for="module_to_mrp_mps"/>
            	</xpath>
            	<xpath expr="//field[@name='module_quality_control']/parent::div/parent::div" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>

    </data>
</odoo>
