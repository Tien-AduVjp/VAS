<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='google_maps_setting']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_edit_website_jobs_website_setting"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_edit_website_jobs_website_setting" string="Allow Website Editors to edit this website's job recruitment pages"/>
                        <div class="text-muted">
                            Allow Website Editors to edit HR Job Recruitment Page Base on Specific Website
                        </div>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//div[@data-key='hr_recruitment']//div[hasclass('o_settings_container')]" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_edit_website_jobs_company_setting"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_edit_website_jobs_company_setting" string="Allow Website Editors to edit job recruitment pages"/>
                        <div class="text-muted">
                            Allow Website Editors to edit HR Job Recruitment Page Base On Company Setting
                        </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
