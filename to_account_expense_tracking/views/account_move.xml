<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  	<record model="ir.ui.view" id="view_move_form">
      <field name="name">account.move.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"></field>
      <field name="arch" type="xml">
         <xpath expr="//page[last()]" position="after">
         	<page id="expense" string="HR Expenses">
				<field name="expense_sheet_ids" />
         	</page>
         </xpath>
      </field>
    </record>
    
    <record model="ir.ui.view" id="view_account_move_filter">
      <field name="name">account.move.search</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_account_move_filter"></field>
      <field name="arch" type="xml">
          <xpath expr="//filter[@name='to_check']" position="after">
          	<separator/>
          	<filter string="HR Expense" name="ftr_hr_expense" domain="[('expense_sheet_id','!=',False)]"/>
          	<separator/>
          </xpath>
          <xpath expr ="//filter[@name='journal']" position ="after">
          	<filter string="Expense" name="groupby_expense" domain="[]" context="{'group_by': 'expense_sheet_id'}"/>
          </xpath>
      </field>
    </record>
    
  </data>
</odoo>