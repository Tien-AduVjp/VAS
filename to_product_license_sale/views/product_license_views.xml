<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="product_license_view_form" model="ir.ui.view">
			<field name="name">product.license.form</field>
			<field name="model">product.license</field>
			<field name="inherit_id"
				ref="to_product_license.product_license_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//button[@name='action_view_products']"
					position="before">
					<button name="action_view_sale_lines" type="object"
						class="oe_stat_button" icon="fa-usd"
						groups="sales_team.group_sale_salesman">
						<field name="sale_lines_count" string="Sales"
							widget="statinfo" />
					</button>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
