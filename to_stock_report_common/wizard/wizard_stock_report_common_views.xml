<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Common Report -->
		<record id="wizard_stock_report_common_form" model="ir.ui.view">
			<field name="name">Stock Common Report Wizard Form</field>
			<field name="model">wizard.stock.report.common</field>
			<field name="arch" type="xml">
				<form string="Stock Report Options">
					<group>
						<group name="filter_date" string="Dates">
							<field name="date_from" />
							<field name="date_to" />
						</group>
						<group name="grp_stock" string="Stock">
							<field name="company_id" groups="base.group_multi_company" />
							<field name="warehouse_id"
								groups="stock.group_stock_multi_warehouses" />
							<field name="location_id"
								attrs="{'invisible':[('warehouse_id','=',False)],'required':[('warehouse_id','!=',False)]}"
								groups="stock.group_stock_multi_locations" />
						</group>
					</group>
					<footer>
						<button name="check_report" string="Print" type="object"
							default_focus="1" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>
