<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="social_post_view_kanban" model="ir.ui.view">
        <field name="name">social.post.form.inherit.linkedin</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="viin_social.social_post_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='views_count']" position="after">
				<field name="click_count"/>
				<field name="rate_engagement"/>
            </xpath>
            <xpath expr="//div[hasclass('for-inherit')]" position="inside">
            	<t t-if="record.click_count.raw_value">
	            	<div class="ml-4">
						<i class="fa fa-mouse-pointer" title="Clicks"/>
		                <b t-esc="record.click_count.raw_value"/>
					</div>
				</t>
				<t t-if="record.rate_engagement.raw_value">
					<div class="ml-4">
						<i class="fa fa-percent" title="Engagement Rate (Rate of total likes + comments + shares + clicks compared to views)"/>
		                <b t-esc="record.rate_engagement.value"/>
					</div>
            	</t>
            </xpath>
        </field>
    </record>
    
    <record id="social_post_view_search" model="ir.ui.view">
        <field name="name">social.post.form.inherit.linkedin</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="viin_social.social_post_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_posted']" position="after">
				<separator/>
 				<filter name="ftr_linkedin" string="Linkedin"
				            domain="[('page_id.social_provider', '=', 'linkedin')]"/>
            </xpath>
        </field>
    </record>

</data>
</odoo>
