<odoo>
	<record id="res_config_settings_form_view" model="ir.ui.view">
		<field name="name">res.config.settings.form.view.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="99" />
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='tasks_management']" position="after">
				<h2>Projects Management</h2>
				<div class="row mt16 o_settings_container"
					id="projects_management">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="project_user_full_access_rights" />
						</div>
						<div class="o_setting_right_pane">
							<label for="project_user_full_access_rights" string="Enable Full Access Rights for Project Manager" />
							<div class="text-muted">
								Default value for a newly created project to grant full access rights
								for the project manager to the project.
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
