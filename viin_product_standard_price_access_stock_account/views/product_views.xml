            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock_account.product_variant_easy_edit_view_inherit" />
            <field name="arch" type="xml">
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">to_product_standard_price_access.group_product_price_access</attribute>
                </xpath>
                <xpath expr="//div[@name='update_cost_price']" position="attributes">
                    <attribute name="groups">to_product_standard_price_access.group_product_price_access</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
