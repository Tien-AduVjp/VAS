<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="social_media_action" model="ir.actions.act_window">
        <field name="name">Social Media</field>
        <field name="res_model">social.media</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="social_media_view_kanban" model="ir.ui.view">
        <field name="name">Social Media</field>
        <field name="model">social.media</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('social.media', 'image', record.id.raw_value)"
                                     alt="Social Media"/>
                            </div>
                            <div>
                                <h3>
                                    <field name="name"/>
                                </h3>
                                <field name="description"/>
                            </div>
                            <div class="mt-4">
                                <button name="action_link_account" type="object" class="btn btn-primary float-right">
                                    LINK ACCOUNT</button>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="social_media_view_form" model="ir.ui.view">
        <field name="name">Social Media</field>
        <field name="model">social.media</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" duplicate="false">
                <header>
                    <button name="action_synchronized" string="Synchronize Pages" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="social_provider"/>
                            <field name="description"/>
                            <field name="assign_id"/>
                            <field name="token_expired_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <menuitem id="social_media_menu" name="Social Media" parent="social_configuration_menu"
              action="social_media_action" sequence="10"/>
</odoo>
