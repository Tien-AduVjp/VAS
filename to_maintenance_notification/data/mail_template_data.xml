<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="email_template_notify_maintenance" model="mail.template">
			<field name="name">Notify Maintenance</field>
			<field name="email_from">System</field>
			<field name="subject">[Maintenance Nofitication] ${object.name} // ${object.equipment_id.name}</field>
			<field name="partner_to">${object.user_id.partner_id.id}</field>
			<field name="model_id" ref="to_maintenance_notification.model_maintenance_request" />
			<field name="lang">${object.user_id.lang}</field>
			<field name="auto_delete" eval="True" />
			<field name="body_html"><![CDATA[
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Hello <strong>${object.user_id.name}</strong>,</p>
    
	<p>This is a ${object.days_to_notify}-day nofitication of the maintenance <strong>${object.name} </strong> for the equipment <strong>${object.equipment_id.name}</strong>, which is scheduled to be carried out on ${object.schedule_date}.</p>
      
    <p>Best Regard,</p>

</div>
            ]]></field>
		</record>
	</data>
</odoo>