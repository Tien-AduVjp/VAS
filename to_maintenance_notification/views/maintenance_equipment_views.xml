<odoo>
	<data>
		<record id="hr_equipment_view_form" model="ir.ui.view">
			<field name="name">equipment.form</field>
			<field name="model">maintenance.equipment</field>
			<field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='assign_date']" position="after">
					<field name="days_to_notify" />
					<field name="maintenance_schedule_ids" invisible="1"/>
				</xpath>
				<xpath expr="//group[@name='maintenance']/field[@name='next_action_date']" position="after">
					<field name="next_maintenance_milestone_id" attrs="{'invisible': [('preventive_maintenance_mode', '!=', 'schedule')]}"/>
				</xpath>
				<xpath expr="//page[@name='maintenance_schedule']" position="attributes">
				    <attribute name="attrs">{'invisible': [('preventive_maintenance_mode', '!=', 'schedule')]}</attribute>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
