<odoo>
	<data>
		<record id="hr_equipment_request_inherit_view_form" model="ir.ui.view">
			<field name="name">equipment.request.form</field>
			<field name="model">maintenance.request</field>
			<field name="inherit_id" ref="to_maintenance_request_simple_mediate.hr_equipment_request_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('oe_button_box')]" position="inside">
					<button name="action_view_maintenance_schedule_list"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            string="Maintenance Detail" />
				</xpath>
			</field>
		</record>

		<record id="hr_equipment_request_view_form" model="ir.ui.view">
			<field name="name">equipment.request.form</field>
			<field name="model">maintenance.request</field>
			<field name="inherit_id" ref="maintenance.hr_equipment_request_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='priority']" position="after">
					<field name="days_to_notify" />
					<field name="date_to_notify" invisible="1" />
				</xpath>
				<xpath expr="//field[@name='maintenance_type']" position="after">
					<field name="maintenance_milestone_id" />
				</xpath>
			</field>
		</record>

		<record id="hr_equipment_request_view_pivot" model="ir.ui.view">
			<field name="name">equipment.request.pivot</field>
			<field name="model">maintenance.request</field>
			<field name="inherit_id" ref="maintenance.hr_equipment_request_view_pivot" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='stage_id']" position="after">
					<field name="equipment_id" type="row" />
					<field name="request_date" type="col" />
					<field name="close_date" type="col" />
					<field name="user_id" type="row" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
