<odoo>
	<record id="view_partner_form" model="ir.ui.view">
		<field name="name">res.partner.form.inherit.wallet</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="arch" type="xml">
			<notebook position="inside">
				<page name="wallets" string="Wallets"
					groups="to_wallet.group_wallet_manager">
					<field name="wallet_ids"
						attrs="{'invisible': [('is_company', '=', False), ('parent_id', '!=', False)]}">
						<tree>
							<field name="currency_id" />
							<field name="amount" />
						</tree>
					</field>
					<div name="wallet_disabled"
						attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
						<p>
							eWallet-related things are managed on
							<button name="open_commercial_entity" type="object"
								string="the parent company" class="oe_link" />
						</p>
					</div>
				</page>
			</notebook>
		</field>
	</record>
</odoo>
