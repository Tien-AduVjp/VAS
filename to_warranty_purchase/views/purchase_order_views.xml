<odoo>
	<record id="purchase_order_form" model="ir.ui.view">
		<field name="name">purchase.order.form</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
		<field name="model">purchase.order</field>
		<field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="action_warranty_claim" icon="fa-shield" class="oe_stat_button" attrs="{'invisible':['|', ('warranty_claim_count', '=', 0), ('state','not in',('purchase', 'done'))]}">
                    <field name="warranty_claim_count" widget="statinfo" string="Warranty Claims"/>
                </button>
            </xpath>
		</field>
	</record>
</odoo>
