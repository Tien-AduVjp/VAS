<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="product_template_form_view" model="ir.ui.view">
			<field name="name">product.template.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id"
				ref="account.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='property_account_expense_id']"
					position="before">
					<field name="cost_deferral_category_id"
						domain="[('type', '=', 'cost')]"
						context="{'default_type': 'cost'}" />
					<field name="revenue_deferral_category_id"
						domain="[('type', '=', 'revenue')]"
						context="{'default_type': 'revenue'}" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>