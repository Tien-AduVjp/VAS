<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="group_loyalty_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="module_category_loyalty" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
		</record>

		<record id="group_loyalty_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="module_category_loyalty" />
			<field name="implied_ids"
				eval="[(4, ref('to_loyalty.group_loyalty_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
		</record>

		<record id="sales_team.group_sale_salesman" model="res.groups">
			<field name="implied_ids"
				eval="[(4, ref('to_loyalty.group_loyalty_user'))]" />
		</record>

		<record id="sales_team.group_sale_manager" model="res.groups">
			<field name="implied_ids"
				eval="[(4, ref('to_loyalty.group_loyalty_manager'))]" />
		</record>
	</data>

	<data>
		<record id="loyalty_point_personal_rule" model="ir.rule">
			<field name="name">Personal Loyalty Points</field>
			<field ref="model_loyalty_point" name="model_id" />
			<field name="domain_force">['|',('salesperson_id','=',user.id),('salesperson_id','=',False)]
			</field>
			<field name="groups"
				eval="[(4, ref('sales_team.group_sale_salesman'))]" />
		</record>
		<record id="loyalty_point_see_all" model="ir.rule">
			<field name="name">All Loyalty Ppoints</field>
			<field ref="model_loyalty_point" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups"
				eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]" />
		</record>
		<record id="loyalty_point_report_personal_rule" model="ir.rule">
			<field name="name">Personal Loyalty Points</field>
			<field ref="model_loyalty_points_report" name="model_id" />
			<field name="domain_force">['|',('salesperson_id','=',user.id),('salesperson_id','=',False)]
			</field>
			<field name="groups"
				eval="[(4, ref('sales_team.group_sale_salesman'))]" />
		</record>
		<record id="loyalty_point_report_see_all" model="ir.rule">
			<field name="name">All Loyalty Ppoints</field>
			<field ref="model_loyalty_points_report" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups"
				eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]" />
		</record>
	</data>
</odoo>
