<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_loyalty_reward_form" model="ir.ui.view">
		<field name="name">loyalty.reward.form</field>
		<field name="model">loyalty.reward</field>
		<field name="arch" type="xml">
			<form string="Loyalty Reward">
				<div class="oe_title">
					<label class="oe_edit_only" for="name" string="Reward Name" />
					<h1>
						<field name="name" />
					</h1>
				</div>
				<group>
					<field name="reward_type" />
				</group>
				<group>
					<field name="gift_product_id"
						attrs="{ 'invisible':[('reward_type','!=','gift')], 'required':[('reward_type','=','gift')] }" />
					<label for="discount"
						attrs="{ 'invisible':[('reward_type','!=','discount')] }" />
					<div class="o_row"
						attrs="{ 'invisible':[('reward_type','!=','discount')] }">
						<field name="discount" />
						<span>%</span>
					</div>
					<field name="discount_product_id"
						attrs="{ 'invisible':[('reward_type','!=','discount')], 'required':[('reward_type','=','discount')] }" />
				</group>
				<group>
					<field name="point_cost" />
					<field name="minimum_points" />
				</group>
			</form>
		</field>
	</record>
</odoo>
