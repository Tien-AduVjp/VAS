<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.sale</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="10" />
		<field name="inherit_id"
			ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Loyalty"
					string="Loyalty" data-key="to_loyalty"
					groups="to_loyalty.group_loyalty_manager">

					<h2>Loyalty Programs for Point of Sales</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="module_to_loyalty_pos" />
							</div>
							<div class="o_setting_right_pane">
								<label for="module_to_loyalty_pos" />
								<div class="text-muted">
									Sell with Point of Sale app and reward your
									customers
								</div>
							</div>
						</div>
					</div>
					<h2>Loyalty Programs for Sales Management</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="module_to_loyalty_sales" />
							</div>
							<div class="o_setting_right_pane">
								<label for="module_to_loyalty_sales" />
								<div class="text-muted">
									Sell with Sales Management app and reward your
									customers
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

	<record id="action_loyalty_config_settings"
		model="ir.actions.act_window">
		<field name="name">Settings</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_id" ref="res_config_settings_view_form" />
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'to_loyalty'}</field>
	</record>

	<menuitem id="menu_loyalty_general_settings" name="Settings"
		parent="menu_loyalty_config" sequence="0"
		action="action_loyalty_config_settings" groups="base.group_system" />

</odoo>
