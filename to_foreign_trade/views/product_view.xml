<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Inherit Product Template -->
		<record id="account_product_template_inherit_form" model="ir.ui.view">
			<field name="name">account.product.template.inherit.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="account.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='properties']" position="after">
					<group name="foreign_trade_properties">
						<group>
							<field name="export_tax_ids" widget="many2many_tags" />
						</group>
						<group>
							<field name="import_tax_ids" widget="many2many_tags" />
						</group>
					</group>
				</xpath>
			</field>
		</record>
	</data>
</odoo>