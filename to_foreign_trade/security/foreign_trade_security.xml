<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="base.module_category_operations_foreign_trade" model="ir.module.category">
		<field name="description">Helps you manage your foreign trade.</field>
		<field name="sequence">10</field>
	</record>
	<data noupdate="0">
		<record id="group_foreign_trade_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="base.module_category_operations_foreign_trade" />
			<field name="implied_ids"
				eval="[(4, ref('stock.group_stock_user')), (4, ref('account.group_account_invoice'))]" />
			<field name="comment">The users in this group will have access to custom
				declarations and handle it. They also have access rights of
				Inventory Users and Billing Users so that they can read all stock
				transfers and sales orders and purchases orders to serve their
				custom declaration tasks. However, they don't have access to the
				settings of this application.
			</field>
		</record>

		<record id="group_foreign_trade_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="base.module_category_operations_foreign_trade" />
			<field name="implied_ids"
				eval="[(4, ref('to_foreign_trade.group_foreign_trade_user'))]" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
			<field name="comment">The users in this group will have full access
				rights to this application.
			</field>
		</record>
		
		<!-- Multi Company Rules -->
		<record id="custom_declaration_import_global_multicompany" model="ir.rule">
            <field name="name">Multicompany rule on import custom declaration</field>
            <field name="model_id" ref="model_custom_declaration_import"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>
		<record id="custom_declaration_export_global_multicompany" model="ir.rule">
            <field name="name">Multicompany rule on export custom declaration</field>
            <field name="model_id" ref="model_custom_declaration_export"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>
        
	</data>
</odoo>
