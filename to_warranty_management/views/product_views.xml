<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_product_warranty_inherit" model="ir.ui.view">
		<field name="name">product.template.warranty.form.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_form_view" />
		<field name="arch" type="xml">
			<page name="sales" position="after">
				<page string="Warranty" name="warranty"
					groups="to_warranty_management.group_warranty_user">
					<group string="Warranty">
						<label for="warranty_period" />
						<div>
							<field name="warranty_period" class="oe_inline"
								style="vertical-align:baseline" />
							months
						</div>
						<field name="warranty_policy_ids">
							<tree string="Warranty Policy" editable="bottom">
								<field name="product_milestone_id" />
								<field name="apply_to" />
							</tree>
						</field>
					</group>
					<group>
					</group>
				</page>
			</page>
		</field>
	</record>
</odoo>





