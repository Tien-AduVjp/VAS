<odoo>
	<data>
		<record id="warranty_policy_tree_view" model="ir.ui.view">
			<field name="name">warranty_policy.tree</field>
			<field name="model">warranty.policy</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Warranty Policy">
					<field name="product_milestone_id" />
					<field name="apply_to" />
				</tree>
			</field>
		</record>
		<record id="warranty_policy_form_view" model="ir.ui.view">
			<field name="name">warranty.policy.form</field>
			<field name="model">warranty.policy</field>
			<field name="arch" type="xml">
				<form string="Warranty Policy">
					<sheet>
						<group>
							<group>
								<field name="product_milestone_id" />
								<field name="apply_to" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>

