<odoo>
	<data>
		<record id="module_category_warranty_management" model="ir.module.category">
			<field name="name">Warranty Management</field>
			<field name="description">Helps you manage your product warranty policy and warranty claim.</field>
			<field name="sequence">20</field>
		</record>

		<record id="group_warranty_user" model="res.groups">
			<field name="name">Warranty User</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
			<field name="comment">Users of this group will be granted with all access rights to Warranty Claims</field>
		</record>

		<record id="group_warranty_manager" model="res.groups">
			<field name="name">Warranty Manager</field>
			<field name="category_id" ref="module_category_warranty_management" />
			<field name="implied_ids" eval="[(4,ref('to_product_milestone.group_product_milestone_manager')), (4, ref('to_warranty_management.group_warranty_user'))]" />
			<field name="comment">Users of this group have total control on this application</field>
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
		</record>
	</data>
</odoo>
