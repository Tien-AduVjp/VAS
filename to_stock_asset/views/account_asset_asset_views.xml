<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="account_asset_asset_view_form_inherited">
		<field name="name">account.asset.asset.form.inherited</field>
		<field name="model">account.asset.asset</field>
		<field name="inherit_id" ref="to_account_asset.view_account_asset_asset_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='open_entries']" position="before">
				<button string="Product Moves" type="object" name="action_view_stock_move_lines" class="oe_stat_button" icon="fa-arrows-v" groups="stock.group_stock_user"/>
			</xpath>
			<xpath expr="//button[@name='action_compute_depreciation_board']" position="after">
				<button name="%(asset_stock_in_action)d" states="open,close"
						string="Stock In" type="action" class="oe_highlight" context="{'default_asset_id': id}"/>
			</xpath>
			<xpath expr="//field[@name='category_id']" position="before">
				<field name="production_lot_id" groups='stock.group_stock_user' options="{'no_create': True}"/>
			</xpath>
			<xpath expr="//group[@name='accounting']" position="inside">
				<field name="stock_input_account_id" />
			</xpath>
		</field>
	</record>
</odoo>
