<odoo>
	<data>
	    <record id="stock_viin_view_map" model="ir.ui.view">
        <field name="name">stock.picking.viin_map</field>
        <field name="model">stock.picking</field>
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <viin_map res_partner="partner_id">
                <marker-popup>
                    <field name="name" string="Reference "/>
                    <field name="scheduled_date" string="Scheduled Date "/>
                </marker-popup>
            </viin_map>
        </field>
    </record>

    <record id="stock.action_picking_tree_all" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,viin_map</field>
    </record>

    <record id="stock.action_picking_tree_waiting" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,viin_map</field>
    </record>

    <record id="stock.action_picking_tree_ready" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,viin_map</field>
    </record>

    <record id="stock.action_picking_tree_late" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,viin_map</field>
    </record>

    <record id="stock.stock_picking_action_picking_type" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,viin_map</field>
    </record>
		<record id="view_picking_internal_search" model="ir.ui.view">
			<field name="name">stock.picking.internal.search</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_internal_search" />
			<field name="arch" type="xml">
				<xpath expr="//filter[@name='done']" position="after">
					<separator />
					<filter string="Last 30 Days" name="ftr_last_thirty_days"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;=', ((context_today()-datetime.timedelta(days=30)).strftime('%Y-%m-%d'))), ('scheduled_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;=', ((context_today()-datetime.timedelta(days=30)).strftime('%Y-%m-%d'))), ('date_done','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]" />
					<filter string="Today" name="ftr_today"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('scheduled_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date_done','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]" />
					<filter string="Tomorrow" name="ftr_tomorrow"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;', datetime.datetime.combine(context_today(), datetime.time(23,59,59))), ('scheduled_date','&lt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d'))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;', datetime.datetime.combine(context_today(), datetime.time(23,59,59))), ('date_done','&lt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d')))]" />
					<filter string="The Day after Tomorrow" name="ftr_the_day_after_tomorrow"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d'))), ('scheduled_date','&lt;=', ((context_today()+datetime.timedelta(days=2)).strftime('%Y-%m-%d'))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d'))), ('date_done','&lt;=', ((context_today()+datetime.timedelta(days=2)).strftime('%Y-%m-%d')))]" />
					<filter string="In Next 7 Days" name="ftr_next_seven_days"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('scheduled_date','&lt;=', ((context_today()+datetime.timedelta(days=7)).strftime('%Y-%m-%d'))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date_done','&lt;=', ((context_today()+datetime.timedelta(days=7)).strftime('%Y-%m-%d')))]" />
					<filter string="In Next 30 Days" name="ftr_next_thirty_days"
						domain="['|',
									'&amp;', '&amp;', ('date_done','=',False), ('scheduled_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('scheduled_date','&lt;=', ((context_today()+datetime.timedelta(days=30)).strftime('%Y-%m-%d'))),
									'&amp;', '&amp;', ('date_done','!=',False), ('date_done','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date_done','&lt;=', ((context_today()+datetime.timedelta(days=30)).strftime('%Y-%m-%d')))]" />
					<separator />
					<filter string="Delivery Orders" name="ftr_delivery_orders"
						domain="[('location_id.usage','=','internal'),('location_dest_id.usage','=','customer')]"
						help="Show Delivery Orders (which have the source location in type of Internal and the destination location in type of Customer)" />

					<filter string="Receipts" name="ftr_receipt"
						domain="[('location_id.usage','=','supplier'),('location_dest_id.usage','=','internal')]"
						help="Show Stock Receipts (which have the source location in type of Supplier and the destination location in type of Internal" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
