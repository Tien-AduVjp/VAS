<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_skill_view_form" model="ir.ui.view">
        <field name="name">hr.employees.skill.form</field>
        <field name="model">hr.employee.skill</field>
        <field name="inherit_id" ref="hr_skills.employee_skill_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='skill_id']" position="after">
              <field name="skill_description_id" invisible="1"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <label for="skill_description"
                       attrs="{'invisible': ['|', ('skill_type_id', '=', False),
                                                  '|', ('skill_id', '=', False), ('skill_level_id', '=', False)]}"/>
                <field name="skill_description"
                       attrs="{'invisible': ['|', ('skill_type_id', '=', False),
                                                  '|', ('skill_id', '=', False), ('skill_level_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
