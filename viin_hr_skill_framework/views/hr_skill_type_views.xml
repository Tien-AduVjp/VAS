<odoo>
	<data>
		<record model="ir.ui.view"
			id="hr_employee_skill_type_view_form">
			<field name="name">hr.skill.type.form</field>
			<field name="model">hr.skill.type</field>
			<field name="inherit_id"
				ref="hr_skills.hr_employee_skill_type_view_form" />
			<field name="arch" type="xml">
			     <xpath expr="//div[./h1/field[@name='name']]"
					position="before">
					<div name="button_box" class="oe_button_box">
                        <button name="action_view_archive_skills"
                            class="oe_stat_button" icon="fa-archive" type="object">
                            <field name="archived_skill_count" widget="statinfo"
                                string="Archived Skills" />
                        </button>
						<button name="action_view_description_entries"
							class="oe_stat_button" icon="fa-book" type="object">
							<field name="hr_skill_descriptions_count" widget="statinfo"
								string="Description Entries" />
						</button>
					</div>
				</xpath>
				<xpath
					expr="//field[@name='skill_ids']/tree/field[@name='name']"
					position="after">
					<field name="code" />
					<field name="description" />
					<field name="active" widget="boolean_toggle"/>
				</xpath>
				<xpath expr="//sheet" position="after">
					<div class="oe_chatter">
						<field name="message_follower_ids" groups="base.group_user" />
						<field name="activity_ids" />
						<field name="message_ids" />
					</div>
				</xpath>
				<xpath expr="//div[hasclass('oe_title')]" position="before">
	               <field name="active" invisible="1"/>
	               <widget name="web_ribbon" title="Archived"
	                    bg_color="bg-danger"
	                    attrs="{'invisible': [('active', '=', True)]}"/>
				</xpath>
			</field>
		</record>

        <record model="ir.ui.view" id="hr_skill_type_view_tree">
            <field name="name">hr.skill.type.form</field>
            <field name="model">hr.skill.type</field>
            <field name="inherit_id"
                ref="hr_skills.hr_skill_type_view_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='skill_ids']"
                    position="after">
                    <field name="activity_ids"
                        widget="list_activity" optional="show" />
                </xpath>
            </field>
        </record>

        <record id="hr_skill_type_view_search" model="ir.ui.view">
            <field name="name">hr.skill.type.search</field>
            <field name="model">hr.skill.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

		<menuitem name="Skill Types" id="menu_skill_types"
			parent="menu_skills" action="hr_skills.hr_skill_type_action"
			sequence="0" />
	</data>
</odoo>
