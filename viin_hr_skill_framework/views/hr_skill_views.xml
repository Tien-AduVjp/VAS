<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_skill_view_form" model="ir.ui.view">
		<field name="name">hr.skill.form</field>
		<field name="model">hr.skill</field>
		<field name="inherit_id" ref="hr_skills.hr_skill_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet" position="inside">
				<group string="Levels">
					<field name="skill_level_ids" nolabel="1" />
				</group>
			</xpath>
		</field>
	</record>

    <record id="hr_skill_view_form" model="ir.ui.view">
        <field name="name">hr.skill.form</field>
        <field name="model">hr.skill</field>
        <field name="inherit_id" ref="hr_skills.hr_skill_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Levels">
                    <field name="skill_level_ids" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="employee_skill_view_tree" model="ir.ui.view">
        <field name="name">hr.skill.tree</field>
        <field name="model">hr.skill</field>
        <field name="inherit_id" ref="hr_skills.employee_skill_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="after">
	            <field name="code" />
	            <field name="description" />
	            <field name="active" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <record id="action_hr_skills" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="res_model">hr.skill</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
