<odoo>
	<data>

		<record model="ir.ui.view" id="view_hr_skill_description_form">
			<field name="name">hr.skill.description.form</field>
			<field name="model">hr.skill.description</field>
			<field name="inherit_id"
				ref="viin_hr_skill_framework.view_hr_skill_description_abstract_form" />
			<field name="mode">primary</field>
			<field name="arch" type="xml">
				<xpath expr="//form" position="attributes">
					<attribute name="create">0</attribute>
				</xpath>
				<xpath expr="//field[@name='skill_type_id']" position="before">
					<field name="name" />
				</xpath>
				<xpath expr="//sheet" position="after">
					<div class="oe_chatter">
						<field name="message_follower_ids" groups="base.group_user" />
						<field name="activity_ids" />
						<field name="message_ids" />
					</div>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_hr_skill_description_list" >
			<field name="name">hr.skill.description.list</field>
			<field name="model">hr.skill.description</field>
			<field name="inherit_id"
				ref="viin_hr_skill_framework.view_hr_skill_description_abstract_list" />
			<field name="mode">primary</field>
			<field name="arch" type="xml">
				<xpath expr="//tree" position="attributes">
					<attribute name="create">0</attribute>
				</xpath>
				<xpath expr="//field[@name='skill_type_id']" position="before">
					<field name="name" />
				</xpath>
				<xpath expr="//field[@name='skill_level_id']" position="attributes">
					<attribute name="invisible">0</attribute>
				</xpath>
			</field>
		</record>

		<record id="hr_skill_description_search" model="ir.ui.view">
			<field name="name">hr.skill.description.search</field>
			<field name="model">hr.skill.description</field>
			<field name="arch" type="xml">
                <search>
                    <field name="skill_id"/>
                    <searchpanel>
                        <field name="skill_type_id" icon="fa fa-books"/>
                    </searchpanel>
                </search>
			</field>
		</record>

		<!-- actions opening views on models -->
		<record model="ir.actions.act_window"
			id="action_skill_description">
			<field name="name">Skill Description</field>
			<field name="res_model">hr.skill.description</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem name="Skill Description" id="menu_skill_desc"
			parent="menu_skills" action="action_skill_description" sequence="10" />
	</data>
</odoo>
