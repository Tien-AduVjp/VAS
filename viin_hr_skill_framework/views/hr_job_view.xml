<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_hr_job_form">
			<field name="name">hr.job.inherit.form</field>
			<field name="model">hr.job</field>
			<field name="inherit_id" ref="viin_hr_rank.view_hr_job_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//page[@name='ranks']/field[@name='rank_line_ids']/tree/field[@name='rank_id']"
					position="after">
					<field name="skill_description_ids" widget="many2many_tags" />
					<field name="preferred_skill_description_ids"
						widget="many2many_tags" />
				</xpath>
				<xpath
					expr="//page[@name='ranks']/field[@name='rank_line_ids']/form/group[./group/field[@name='rank_id']]"
					position="after">
					<field name="skill_description_ids" />
					<field name="preferred_skill_description_ids" />
				</xpath>
				<xpath expr="//page[@name='ranks']" position="after">
					<page name="skills" string="Skills">
						<label for="skill_description_ids" />
						<field name="skill_description_ids" />
						<label for="preferred_skill_description_ids" />
						<field name="preferred_skill_description_ids" />
					</page>
				</xpath>
			</field>
		</record>

		<menuitem name="Job Positions" id="menu_hr_job"
			parent="menu_configuration" action="hr.action_hr_job" sequence="20" />

	</data>
</odoo>
