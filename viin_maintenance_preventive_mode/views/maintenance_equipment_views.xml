<odoo>
    <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='maintenance']/field[@name='next_action_date']" position="before">
                <field name="preventive_maintenance_mode" />
            </xpath>
            <xpath expr="//div[hasclass('o_row')]/field[@name='period']" position="attributes">
                <attribute name="attrs">{'readonly': [('preventive_maintenance_mode', '!=', 'default')]}</attribute>
                <attribute name="force_save">'1'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
