<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
    	<record model="ir.module.category" id="module_category_zoom_zoom">
            <field name="name">Zoom</field>
            <field name="sequence">10</field>
        </record>
        <record model="ir.module.category" id="module_category_zoom_user">
            <field name="name">Zoom</field>
            <field name="parent_id" ref="module_category_zoom_zoom"/>
        </record>
	    <record id="group_user" model="res.groups">
	        <field name="name">User</field>
	        <field name="category_id" ref="to_zoom_calendar.module_category_zoom_user"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	        <field name="comment">the user will have access to all records of zoom user in the zoom application.</field>
	    </record>
	    
	    <record id="group_admin" model="res.groups">
	        <field name="name">Administrator</field>
	        <field name="category_id" ref="to_zoom_calendar.module_category_zoom_user"/>
	        <field name="implied_ids" eval="[(4, ref('to_zoom_calendar.group_user'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
	        <field name="comment">the user will have an access to the zoom configuration as well as statistic reports.</field>
	    </record>
	    
	    <record id="zoom_user_comp_rule" model="ir.rule">
        	<field name="name">Zoom User</field>
        	<field name="model_id" ref="model_zoom_user"/>
        	<field name="global" eval="True"/>
        	<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    	</record>
	</data>
</odoo>
