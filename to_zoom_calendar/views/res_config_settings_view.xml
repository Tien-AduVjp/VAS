<odoo>
<record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.zoom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Zoom"
                     string="Zoom"
                     data-key="to_zoom_calendar"
                     groups="to_zoom_calendar.group_admin"
                     id="zoom_setting">
                    <h2 id="zoom">Zoom Integration</h2>
                    <div class="row mt16 o_settings_container"
                         title="Zoom Integration.">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_to_zoom_calendar"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_to_zoom_calendar"/>
                                <div class="text-muted">
                                    Zoom Integration.
                                </div>
                                <div
									attrs="{'invisible': [('module_to_zoom_calendar', '=', False)]}">
									<div class="content-group mt16">
										<label for="zoom_api_key" class="o_light_label" />
										<field name="zoom_api_key" />
									</div>
									<div class="content-group mt16">
										<label for="zoom_secret_key" class="o_light_label" />
										<field name="zoom_secret_key" />
									</div>
									<div>
										<a
											href="https://marketplace.zoom.us/docs/guides/getting-started/app-types/create-jwt-app"
											class="oe_link" target="_blank">
											<i class="fa fa-arrow-right" />
											Generate your API Key &amp; Secret.
										</a>
									</div>
								</div>
                            </div>
                        </div>
                        </div>
                        </div>
                        </xpath>
                        </field>
                        </record>

	<record id="action_zoom_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'to_zoom_calendar'}</field>
    </record>

	<menuitem id="menu_zoom_configuration"
        name="Configuration"
        parent="zoom_menu_root"
        sequence="70"
        groups="base.group_system"/>

    <menuitem id="menu_zoom_settings"
        name="Settings"
        parent="menu_zoom_configuration"
        sequence="70"
        action="action_zoom_config_settings"
        groups="base.group_system"/>
</odoo>
