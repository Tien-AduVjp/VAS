<odoo>
	<data>

		<!-- Top menu item -->
		<menuitem name="Zoom" id="zoom_menu_root" sequence="40" web_icon="to_zoom_calendar,static/description/icon.png" />

        <record id="action_zoom_meeting" model="ir.actions.act_window">
            <field name="name">Zoom Meetings</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="view_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="search_view_id" ref="view_calendar_event_search"/>
            <field name="context">{'search_default_ftr_zoom_meetings': 1}</field>
        </record>
        <menuitem id="zoom_meeting_menu"
                  parent="zoom_menu_root"
                  sequence="5"
                  action="action_zoom_meeting"/>

		<record model="ir.actions.act_window" id="action_list_user">
			<field name="name">Zoom Users</field>
			<field name="res_model">zoom.user</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem id="zoom_user_menu" parent="zoom_menu_root" name="Users"
			sequence="10" action="action_list_user" groups="to_zoom_calendar.group_user"/>

		<record model="ir.actions.act_window" id="act_open_user_report_view">
            <field name="name">Generate Zoom Users Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zoom.user.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
		<menuitem id="zoom_user_report_menu" parent="zoom_menu_root" name="Reports"
			sequence="40" groups="to_zoom_calendar.group_admin" action="act_open_user_report_view"/>
	</data>
</odoo>
