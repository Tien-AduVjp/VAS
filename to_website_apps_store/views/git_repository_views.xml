<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="git_repository_view_form" model="ir.ui.view">
			<field name="name">git.repository.form</field>
			<field name="model">git.repository</field>
			<field name="inherit_id"
				ref="to_odoo_module.git_repository_view_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//field[@name='branch_ids']/tree/field[@name='auto_module_discovery']"
					position="after">
					<field name="apps_website_published" widget="boolean_toggle" optional="hide" />
                    <field name="visible_on_apps_store" widget="boolean_toggle" optional="hide" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>