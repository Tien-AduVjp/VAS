<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_event_form" model="ir.ui.view">
			<field name="name">event.event.view.form.inherit.slide</field>
			<field name="model">event.event</field>
			<field name="inherit_id" ref="event.view_event_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='auto_confirm']" position="after">
					<field name="slide_channel_id" />
				</xpath>
				<xpath expr="//page[@name='event_communication']" position="before">
					<page name="slide" string="Course Contents" attrs="{'invisible': [('slide_channel_id', '=', False)]}">
						<field name="slide_ids"/>
					</page>
				</xpath>
			</field>
		</record>

		<record id="view_event_tree" model="ir.ui.view">
			<field name="name">event.event.view.tree.inherit.slide</field>
			<field name="model">event.event</field>
			<field name="inherit_id" ref="event.view_event_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='user_id']" position="after">
					<field name="slide_channel_id" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
