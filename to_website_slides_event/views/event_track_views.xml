<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_event_track_form" model="ir.ui.view">
			<field name="name">event.track.view.form.inherit.slide</field>
			<field name="model">event.track</field>
			<field name="inherit_id" ref="website_event_track.view_event_track_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='event_id']" position="after">
					<field name="slide_channel_id" invisible="1"/>
					<field name="slide_id" context="{'default_channel_id': slide_channel_id}" domain="[('channel_id', '=', slide_channel_id), ('is_category','=',False)]" />
				</xpath>
			</field>
		</record>

		<record id="view_event_track_tree" model="ir.ui.view">
			<field name="name">event.track.view.tree.inherit.slide</field>
			<field name="model">event.track</field>
			<field name="inherit_id" ref="website_event_track.view_event_track_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='event_id']" position="after">
					<field name="slide_id" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
