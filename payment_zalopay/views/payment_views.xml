<odoo>
	<data noupdate="0">
		<record id="acquirer_form" model="ir.ui.view">
			<field name="name">acquirer.form.zalopay</field>
			<field name="model">payment.acquirer</field>
			<field name="inherit_id" ref="payment.acquirer_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='acquirer']" position="inside">
					<group attrs="{'invisible': [('provider', '!=', 'zalopay')]}">
                        <field name="zalopay_appid" attrs="{'required':[ ('provider', '=', 'zalopay'), ('state', '=', 'enabled')]}"/>
                        <field name="zalopay_key1" password="True" attrs="{'required':[ ('provider', '=', 'zalopay'), ('state', '=', 'enabled')]}"/>
                        <field name="zalopay_key2" password="True" attrs="{'required':[ ('provider', '=', 'zalopay'), ('state', '=', 'enabled')]}"/>
                        <a colspan="2" href="https://docs.zalopay.vn/start/" target="_blank">How to configure your ZaloPay account?</a>
                    </group>
				</xpath>
			</field>
		</record>
	</data>

</odoo>
