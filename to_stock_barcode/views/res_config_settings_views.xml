<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.stock.barcode.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='use_product_barcode']" position="replace">
                <field name="module_to_stock_barcode" invisible="1"/>
                <div class="mt16" attrs="{'invisible': [('module_to_stock_barcode', '=', False)]}">
                    <button class="btn-link" type="action" string="Configure Product Barcodes"
                            name="%(to_stock_barcode.product_product_barcodes_action)d" icon="fa-arrow-right"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
