<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_barcode_main_action" model="ir.actions.client">
        <field name="name">Barcode</field>
        <field name="tag">to_barcode_main_action</field>
    </record>

    <menuitem id="stock_barcode_menu"
              action="stock_barcode_main_action"
              web_icon="to_stock_barcode,static/description/icon.png"
              sequence="50"
              groups="stock.group_stock_user"/>

    <record id="stock_inventory_new_action" model="ir.actions.act_window">
        <field name="name">New Inventory</field>
        <field name="res_model">stock.inventory</field>
        <field name="view_mode">form</field>
        <field name="context">{
            'default_filter': 'partial',
            'form_view_initial_mode': 'edit',
            }
        </field>
    </record>

    <record id="stock_picking_form_action" model="ir.actions.act_window">
        <field name="name">Picking</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">form</field>
        <field name="context">{
            'form_view_initial_mode': 'edit',
            'force_detailed_view': True,
            }
        </field>
    </record>

    <record id="stock_picking_kanban_action" model="ir.actions.act_window">
        <field name="name">Operations</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'form_view_initial_mode': 'edit',
            'search_default_picking_type_id': [active_id],
            'default_picking_type_id': active_id,
            'contact_display': 'partner_address',
            'search_default_available': 1,
            'force_detailed_view': True,
            }
        </field>
    </record>

    <record id="stock_picking_type_kanban" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban</field>
        <field name="model">stock.picking.type</field>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0">
                <field name="display_name"/>
                <field name="color"/>
                <field name="count_picking_ready"/>
                <field name="code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-if="['incoming', 'outgoing', 'internal'].indexOf(record.code.raw_value) > -1"
                             t-attf-class="oe_kanban_card #{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div>
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong>
                                                <t t-esc="record.display_name.value"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt4">
                                <button class="btn btn-primary" name="get_action_ready_picking_tree" type="object">
                                    <span>
                                        <t t-esc="record.count_picking_ready.value"/>
                                        To Process
                                    </span>
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="stock_picking_type_kanban_action" model="ir.actions.act_window">
        <field name="name">Operations</field>
        <field name="res_model">stock.picking.type</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="stock_picking_type_kanban"/>
        <field name="context">{
            'form_view_initial_mode': 'edit',
            'force_detailed_view': True,
            }
        </field>
    </record>

    <record id="product_product_barcodes_list" model="ir.ui.view">
        <field name="name">product.product.barcodes.list</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Product Barcodes" editable="bottom" create="false" delete="false">
                <field name="name" readonly="1"/>
                <field name="code" readonly="1"/>
                <field name="barcode"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="product_product_barcodes_action" model="ir.actions.act_window">
        <field name="name">Product Barcodes</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product_product_barcodes_list"/>
    </record>

</odoo>
