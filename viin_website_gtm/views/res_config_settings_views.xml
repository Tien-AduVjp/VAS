<odoo>
    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_maps_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="google-tag-manager-setting">
                    <div class="o_setting_left_pane">
                        <field name="gtm_enable" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="gtm_enable" string="Google Tag Manager" />
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific."
                              groups="website.group_multi_website" />
                        <div class="text-muted">Use Google Tag Manager on your website</div>
                        <div class="content-group" attrs="{'invisible': [('gtm_enable', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-lg-4 o_light_label" for="gtm_container_id" string="Container ID" />
                                <field name="gtm_container_id"
                                       attrs="{'required': [('gtm_enable', '=', True)]}"
                                       placeholder="GTM-XXXX" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
