<odoo>
	<record id="wizard_repair_order_consumption_view_form"
		model="ir.ui.view">
		<field name="name">wizard.repair.order.consumption.form</field>
		<field name="model">wizard.repair.order.consumption</field>
		<field name="arch" type="xml">
			<form>
				<field name="order_id" invisible="1" />
				<field name="show_warning_update_quantity" invisible="1" />
				<label for="name"/>
                <h1>
                    <field name="name"/>
                </h1>
                <div class="alert alert-warning" role="alert" style="margin-bottom:0px;"
                    attrs="{'invisible': [('show_warning_update_quantity', '=', False)]}">
                    You consume more than original quantity. You can choose update quantity based on consumed quantity.
                </div>
				<div>
					<separator string="Input request quantity for your consumption need" />
					<field name="line_ids">
						<tree editable="bottom" create="0" delete="0">
							<field name="repair_line_id" invisible="1" force_save="1"></field>
							<field name="product_id" force_save="1"/>
							<field name="name" force_save="1"/>
							<field name="lot_id" groups="stock.group_production_lot" force_save="1"/>
							<field name="product_uom_qty" force_save="1"/>
							<field name="consumed_qty" force_save="1"/>
							<field name="request_qty" />
							<field name="can_update" invisible="1"/>
							<field name="should_update_quantity" attrs="{'readonly': [('can_update', '=', False)]}" force_save="1"/>
						</tree>
					</field>
				</div>
				<footer>
					<button string="Consume" name="action_consume"
						type="object" class="oe_highlight" />
					<button string="Cancel" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_consume_repair_order"
		model="ir.actions.act_window">
		<field name="name">Consume Repair Order</field>
		<field name="res_model">wizard.repair.order.consumption</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>
