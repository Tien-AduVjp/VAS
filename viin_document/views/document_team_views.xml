<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="document_team_view_tree" model="ir.ui.view">
        <field name="name">document.team.view.tree</field>
        <field name="model">document.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="leader_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="document_team_view_form" model="ir.ui.view">
        <field name="name">document.team.view.form</field>
        <field name="model">document.team</field>
        <field name="arch" type="xml">
            <form>
            	<field name="active" invisible="1"/>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="leader_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="members" string="Members">
                            <field name="member_ids" widget="many2many" options="{'no_create': True}">
                                <kanban quick_create="false" create="true" delete="true">
                                    <field name="id" />
                                    <field name="name" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img
                                                        t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)"
                                                        class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0"
                                                        alt="Avatar" />
                                                    <div class="o_kanban_record_headings ml8">
                                                        <strong class="o_kanban_record_title">
                                                            <field name="name" />
                                                        </strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="document_team_kanban_view" model="ir.ui.view">
        <field name="name">document.team.kanban</field>
        <field name="model">document.team</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors">
                <field name="name" />
                <field name="description" />
                <field name="leader_id" />
                <field name="member_ids" />
                <field name="count_member"/>
                <field name="company_id" groups="base.group_multi_company" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span class="o_wrap_text">
                                                <t t-esc="record.name.value"/>
                                                <a type="button" class="fa fa-info-circle" data-toggle="tooltip" data-html="true" aria-label="Info" t-att-title="record.description.value"></a>
                                            </span>
                                            <span groups="base.group_multi_company">
                                                <strong><t t-esc="record.company_id.value"/></strong>
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_right">
                                                <div class="row">
                                                    <div class="col-9">
                                                        <a href="javascript:void(0)">Leader</a>
                                                    </div>
                                                    <div class="col-3 text-center">
                                                        <img
            												t-att-src="kanban_image('res.users', 'image_128', record.leader_id.raw_value)"
            												t-att-title="record.leader_id.value"
            												t-att-alt="record.leader_id.value"
            												class="oe_kanban_avatar" />
                                                    </div>
                                                    <div class="col-9">
                                                        <a href="javascript:void(0)">Member</a>
                                                    </div>
                                                    <div class="col-3 text-center">
                                                        <t t-esc="record.count_member.value" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="document_team_view_search" model="ir.ui.view">
        <field name="name">document.team.view.search</field>
        <field name="model">document.team</field>
        <field name="arch" type="xml">
            <search string="Document Teams">
                <field name="name" />
                <field name="leader_id"/>
                <separator />
                <filter name="ftr_archived" string="Archived" domain="[('active','=',False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Leader" name="grp_leader_id" domain="[]" context="{'group_by':'leader_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="document_team_overview_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">document.team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="viin_document.document_team_kanban_view"/>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="document_team_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">document.team</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="document_team_overview_menu" parent="document_master_data_menu_root" action="document_team_overview_action" sequence="20"/>
    <menuitem id="document_team_menu" parent="document_config_menu_root" action="document_team_action" sequence="40"/>

</odoo>
