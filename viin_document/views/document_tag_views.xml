<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="document_tag_view_tree" model="ir.ui.view">
        <field name="name">document.tag.view.tree</field>
        <field name="model">document.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="document_tag_view_form" model="ir.ui.view">
        <field name="name">document.tag.view.form</field>
        <field name="model">document.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="document_tag_view_search" model="ir.ui.view">
        <field name="name">document.tag.view.search</field>
        <field name="model">document.tag</field>
        <field name="arch" type="xml">
            <search string="Document Tags">
                <field name="name" />
                <filter name="ftr_archived" string="Archived" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="document_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">document.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Create new tag
            </p>
        </field>
    </record>

    <menuitem id="document_tag_menu" parent="document_master_data_menu_root" action="document_tag_action" sequence="40"
        groups="document_group_user"/>

</odoo>
