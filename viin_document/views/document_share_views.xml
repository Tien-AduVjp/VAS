<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="document_share_view_tree" model="ir.ui.view">
        <field name="name">document.share.view.tree</field>
        <field name="model">document.share</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="workspace_ids" widget="many2many_tags"/>
                <field name="document_count"/>
                <field name="expire_date"/>
                <field name="status" invisible="1"/>
                <field name="show_status" decoration-success="status==True" decoration-danger="status==False"/>
            </tree>
        </field>
    </record>

    <record id="document_document_share_view_form" model="ir.ui.view">
        <field name="name">document.share.view.form</field>
        <field name="model">document.share</field>
        <field name="arch" type="xml">
            <form string="Share Document" create="false">
            	<field name="active" invisible="1"/>
                <sheet>
                     <group>
                         <field name="url" widget="CopyClipboardChar" attrs="{'invisible': [('url', '=', False)]}"/>
                    </group>
                    <notebook>
                        <page name="share_documents" string="Share Documents">
                            <field name="document_ids" widget="many2many" readonly="1"
                                   context="{'form_view_ref': 'viin_document.document_document_view_form'}">
                                <kanban quick_create="false" create="true" delete="true">
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="owner_id"/>
                                    <field name="create_date"/>
                                    <field name="url"/>
                                    <field name="type"/>
                                    <field name="mimetype"/>
                                    <field name="attachment_id"/>
                                    <field name="action_ids"/>
                                    <field name="ytb_video_id"/>
                                    <templates>
                                        <!--
                                            Refer to Odoo CE (mrp)
                                            https://github.com/odoo/odoo/blob/14.0/addons/mrp/views/ir_attachment_view.xml#L16
                                        -->
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_area  oe_kanban_global_click o_kanban_attachment v_document_kanban"
                                                 t-att-data-document-id="record.id.value">
                                                <div class="o_kanban_image">
                                                    <t t-set="binaryPreviewable"
                                                       t-value="new RegExp('(image|video|application/pdf|text)').test(record.mimetype.value) &amp;&amp; record.type.raw_value === 'binary'"/>
                                                    <div t-attf-class="o_kanban_image_wrapper #{(webimage or binaryPreviewable or record.ytb_video_id.value) ? 'o_kanban_previewer' : ''}">
                                                        <t t-set="webimage"
                                                           t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                                                        <div t-if="record.type.raw_value == 'url'">
                                                            <div t-if="record.ytb_video_id.value"
                                                                 aria-label="youtube link">
                                                                <img t-attf-src="https://img.youtube.com/vi/#{record.ytb_video_id.value}/0.jpg"
                                                                     t-att-alt="record.name.value" width="100"
                                                                     height="100" class="o_attachment_image"/>
                                                            </div>
                                                            <div t-else=""
                                                                 class="o_url_image fa fa-link fa-3x text-muted"
                                                                 aria-label="Image is a link"/>
                                                        </div>
                                                        <img t-elif="webimage"
                                                             t-attf-src="/web/image/#{record.attachment_id.raw_value}"
                                                             width="100" height="100" t-att-alt="record.name.value"
                                                             class="o_attachment_image"/>
                                                        <div t-else="" class="o_image o_image_thumbnail"
                                                             t-att-data-mimetype="record.mimetype.value"/>
                                                    </div>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <div class="o_kanban_details_wrapper">
                                                        <div t-att-title="record.name.raw_value"
                                                             class="o_kanban_record_title">
                                                            <div class="label-limit-char"><field name="name"/></div>
                                                        </div>
                                                        <div class="o_kanban_record_body">
                                                            <t t-if="record.type.raw_value == 'url'">
                                                                <span class="o_document_url document_url_inline">
                                                                    <i class="fa fa-globe" aria-label="Document url"/>
                                                                    <field name="url" widget="url"/>
                                                                </span>
                                                            </t>
                                                            <samp t-else="" class="text-muted"></samp>
                                                        </div>
                                                        <div class="o_kanban_record_bottom">
                                                            <time class="oe_kanban_bottom_left">
                                                                <field name="create_date" widget="date"/>
                                                            </time>
                                                            <div class="oe_kanban_bottom_right">
                                                                <field name="activity_ids" widget="kanban_activity"/>
                                                                <field name="owner_id" widget="many2one_avatar_user"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="generate_url" class="oe_highlight" type="object" attrs="{'invisible': [('url', '!=', False)]}" effect="{'keep_dialog_open': True}">
                                 Generate URL
                        </button>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="document_document_share_view_filter" model="ir.ui.view">
        <field name="name">document.share.view.search</field>
        <field name="model">document.share</field>
        <field name="arch" type="xml">
            <search string="Share URL">
            	<field name="document_ids" />
                <filter name="ftr_archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="document_share_action" model="ir.actions.act_window">
        <field name="name">Shared Links</field>
        <field name="res_model">document.share</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Share documentations with everyone.
            </p><p>
                Organize your documentations and share for internal, personal or customer.
            </p>
        </field>
    </record>

    <menuitem id="document_share_menu" parent="document_config_menu_root" action="document_share_action" sequence="30"/>

</odoo>
