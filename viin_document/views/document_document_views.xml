<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="document_document_view_tree" model="ir.ui.view">
        <field name="name">document.document.view.tree</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" js_class="document_list">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="type"/>
                <field name="owner_id"/>
                <field name="res_model" groups="base.group_no_one" />
                <field name="res_id" groups="base.group_no_one" />
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="document_document_view_kanban" model="ir.ui.view">
        <field name="name">document.document.kanban</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" create="0" edit="0" js_class="document_kanban">
                <field name="id" />
                <field name="name" />
                <field name="tag_ids" />
                <field name="owner_id" />
                <field name="workspace_id"/>
                <field name="tag_ids"/>
                <field name="create_date" />
                <field name="url" />
                <field name="type" />
                <field name="mimetype"/>
                <field name="attachment_id"/>
                <field name="action_ids"/>
                <field name="ytb_video_id"/>
                <templates>
                    <!--
                        Refer to Odoo CE (mrp)
                        https://github.com/odoo/odoo/blob/14.0/addons/mrp/views/ir_attachment_view.xml#L16
                    -->
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_area o_kanban_attachment v_document_kanban" t-att-data-document-id="record.id.value">
                            <span class="v_document_kanban_record_checked" title="Selected Document"/>
                            <div class="o_kanban_image">
                                <t t-set="binaryPreviewable" t-value="new RegExp('(image|video|application/pdf|text)').test(record.mimetype.value) &amp;&amp; record.type.raw_value === 'binary'"/>
                                <div t-attf-class="o_kanban_image_wrapper #{(webimage or binaryPreviewable or record.ytb_video_id.value) ? 'o_kanban_previewer' : ''}">
                                    <t t-set="webimage" t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                                    <div t-if="record.type.raw_value == 'url'">
                                        <div t-if="record.ytb_video_id.value" aria-label="youtube link">
                                            <img t-attf-src="https://img.youtube.com/vi/#{record.ytb_video_id.value}/0.jpg" t-att-alt="record.name.value" width="100" height="100" class="o_attachment_image"/>
                                        </div>
                                        <div t-else="" class="o_url_image fa fa-link fa-3x text-muted" aria-label="Image is a link"/>
                                    </div>
                                    <img t-elif="webimage" t-attf-src="/web/image/#{record.attachment_id.raw_value}" width="100" height="100" t-att-alt="record.name.value" class="o_attachment_image"/>
                                    <div t-else="" class="o_image o_image_thumbnail" t-att-data-mimetype="record.mimetype.value"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_details_wrapper">
                                    <div t-att-title="record.name.raw_value" class="o_kanban_record_title">
                                        <div class="label-limit-char"><field name="name"/></div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <t t-if="record.type.raw_value == 'url'">
                                            <span class="o_document_url document_url_inline">
                                                <i class="fa fa-globe" aria-label="Document url"/>
                                                <field name="url" widget="url"/>
                                            </span>
                                        </t>
                                        <samp t-else="" class="text-muted"></samp>
                                        <field name="tag_ids" widget="many2many_tags"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <time class="oe_kanban_bottom_left">
                                            <field name="create_date" widget="date"/>
                                        </time>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                            <field name="owner_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="document_document_view_form" model="ir.ui.view">
        <field name="name">document.document.view.form</field>
        <field name="model">document.document</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="url" widget="url" attrs="{'invisible': [('type', '!=', 'url')]}"/>
                        <field name="mimetype"/>
                        <field name="owner_id"/>
                        <field name="workspace_id"/>
                        <field name="type" invisible="1"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="action_ids" widget="document_action_many2many_tags"/>
                        <field name="datas" widget="flexible_binary" attrs="{'invisible': [('type', '!=', 'binary')]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                	<field name="message_follower_ids"/>
                	<field name="activity_ids"/>
                	<field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="document_document_add_link_view_form" model="ir.ui.view">
        <field name="name">document.document.add.link.view.form</field>
        <field name="model">document.document</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Add A Link" class="btn btn-primary" special="save"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="document_document_view_search" model="ir.ui.view">
        <field name="name">document.document.view.search</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <search string="Documents">
                <field name="name" />
                <field name="tag_ids"/>
                <field name="mimetype"/>
                <field name="owner_id"/>
                <field name="create_uid" string="Created by"/>
                <filter name="ftr_my_document" string="My Documents" domain="[('owner_id','=',uid)]"/>
                <filter name="ftr_file" string="File" domain="[('type','=','binary')]"/>
                <filter name="ftr_url" string="URL" domain="[('type','=','url')]"/>
                <separator />
                <filter name="ftr_archived" string="Archived" domain="[('active','=',False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Owner" name="grp_owner_id" domain="[]" context="{'group_by':'owner_id'}" />
                </group>
                <searchpanel>
                    <field name="workspace_id" expand="1" limit="0"/>
                    <field name="tag_ids" select="multi" icon="fa-tag" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="document_document_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">document.document</field>
        <field name="view_mode">kanban,tree</field>
    </record>

    <record id="document_document_add_link_action" model="ir.actions.act_window">
        <field name="name">Add a Link</field>
        <field name="res_model">document.document</field>
        <field name="view_mode">form</field>
        <field name="context">{'form_view_ref': 'viin_document.document_document_add_link_view_form'}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="document_document_menu" parent="document_menu_root" action="document_document_action" sequence="10"/>

</odoo>
