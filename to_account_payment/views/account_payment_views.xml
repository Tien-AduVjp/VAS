<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="viin_payment_mediate.view_account_payment_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='company_id']" position="after">
        		<field name="suggest_lines" attrs="{'invisible': [('payment_type', 'not in', ('outbound','inbound'))]}"/>
        		<field name="manual_reconcile" invisible="1"/>
        	</xpath>
            <xpath expr="//notebook" position="inside">
     			<group name="account_payment_line_ids" colspan="4"
     				string="Payment Details"
     				attrs="{'invisible': [('payment_type', 'not in', ('outbound','inbound'))]}">
                    <field name="account_payment_line_ids"
                           options="{'no_create_edit': True}" nolabel="1"
                           mode="tree">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name" widget="section_and_note_text"/>
                            <field name="account_id" optional="show"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="move_line_ids" invisible="1"/>
                            <field name="amount_suggested" invisible="1"/>
                        </tree>
                    </field>
              	</group>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="after">
            	<button name="%(viin_account_reconciliation.action_manual_reconciliation)d" string="Reconciliation" type="action" 
            			context="{
            				'partner_ids': [partner_id],
            				'mode': 'default',
            				'company_ids': [company_id]
            			}"
            			class="oe_highlight" attrs="{'invisible': [('manual_reconcile', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='destination_account_id']" position="attributes">
            	<attribute name="attrs">{
            		'readonly': ['|', ('state', '!=', 'draft'), ('is_internal_transfer', '=', True)],
            		'invisible': [('suggest_lines', '=', True)]
            	}</attribute>
            </xpath>
            <xpath expr="//notebook" position="before">
            	<div class="alert alert-info border-0 rounded-0" role="alert">
               		You can add other destination accounts into Payment Details if you don't find it on Destination Account field.
               	</div>
            </xpath>
        </field>
    </record>
</odoo>
