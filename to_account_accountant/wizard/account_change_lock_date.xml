<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_change_lock_date_view_form" model="ir.ui.view">
            <field name="name">account.change.lock.date.view.form</field>
            <field name="model">account.change.lock.date</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    	<group>
                    		<group>
                    			<field name="period_lock_date"/>
                    			<field name="fiscalyear_lock_date"/>
                    		</group>
                    		<group>
                    			<field name="tax_lock_date"/>
                    		</group>
                    	</group>
                    </sheet>
                    <footer>
                        <button string="Lock" name="change_lock_date" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="account_change_lock_date_action" model="ir.actions.act_window">
            <field name="name">Lock your Fiscal Period</field>
            <field name="res_model">account.change.lock.date</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_change_lock_date_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_action_change_lock_date"
            name="Lock Dates"
            action="account_change_lock_date_action"
            parent="account.menu_finance_entries_actions"
            sequence="60"
            groups="account.group_account_manager"/>
    </data>
</odoo>
