<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.affiliate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="to_affiliate.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='affiliate-management']" position="after">
                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('turn_off_affiliate_page_warning', '=', True)]}">
                    <p>
                        You need to go to <a href="affiliate-program-introduction" class="alert-link">the website</a>
                        and edit the content of the affiliate program introduction page, then publish the page.
                    </p>
                    <field name="turn_off_affiliate_page_warning"/>
                    <label for="turn_off_affiliate_page_warning" string="Don't show again"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
