<odoo>
    <record id="utm_medium_view_tree" model="ir.ui.view">
        <field name="name">utm.medium.view.tree.inherit.affiliate</field>
        <field name="model">utm.medium</field>
        <field name="inherit_id" ref="utm.utm_medium_view_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="available_for_affiliate_portal" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="utm_medium_view_form" model="ir.ui.view">
        <field name="name">utm.medium.view.form.inherit.affiliate</field>
        <field name="model">utm.medium</field>
        <field name="inherit_id" ref="utm.utm_medium_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="available_for_affiliate_portal" />
            </xpath>
        </field>
    </record>
</odoo>
