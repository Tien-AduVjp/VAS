<odoo>
    <record id="utm_source_view_tree" model="ir.ui.view">
        <field name="name">utm.source.view.tree.inherit.affiliate</field>
        <field name="model">utm.source</field>
        <field name="inherit_id" ref="utm.utm_source_view_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="available_for_affiliate_portal" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="utm_source_view_form" model="ir.ui.view">
        <field name="name">utm.source.view.form.inherit.affiliate</field>
        <field name="model">utm.source</field>
        <field name="inherit_id" ref="utm.utm_source_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="available_for_affiliate_portal" />
            </xpath>
        </field>
    </record>
</odoo>
