<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		 <record id="hr_employee_seniority_personal" model="ir.rule">
            <field name="name">Personal Employee Seniority</field>
            <field name="model_id" ref="model_hr_employee_seniority" />
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups"
                eval="[(4, ref('base.group_user'))]" />
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

		<record id="hr_employee_seniority_employee_manager" model="ir.rule">
            <field name="name">Officer and subordinates Income Tax Analysis</field>
            <field name="model_id" ref="model_hr_employee_seniority" />
            <field name="domain_force">['|',('employee_id.parent_id.user_id', '=', user.id),('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups"
                eval="[(4, ref('base.group_user'))]" />
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

		<record id="hr_employee_seniority_hr_officer" model="ir.rule">
            <field name="name">All Employee Seniority - HR Officer</field>
            <field name="model_id" ref="model_hr_employee_seniority" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"
                eval="[(4, ref('hr.group_hr_user'))]" />
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

		<record id="hr_employee_seniority_comp_rule" model="ir.rule">
			<field name="name">Employee Seniority multi-company</field>
			<field name="model_id" ref="model_hr_employee_seniority" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>
	</data>
</odoo>
