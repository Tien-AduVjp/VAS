<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='state']" position="before">
					<button name="action_view_odoo_module_versions"
						type="object"
						attrs="{'invisible': [('odoo_module_versions_count','=',0)]}"
						groups="to_odoo_module.odoo_module_user"
						string="View Sold Modules">
						<field name="odoo_module_versions_count" invisible="1" />
					</button>
				</xpath>
				<xpath expr="//field[@name='invoice_cash_rounding_id']"
					position="after">
					<field name="auto_load_app_dependencies" />
				</xpath>
				<xpath
					expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
					position="after">
					<field name="odoo_app_dependency" readonly="1" force_save="1"
						string="Dependency" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>