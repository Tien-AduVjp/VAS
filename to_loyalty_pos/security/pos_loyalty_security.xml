<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="point_of_sale.group_pos_user" model="res.groups">
			<field name="implied_ids" eval="[(4, ref('to_loyalty.group_loyalty_user'))]" />
		</record>

		<record id="point_of_sale.group_pos_manager" model="res.groups">
			<field name="implied_ids" eval="[(4, ref('to_loyalty.group_loyalty_manager'))]" />
		</record>
	</data>
	<data>
		<record id="loyalty_point_see_all" model="ir.rule">
			<field name="name">Read and create loyalty point</field>
			<field ref="model_loyalty_point" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]" />
			<field eval="1" name="perm_read" />
			<field eval="1" name="perm_create" />
		</record>
		<record id="loyalty_point_rule" model="ir.rule">
			<field name="name">Read loyalty rule</field>
			<field ref="model_loyalty_rule" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]" />
			<field eval="1" name="perm_read" />
		</record>
		<record id="loyalty_points_report_see_all" model="ir.rule">
			<field name="name">Read and create loyalty report</field>
			<field ref="model_loyalty_points_report" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]" />
			<field eval="1" name="perm_read" />
		</record>
	</data>
</odoo>
