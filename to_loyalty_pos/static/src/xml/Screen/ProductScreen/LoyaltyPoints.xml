<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="LoyaltyPoints" owl="1">
        <div class='loyalty-points' t-att-class="{'negative': props.isNegative}">
            <div class='loyalty-points-title'>Points</div>
            <t t-if='props.points_won'>
                <div class="loyalty-points-won">
                    <span class='value'>+<t t-esc='props.points_won'/></span>
                </div>
            </t>
            <t t-if='props.points_spent'>
                <div class="loyalty-points-spent">
                    <span class='value'><t t-esc='props.points_spent'/></span>
                </div>
            </t>
            <div class='loyalty-points-total'>
                <span class='value'><t t-esc='props.points_total' /></span>
            </div>
        </div>
    </t>
</templates>
