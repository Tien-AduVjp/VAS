<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('before-footer')]" position="after">
            <t t-if='loyalty'>
                <div class='loyalty' value-decimals='2' value-autoint='on'>
                    <div>--------------------------------</div>
                    <br/>
                    <div size='double-height'><t t-esc='loyalty.name'/></div>
                    <br />
                    <div><t t-esc='client' /></div>
                    <br/>
                    <t t-if='points_won'>
                        <line><left>Points Won: </left><right><value><t t-esc='points_won' /></value></right></line>
                        <br />
                    </t>
                    <t t-if='points_spent'>
                        <line><left>Points Spent: </left><right><value><t t-esc='points_spent' /></value></right></line>
                        <br />
                    </t>
                    <t t-if='points_total'>
                        <line><left>Total Points: </left><right><value><t t-esc='points_total' /></value></right></line>
                        <br />
                    </t>
                    <br />
                </div>
            </t>
        </xpath>
    </t>
</templates>
