<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">pos.order.form.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='extra']" position="inside">
                    <group name="loyalty" string="Loyalty Programs">
                        <field name="loyalty_points" />
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_loyalty_rule_form_inherit" model="ir.ui.view">
            <field name="name">loyalty.rule.form.inherit</field>
            <field name="model">loyalty.rule</field>
            <field name="inherit_id" ref="to_loyalty.view_loyalty_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                	<field name="pos_category_id"
							attrs="{ 'invisible':[('rule_type','!=','pos_category')], 'required':[('rule_type','==','pos_category')]}" />
                </xpath>
            </field>
        </record>


</odoo>
