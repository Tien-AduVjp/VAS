<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

        <record id="view_partner_form" model="ir.ui.view">
	        <field name="name">res.partner.view.form.inherit.partner_nationality</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_partner_form" />
	        <field name="arch" type="xml">
            	<field name="vat" position="before">
            		<field name="nationality_id" options="{'no_create': True, 'no_open': True}"/>
            	</field>
	        </field>
        </record>

        <record id="view_res_partner_filter" model="ir.ui.view">
	        <field name="name">res.partner.view.search.inherit.partner_nationality</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_res_partner_filter" />
	        <field name="arch" type="xml">
            	<field name="category_id" position="after">
            		<field name="nationality_id"/>
            	</field>
            	<filter name="salesperson" position="after">
            		<filter name="nationality" string="Nationality" context="{'group_by': 'nationality_id'}"/>
            	</filter>
	        </field>
        </record>

	</data>
</odoo>
