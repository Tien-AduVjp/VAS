<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_routing_view_form" model="ir.ui.view">
        <field name="name">mrp.routing.form.inherit.plm</field>
        <field name="inherit_id" ref="mrp.mrp_routing_form_view"/>
        <field name="model">mrp.routing</field>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="version"/>
            </field>
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="%(mrp_eco_action_routing)d" type="action" icon="fa-wrench">
                    <field string="ECOs" name="eco_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
    
    <menuitem id="menu_mrp_plm_routings" name="Routings" parent="master_data_menu"
        action="mrp.mrp_routing_action" groups="mrp.group_mrp_routings" sequence="15"/>
</odoo>
