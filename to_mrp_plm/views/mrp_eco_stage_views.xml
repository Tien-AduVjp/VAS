<odoo>
    <record id="mrp_eco_stage_view_tree" model="ir.ui.view">
        <field name="name">mrp.eco.stage.view.tree</field>
        <field name="model">mrp.eco.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type_ids" widget="many2many_tags"/>
                <field name="approval_template_ids" string="Approval Roles" widget="many2many_tags"/>
                <field name="is_blocking"/>
                <field name="folded"/>
                <field name="is_final_stage"/>
            </tree>
        </field>
    </record>

    <record id="mrp_eco_stage_view_form" model="ir.ui.view">
        <field name="name">mrp.eco.stage.view.form</field>
        <field name="model">mrp.eco.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type_ids" widget="many2many_tags"/>
                            <field name="approval_roles"/>
                        </group>
                        <group>
                            <field name="folded"/>
                            <field name="allow_apply_change" />
                            <field name="is_final_stage"/>
                        </group>
                    </group>
                    <h2>Approvals</h2>
                    <field name="approval_template_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="approval_type"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mrp_eco_stage_action" model="ir.actions.act_window">
        <field name="name">ECO Stages</field>
        <field name="res_model">mrp.eco.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
              Define the ECO stages that will be used in the Engineering Change Orders
            </p>
        </field>
    </record>

    <menuitem id="mrp_eco_stage_menu" name="ECO Stages" parent="configuration_menu"
    	action="mrp_eco_stage_action" sequence="30"/>
</odoo>
