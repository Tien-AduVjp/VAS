<odoo noupdate="1">
    <!-- Eco type by default -->
    <record id="eco_type0" model="mrp.eco.type">
        <field name="name">New Product Introduction</field>
    </record>

    <!-- ECO Stage records -->
    <record id="eco_stage_new" model="mrp.eco.stage">
        <field name="name">New</field>
        <field name="type_ids" eval="[(4, ref('eco_type0'))]"/>
        <field name="folded" eval="False"/>
        <field name="sequence">0</field>
    </record>
    <record id="eco_stage_progress" model="mrp.eco.stage">
        <field name="name">In Progress</field>
        <field name="type_ids" eval="[(4, ref('eco_type0'))]"/>
        <field name="folded" eval="False"/>
        <field name="sequence">1</field>
    </record>
    <record id="eco_stage_validated" model="mrp.eco.stage">
        <field name="name">Validated</field>
        <field name="type_ids" eval="[(4, ref('eco_type0'))]"/>
        <field name="folded" eval="False"/>
        <field name="allow_apply_change" eval="True" />
        <field name="sequence">2</field>
    </record>
    <record id="eco_stage_effective" model="mrp.eco.stage">
        <field name="name">Effective</field>
        <field name="type_ids" eval="[(4, ref('eco_type0'))]"/>
        <field name="folded" eval="True"/>
        <field name="is_final_stage" eval="True"/>
        <field name="sequence">3</field>
    </record>
    <record id="eco_stage_refused" model="mrp.eco.stage">
        <field name="name">Refused</field>
        <field name="type_ids" eval="[(4, ref('eco_type0'))]"/>
        <field name="folded" eval="True"/>
        <field name="sequence">4</field>
    </record>

    <!-- ECO sequence -->
    <record id="seq_eco" model="ir.sequence">
        <field name="name">Engineering Change Order</field>
        <field name="code">mrp.eco</field>
        <field name="prefix">ECO</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>
