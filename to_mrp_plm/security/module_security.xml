<odoo>

    <record id="module_category_plm" model="ir.module.category">
        <field name="name">PLM</field>
        <field name="description">Manage your product's lifecycles management.</field>
        <field name="sequence">5</field>
    </record>

    <record id="group_plm_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_plm"/>
        <field name="implied_ids" eval="[(4, ref('mrp.group_mrp_user'))]"/>
        <field name="comment">Use products lifecycle management</field>
    </record>

    <record id="group_plm_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_plm"/>
        <field name="implied_ids" eval="[(4, ref('to_mrp_plm.group_plm_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Manage products lifecycle management</field>
    </record>

</odoo>
